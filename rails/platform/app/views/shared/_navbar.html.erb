<nav class="bg-white shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <%= link_to "sunyutech", root_path, class: "text-xl font-semibold text-gray-900" %>
        <div class="hidden sm:ml-6 sm:flex sm:space-x-4">
          <% if current_employee.can_access?(:dashboard) %>
            <%= link_to "ダッシュボード", root_path,
                class: "px-3 py-2 text-sm font-medium #{current_page?(root_path) ? 'text-blue-600' : 'text-gray-500 hover:text-gray-700'}" %>
          <% end %>
          <% if current_employee.admin? || current_employee.management? %>
            <%= link_to "経営", management_dashboard_path,
                class: "px-3 py-2 text-sm font-medium #{controller_name == 'management_dashboard' ? 'text-blue-600' : 'text-gray-500 hover:text-gray-700'}" %>
          <% end %>
          <% if current_employee.can_access?(:projects) %>
            <%= link_to "案件", projects_path,
                class: "px-3 py-2 text-sm font-medium #{controller_name == 'projects' ? 'text-blue-600' : 'text-gray-500 hover:text-gray-700'}" %>
            <%= link_to "現場カレンダー", schedule_path,
                class: "px-3 py-2 text-sm font-medium #{controller_name == 'schedule' ? 'text-blue-600' : 'text-gray-500 hover:text-gray-700'}" %>
          <% end %>
          <% if current_employee.can_access?(:daily_reports) %>
            <%= link_to "日報", all_daily_reports_path,
                class: "px-3 py-2 text-sm font-medium #{controller_name.in?(%w[all_daily_reports daily_reports external_daily_reports]) ? 'text-blue-600' : 'text-gray-500 hover:text-gray-700'}" %>
            <%= link_to "勤怠", attendance_sheets_path,
                class: "px-3 py-2 text-sm font-medium #{controller_name == 'attendance_sheets' ? 'text-blue-600' : 'text-gray-500 hover:text-gray-700'}" %>
          <% end %>
          <% if current_employee.can_access?(:invoices) %>
            <%= link_to "請求", all_invoices_path,
                class: "px-3 py-2 text-sm font-medium #{controller_name == 'all_invoices' ? 'text-blue-600' : 'text-gray-500 hover:text-gray-700'}" %>
          <% end %>
          <% if current_employee.can_access?(:offsets) %>
            <%= link_to "相殺", offsets_path,
                class: "px-3 py-2 text-sm font-medium #{controller_name == 'offsets' ? 'text-blue-600' : 'text-gray-500 hover:text-gray-700'}" %>
          <% end %>
          <% if current_employee.can_access?(:safety_documents) %>
            <%= link_to "安全書類", safety_documents_path,
                class: "px-3 py-2 text-sm font-medium #{controller_name == 'safety_documents' ? 'text-blue-600' : 'text-gray-500 hover:text-gray-700'}" %>
          <% end %>
          <% if current_employee.can_access?(:master) %>
            <div class="relative" data-controller="dropdown">
              <button type="button" data-action="click->dropdown#toggle" class="px-3 py-2 text-sm font-medium <%= controller_path.start_with?('master/') ? 'text-blue-600' : 'text-gray-500 hover:text-gray-700' %> inline-flex items-center">
                マスター
                <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div data-dropdown-target="menu" class="hidden absolute left-0 mt-2 w-48 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-50">
                <div class="py-1">
                  <%= link_to "顧客", master_clients_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                  <%= link_to "協力会社", master_partners_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                  <%= link_to "社員", master_employees_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="flex items-center space-x-4">
        <span class="text-sm text-gray-600">
          <%= current_employee.name %> (<%= current_employee.role %>)
        </span>
        <%= button_to "ログアウト", destroy_employee_session_path, method: :delete,
            class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      </div>
    </div>
  </div>
</nav>
