<%# サイドバー（折りたたみ対応） %>
<aside id="sidebar"
       class="fixed inset-y-0 left-0 z-30 w-64 bg-gray-900 transform transition-all duration-300 ease-in-out -translate-x-full lg:translate-x-0 lg:static lg:inset-auto"
       data-sidebar-target="sidebar">

  <!-- ロゴ・ヘッダー -->
  <div class="flex items-center justify-between h-16 lg:h-14 px-3 bg-gray-800">
    <%= link_to root_path, class: "flex items-center overflow-hidden" do %>
      <%= image_tag "sanyu_logo.png", class: "h-10 w-auto flex-shrink-0", alt: "SanyuTech" %>
    <% end %>
    <!-- モバイル用閉じるボタン -->
    <button type="button" data-action="click->sidebar#close" class="lg:hidden text-gray-400 hover:text-white hover:bg-gray-700 p-3 -m-1 rounded-lg active:bg-gray-600 touch-manipulation">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
    <!-- PC用折りたたみボタン -->
    <button type="button" data-action="click->sidebar#toggle" class="hidden lg:block text-gray-400 hover:text-white p-1" title="サイドバーを折りたたむ">
      <svg class="w-5 h-5" data-sidebar-target="collapseIcon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path>
      </svg>
    </button>
  </div>

  <!-- ナビゲーション -->
  <nav class="mt-2 px-2 space-y-1 lg:space-y-0.5 overflow-y-auto scrollbar-thin" style="max-height: calc(100vh - 3.5rem);">
    <!-- ダッシュボード -->
    <%= link_to root_path,
        class: "flex items-center px-4 py-3.5 lg:px-3 lg:py-2.5 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'dashboard' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
        title: "ダッシュボード" do %>
      <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
      </svg>
      <span class="ml-3" data-sidebar-target="text">ダッシュボード</span>
    <% end %>

    <% if current_employee.can_access?(:management_dashboard) %>
      <%= link_to management_dashboard_path,
          class: "flex items-center px-4 py-3.5 lg:px-3 lg:py-2.5 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'management_dashboard' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "経営ダッシュボード" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">経営</span>
      <% end %>

      <%= link_to monthly_profit_losses_path,
          class: "flex items-center px-4 py-3.5 lg:px-3 lg:py-2.5 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'monthly_profit_losses' || controller_name == 'monthly_fixed_costs' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "月次損益" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">月次損益</span>
      <% end %>
    <% end %>

    <!-- 区切り線 -->
    <div class="my-2 border-t border-gray-700"></div>

    <!-- 案件管理 -->
    <% if current_employee.can_access?(:projects) %>
      <%= link_to projects_path,
          class: "flex items-center px-4 py-3.5 lg:px-3 lg:py-2.5 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'projects' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "案件一覧" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">案件</span>
      <% end %>
    <% end %>

    <!-- スケジュール -->
    <% if current_employee.can_access?(:schedule) %>
      <%= link_to schedule_path,
          class: "flex items-center px-4 py-3.5 lg:px-3 lg:py-2.5 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'schedule' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "段取り表" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">段取り</span>
      <% end %>
    <% end %>

    <!-- 日報 -->
    <% if current_employee.can_access?(:daily_reports) %>
      <%= link_to all_daily_reports_path,
          class: "flex items-center px-4 py-3.5 lg:px-3 lg:py-2.5 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'all_daily_reports' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "日報一覧" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">日報</span>
      <% end %>
    <% end %>

    <!-- 勤怠表 -->
    <% if current_employee.can_access?(:attendance_sheets) %>
      <%= link_to attendance_sheets_path,
          class: "flex items-center px-4 py-3.5 lg:px-3 lg:py-2.5 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'attendance_sheets' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "勤怠表" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">勤怠</span>
      <% end %>
    <% end %>

    <!-- 経費報告（全員アクセス可） -->
    <%= link_to expense_reports_path,
        class: "flex items-center px-4 py-3.5 lg:px-3 lg:py-2.5 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'expense_reports' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
        title: "経費報告" do %>
      <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
      </svg>
      <span class="ml-3" data-sidebar-target="text">経費報告</span>
    <% end %>

    <!-- 有給申請（全員アクセス可） -->
    <% pending_leave_count = current_employee.admin? || current_employee.management? ? PaidLeaveRequest.pending.count : 0 %>
    <%= link_to paid_leave_requests_path,
        class: "flex items-center px-4 py-3.5 lg:px-3 lg:py-2.5 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'paid_leave_requests' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
        title: "有給申請" do %>
      <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <span class="ml-3 flex items-center" data-sidebar-target="text">
        有給申請
        <% if pending_leave_count > 0 %>
          <span class="ml-2 inline-flex items-center justify-center px-2 py-0.5 text-xs font-bold leading-none text-white bg-red-600 rounded-full">
            <%= pending_leave_count %>
          </span>
        <% end %>
      </span>
    <% end %>

    <!-- 区切り線 -->
    <div class="my-2 border-t border-gray-700"></div>

    <!-- 経理 -->
    <% if current_employee.can_access?(:accounting) %>
      <div class="px-4 lg:px-3 py-2 lg:py-1.5 text-sm lg:text-xs font-semibold text-gray-500 uppercase tracking-wider" data-sidebar-target="text">経理</div>

      <% current_date = Date.current %>
      <%= link_to monthly_income_statement_path(year: current_date.year, month: current_date.month),
          class: "flex items-center px-4 py-3 lg:px-3 lg:py-2 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'monthly_income_statements' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "月次損益計算書" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">損益計算書</span>
      <% end %>

      <%= link_to monthly_progresses_path(year: current_date.year, month: current_date.month),
          class: "flex items-center px-4 py-3 lg:px-3 lg:py-2 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'monthly_progresses' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "出来高入力" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">出来高入力</span>
      <% end %>

      <%= link_to monthly_admin_expenses_path(year: current_date.year, month: current_date.month),
          class: "flex items-center px-4 py-3 lg:px-3 lg:py-2 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'monthly_admin_expenses' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "販管費入力" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">販管費</span>
      <% end %>

      <%= link_to monthly_salaries_path(year: current_date.year, month: current_date.month),
          class: "flex items-center px-4 py-3 lg:px-3 lg:py-2 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'monthly_salaries' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "確定給与" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">確定給与</span>
      <% end %>

      <%= link_to monthly_outsourcing_costs_path(year: current_date.year, month: current_date.month),
          class: "flex items-center px-4 py-3 lg:px-3 lg:py-2 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'monthly_outsourcing_costs' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "確定外注費" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">確定外注費</span>
      <% end %>

      <%= link_to provisional_expenses_path,
          class: "flex items-center px-4 py-3 lg:px-3 lg:py-2 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'provisional_expenses' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "仮経費確定" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">仮経費確定</span>
      <% end %>

      <%= link_to accounting_expenses_path,
          class: "flex items-center px-4 py-3 lg:px-3 lg:py-2 text-base lg:text-sm transition-colors rounded-lg #{controller_path == 'accounting/expenses' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "経費処理（freee/MF連携）" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">経費処理</span>
      <% end %>

      <%= link_to accounting_reimbursements_path,
          class: "flex items-center px-4 py-3 lg:px-3 lg:py-2 text-base lg:text-sm transition-colors rounded-lg #{controller_path == 'accounting/reimbursements' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "立替精算" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">立替精算</span>
      <% end %>
    <% end %>

    <!-- 資金繰り -->
    <% if current_employee.can_access?(:cash_flow) %>
      <div class="my-2 border-t border-gray-700"></div>
      <div class="px-4 lg:px-3 py-2 lg:py-1.5 text-sm lg:text-xs font-semibold text-gray-500 uppercase tracking-wider" data-sidebar-target="text">資金繰り</div>

      <%= link_to cash_flow_calendar_path,
          class: "flex items-center px-4 py-3 lg:px-3 lg:py-2 text-base lg:text-sm transition-colors rounded-lg #{controller_name == 'cash_flow_calendar' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "資金繰り表" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">資金繰り表</span>
      <% end %>

      <%= link_to master_payment_terms_path,
          class: "flex items-center px-4 py-3 lg:px-3 lg:py-2 text-base lg:text-sm transition-colors rounded-lg #{controller_path == 'master/payment_terms' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "支払サイトマスタ" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">支払サイト</span>
      <% end %>

      <%= link_to master_fixed_expense_schedules_path,
          class: "flex items-center px-4 py-3 lg:px-3 lg:py-2 text-base lg:text-sm transition-colors rounded-lg #{controller_path == 'master/fixed_expense_schedules' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}",
          title: "固定費スケジュール" do %>
        <svg class="w-6 h-6 lg:w-5 lg:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="ml-3" data-sidebar-target="text">固定費</span>
      <% end %>

      <!-- 区切り線 -->
      <div class="my-2 border-t border-gray-700"></div>
    <% end %>

    <!-- 請求 -->
    <% if current_employee.can_access?(:invoices) %>
      <%= link_to all_invoices_path,
