<div class="max-w-4xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">原価内訳テンプレート</h1>
    <%= link_to new_cost_breakdown_template_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      新規作成
    <% end %>
  </div>

  <% if @grouped_templates.any? %>
    <% @grouped_templates.each do |category, templates| %>
      <div class="bg-white shadow rounded-lg mb-6">
        <div class="bg-gray-100 px-4 py-3 rounded-t-lg">
          <h2 class="font-medium text-gray-800"><%= category || "その他" %></h2>
        </div>
        <div class="divide-y divide-gray-200">
          <% templates.each do |template| %>
            <div class="px-4 py-3 flex justify-between items-center">
              <div>
                <span class="font-medium text-gray-900"><%= template.name %></span>
                <span class="ml-2 text-sm text-gray-500">
                  (<%= template.unit %>
                  <% if template.default_unit_price.present? %>
                    / ¥<%= number_with_delimiter(template.default_unit_price.to_i) %>
                  <% end %>)
                </span>
                <% if template.is_shared %>
                  <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">共有</span>
                <% end %>
                <% if template.note.present? %>
                  <p class="text-sm text-gray-500 mt-1"><%= template.note %></p>
                <% end %>
              </div>
              <div class="flex items-center gap-2">
                <%= link_to edit_cost_breakdown_template_path(template), class: "text-blue-600 hover:text-blue-800" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                <% end %>
                <%= button_to cost_breakdown_template_path(template), method: :delete,
                    data: { turbo_confirm: "「#{template.name}」を削除しますか？" },
                    class: "text-red-600 hover:text-red-800" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white shadow rounded-lg p-6 text-center">
      <p class="text-gray-500">テンプレートがありません</p>
      <%= link_to "テンプレートを作成", new_cost_breakdown_template_path, class: "mt-4 inline-block text-blue-600 hover:text-blue-800" %>
    </div>
  <% end %>
</div>
