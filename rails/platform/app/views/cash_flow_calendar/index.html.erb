<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold">資金繰り表</h1>
      <p class="text-gray-500">日次の入出金予定と残高</p>
    </div>
    <div class="flex gap-2">
      <%= link_to "固定費設定", master_fixed_expense_schedules_path, class: "px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700" %>
      <%= link_to "支払サイト", master_payment_terms_path, class: "px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700" %>
    </div>
  </div>

  <!-- 月選択 -->
  <div class="bg-white rounded-lg shadow p-4 mb-6">
    <div class="flex flex-wrap gap-4 items-center justify-between">
      <div class="flex items-center gap-2">
        <%= link_to "< 前月", cash_flow_calendar_path(month: (@current_month - 1.month).strftime("%Y-%m")), class: "px-3 py-2 bg-gray-200 rounded hover:bg-gray-300" %>
        <span class="text-xl font-bold"><%= @current_month.strftime("%Y年%m月") %></span>
        <%= link_to "翌月 >", cash_flow_calendar_path(month: (@current_month + 1.month).strftime("%Y-%m")), class: "px-3 py-2 bg-gray-200 rounded hover:bg-gray-300" %>
      </div>
      <div class="flex gap-2">
        <%= link_to "今月", cash_flow_calendar_path, class: "px-3 py-2 bg-blue-100 text-blue-700 rounded hover:bg-blue-200" %>
      </div>
    </div>
  </div>

  <!-- サマリー -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500">月初残高</div>
      <div class="text-2xl font-bold"><%= number_with_delimiter(@opening_balance.to_i) %>円</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500">入金予定</div>
      <div class="text-2xl font-bold text-green-600">+<%= number_with_delimiter(@income_total.to_i) %>円</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500">出金予定</div>
      <div class="text-2xl font-bold text-red-600">-<%= number_with_delimiter(@expense_total.to_i) %>円</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500">月末残高予定</div>
      <% end_balance = @daily_balances.last&.dig(:balance) || @opening_balance %>
      <div class="text-2xl font-bold <%= end_balance >= 0 ? 'text-blue-600' : 'text-red-600' %>">
        <%= number_with_delimiter(end_balance.to_i) %>円
      </div>
    </div>
  </div>

  <!-- 資金繰り表（マトリクス） -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-3 py-3 text-left font-medium text-gray-500 sticky left-0 bg-gray-50 z-10">日付</th>
            <th class="px-3 py-3 text-right font-medium text-gray-500">前日残高</th>
            <th class="px-3 py-3 text-right font-medium text-green-600 bg-green-50">入金</th>
            <th class="px-3 py-3 text-right font-medium text-red-600 bg-red-50">外注費</th>
            <th class="px-3 py-3 text-right font-medium text-red-600 bg-red-50">給与</th>
            <th class="px-3 py-3 text-right font-medium text-red-600 bg-red-50">社保</th>
            <th class="px-3 py-3 text-right font-medium text-red-600 bg-red-50">その他</th>
            <th class="px-3 py-3 text-right font-medium text-blue-600 bg-blue-50">残高</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% prev_balance = @opening_balance %>
          <% @daily_balances.each do |day_data| %>
            <% date = day_data[:date] %>
            <% day_entries = @entries_by_date[date] || [] %>
            <% has_entries = day_entries.any? %>
            <% weekend = date.saturday? || date.sunday? %>
            <% holiday = @holidays[date] %>
            <% is_holiday = weekend || holiday.present? %>
            <tr class="<%= is_holiday ? 'bg-gray-50' : '' %> hover:bg-yellow-50">
              <td class="px-3 py-2 sticky left-0 <%= is_holiday ? 'bg-gray-50' : 'bg-white' %> z-10">
                <%= link_to cash_flow_date_path(date: date), class: "block #{date.sunday? || holiday.present? ? 'text-red-500' : date.saturday? ? 'text-blue-500' : ''} hover:underline", data: { turbo: false } do %>
                  <%= date.strftime("%m/%d") %>
                  <span class="text-xs">(<%= %w[日 月 火 水 木 金 土][date.wday] %>)</span>
                  <% if holiday.present? %>
                    <span class="ml-1 px-1 text-xs bg-red-100 text-red-600 rounded"><%= holiday.name %></span>
                  <% end %>
                <% end %>
              </td>
              <td class="px-3 py-2 text-right text-gray-500"><%= number_with_delimiter(prev_balance.to_i) %></td>
              <%
                # 入金（工事入金＋その他入金）
                income_entries = day_entries.select { |e| e.income? }
                income_total = income_entries.sum { |e| e.net_amount.to_i }
                income_all_confirmed = income_entries.any? && income_entries.all? { |e| e.status != 'expected' }

                # 外注費
                outsourcing_entries = day_entries.select { |e| e.category == "outsourcing" }
                outsourcing = outsourcing_entries.sum { |e| e.net_amount.to_i }
                outsourcing_confirmed = outsourcing_entries.any? && outsourcing_entries.all? { |e| e.status != 'expected' }

                # 給与
                salary_entries = day_entries.select { |e| e.category == "salary" }
                salary = salary_entries.sum { |e| e.net_amount.to_i }
                salary_confirmed = salary_entries.any? && salary_entries.all? { |e| e.status != 'expected' }

                # 社保
                social_entries = day_entries.select { |e| e.category == "social_insurance" }
                social = social_entries.sum { |e| e.net_amount.to_i }
                social_confirmed = social_entries.any? && social_entries.all? { |e| e.status != 'expected' }

                # その他出金
                other_entries = day_entries.select { |e| e.expense? && !%w[outsourcing salary social_insurance].include?(e.category) }
                other = other_entries.sum { |e| e.net_amount.to_i }
                other_confirmed = other_entries.any? && other_entries.all? { |e| e.status != 'expected' }
              %>
              <td class="px-3 py-2 text-right bg-green-50 <%= income_total > 0 ? 'font-medium' : 'text-gray-300' %> <%= income_total > 0 && !income_all_confirmed ? 'text-red-500' : 'text-green-600' %>">
                <%= income_total > 0 ? "+#{number_with_delimiter(income_total)}" : "-" %>
              </td>
              <td class="px-3 py-2 text-right bg-red-50 <%= outsourcing > 0 ? 'font-medium' : 'text-gray-300' %> <%= outsourcing > 0 && !outsourcing_confirmed ? 'text-red-500' : '' %>">
                <%= outsourcing > 0 ? "-#{number_with_delimiter(outsourcing)}" : "-" %>
              </td>
              <td class="px-3 py-2 text-right bg-red-50 <%= salary > 0 ? 'font-medium' : 'text-gray-300' %> <%= salary > 0 && !salary_confirmed ? 'text-red-500' : '' %>">
                <%= salary > 0 ? "-#{number_with_delimiter(salary)}" : "-" %>
              </td>
              <td class="px-3 py-2 text-right bg-red-50 <%= social > 0 ? 'font-medium' : 'text-gray-300' %> <%= social > 0 && !social_confirmed ? 'text-red-500' : '' %>">
                <%= social > 0 ? "-#{number_with_delimiter(social)}" : "-" %>
              </td>
              <td class="px-3 py-2 text-right bg-red-50 <%= other > 0 ? 'font-medium' : 'text-gray-300' %> <%= other > 0 && !other_confirmed ? 'text-red-500' : '' %>">
                <%= other > 0 ? "-#{number_with_delimiter(other)}" : "-" %>
              </td>
              <td class="px-3 py-2 text-right bg-blue-50 font-medium <%= day_data[:balance] >= 0 ? 'text-blue-600' : 'text-red-600' %>">
                <%= number_with_delimiter(day_data[:balance].to_i) %>
              </td>
            </tr>
            <% prev_balance = day_data[:balance] %>
          <% end %>
        </tbody>
        <tfoot class="bg-gray-100 font-bold">
          <tr>
            <td class="px-3 py-3 sticky left-0 bg-gray-100 z-10">月計</td>
            <td class="px-3 py-3 text-right"></td>
            <td class="px-3 py-3 text-right text-green-600">+<%= number_with_delimiter(@income_total.to_i) %></td>
            <td class="px-3 py-3 text-right text-red-600">-<%= number_with_delimiter(@expense_by_category["outsourcing"]&.to_i || 0) %></td>
            <td class="px-3 py-3 text-right text-red-600">-<%= number_with_delimiter(@expense_by_category["salary"]&.to_i || 0) %></td>
            <td class="px-3 py-3 text-right text-red-600">-<%= number_with_delimiter(@expense_by_category["social_insurance"]&.to_i || 0) %></td>
            <% other_expense = @expense_by_category.except("outsourcing", "salary", "social_insurance").values.sum.to_i %>
            <td class="px-3 py-3 text-right text-red-600">-<%= number_with_delimiter(other_expense) %></td>
            <td class="px-3 py-3 text-right"></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>

  <!-- 凡例 -->
  <div class="mt-4 p-3 bg-gray-50 rounded text-sm text-gray-600 flex flex-wrap gap-4">
    <span><span class="text-red-500 font-medium">赤字</span>＝概算（未確定）</span>
    <span><span class="text-gray-900 font-medium">黒字</span>＝確定済</span>
    <span class="text-gray-400">※日付をクリックで詳細・編集</span>
  </div>

  <% if @entries.empty? %>
    <div class="mt-6 p-8 bg-blue-50 rounded-lg text-center">
      <p class="text-blue-700">この月の入出金予定はありません</p>
      <p class="text-sm text-blue-600 mt-2">請求書発行・外注費確定時に自動で登録されます</p>
    </div>
  <% end %>
</div>
