<%= form_with model: fixed_cost, url: (fixed_cost.persisted? ? monthly_fixed_cost_path(year: @year, month: @month, id: fixed_cost.id) : monthly_fixed_costs_path(year: @year, month: @month)), class: "space-y-6" do |f| %>
  <% if fixed_cost.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">入力エラーがあります</h3>
          <ul class="mt-2 list-disc list-inside text-sm text-red-700">
            <% fixed_cost.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white border border-gray-200 rounded-lg p-6 space-y-6">
    <div class="bg-gray-50 rounded-lg p-3 mb-4">
      <p class="text-sm text-gray-600">対象月: <strong><%= @year %>年<%= @month %>月</strong></p>
    </div>

    <div>
      <%= f.label :category, "カテゴリ", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :category, MonthlyFixedCost::CATEGORIES.map { |k, v| [v, k] },
          {},
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :name, "費目名", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name,
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
          placeholder: "例: ユニック車リース代" %>
    </div>

    <div>
      <%= f.label :amount, "金額", class: "block text-sm font-medium text-gray-700" %>
      <div class="relative rounded-md shadow-sm mt-1">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <span class="text-gray-500 sm:text-sm">¥</span>
        </div>
        <%= f.number_field :amount, step: 1000,
            class: "block w-full pl-8 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            placeholder: "50000" %>
      </div>
    </div>

    <div>
      <%= f.label :description, "備考（任意）", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :description, rows: 2,
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
          placeholder: "補足情報があれば入力" %>
    </div>
  </div>

  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to "キャンセル", monthly_fixed_costs_path(year: @year, month: @month),
        class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 cursor-pointer">
      <%= fixed_cost.persisted? ? "更新" : "追加" %>
    </button>
  </div>
<% end %>
