<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900"><%= @partner.name %></h1>
      <p class="text-sm text-gray-500">コード: <%= @partner.code %></p>
    </div>
    <div class="space-x-3">
      <%= link_to "編集", edit_master_partner_path(@partner), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <%= link_to "一覧に戻る", master_partners_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">基本情報</h2>
      <dl class="space-y-3">
        <div>
          <dt class="text-sm font-medium text-gray-500">仮社員</dt>
          <dd class="mt-1">
            <% if @partner.has_temporary_employees %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">あり</span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">なし</span>
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">締め日</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @partner.closing_day.present? ? "#{@partner.closing_day}日" : "-" %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">相殺ルール</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @partner.offset_rule || "-" %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">繰越残高</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @partner.carryover_balance.present? ? number_to_currency(@partner.carryover_balance, unit: "¥", precision: 0) : "-" %></dd>
        </div>
      </dl>
    </div>

    <div class="lg:col-span-2 bg-white shadow rounded-lg p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-medium text-gray-900">所属社員</h2>
        <%= link_to "社員追加", new_master_employee_path(partner_id: @partner.id), class: "text-sm text-blue-600 hover:text-blue-900" %>
      </div>
      <% if @employees.any? %>
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">コード</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">名前</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">種別</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">役割</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @employees.each do |employee| %>
              <tr>
                <td class="px-4 py-2 text-sm text-gray-900"><%= employee.code %></td>
                <td class="px-4 py-2 text-sm text-gray-900"><%= employee.name %></td>
                <td class="px-4 py-2 text-sm text-gray-500"><%= employment_type_label(employee.employment_type) %></td>
                <td class="px-4 py-2 text-sm text-gray-500"><%= role_label(employee.role) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-gray-500 text-sm">所属社員がいません</p>
      <% end %>
    </div>
  </div>
</div>
