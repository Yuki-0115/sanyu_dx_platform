<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold">支払サイト管理</h1>
      <p class="text-gray-500">顧客・協力会社の支払条件を設定</p>
    </div>
    <div class="flex gap-2">
      <%= link_to "資金繰り表", cash_flow_calendar_path, class: "px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700" %>
      <%= link_to "新規登録", new_master_payment_term_path, class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    </div>
  </div>

  <!-- 顧客の支払サイト -->
  <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
    <div class="px-4 py-3 border-b bg-green-50">
      <h2 class="font-bold text-green-800">顧客（入金条件）</h2>
    </div>
    <% if @client_terms.any? %>
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">顧客名</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">名称</th>
            <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">支払条件</th>
            <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">デフォルト</th>
            <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">操作</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @client_terms.each do |term| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 text-sm font-medium"><%= term.termable&.name %></td>
              <td class="px-4 py-3 text-sm"><%= term.name %></td>
              <td class="px-4 py-3 text-sm text-center"><%= term.display_name %></td>
              <td class="px-4 py-3 text-center">
                <% if term.is_default %>
                  <span class="px-2 py-1 text-xs rounded bg-blue-100 text-blue-800">デフォルト</span>
                <% end %>
              </td>
              <td class="px-4 py-3 text-center">
                <%= link_to "編集", edit_master_payment_term_path(term), class: "px-3 py-1 bg-gray-200 rounded hover:bg-gray-300 text-sm mr-1" %>
                <%= button_to "削除", master_payment_term_path(term), method: :delete,
                    class: "px-3 py-1 bg-red-100 text-red-600 rounded hover:bg-red-200 text-sm",
                    data: { turbo_confirm: "削除しますか？" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="p-8 text-center text-gray-500">
        顧客の支払サイトが登録されていません
      </div>
    <% end %>
  </div>

  <!-- 協力会社の支払サイト -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-4 py-3 border-b bg-red-50">
      <h2 class="font-bold text-red-800">協力会社（支払条件）</h2>
    </div>
    <% if @partner_terms.any? %>
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">協力会社名</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">名称</th>
            <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">支払条件</th>
            <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">デフォルト</th>
            <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">操作</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @partner_terms.each do |term| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 text-sm font-medium"><%= term.termable&.name %></td>
              <td class="px-4 py-3 text-sm"><%= term.name %></td>
              <td class="px-4 py-3 text-sm text-center"><%= term.display_name %></td>
              <td class="px-4 py-3 text-center">
                <% if term.is_default %>
                  <span class="px-2 py-1 text-xs rounded bg-blue-100 text-blue-800">デフォルト</span>
                <% end %>
              </td>
              <td class="px-4 py-3 text-center">
                <%= link_to "編集", edit_master_payment_term_path(term), class: "px-3 py-1 bg-gray-200 rounded hover:bg-gray-300 text-sm mr-1" %>
                <%= button_to "削除", master_payment_term_path(term), method: :delete,
                    class: "px-3 py-1 bg-red-100 text-red-600 rounded hover:bg-red-200 text-sm",
                    data: { turbo_confirm: "削除しますか？" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="p-8 text-center text-gray-500">
        協力会社の支払サイトが登録されていません
      </div>
    <% end %>
  </div>

  <!-- プリセット説明 -->
  <div class="mt-6 p-4 bg-blue-50 rounded-lg">
    <h3 class="font-bold text-blue-800 mb-2">よく使う支払サイト例</h3>
    <ul class="text-sm text-blue-700 space-y-1">
      <% PaymentTerm::PRESETS.each do |preset| %>
        <li>・<%= preset[:name] %></li>
      <% end %>
    </ul>
  </div>
</div>
