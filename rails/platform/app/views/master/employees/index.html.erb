<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">社員マスタ</h1>
    <%= link_to "新規登録", new_master_employee_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
  </div>

  <!-- フィルタータブ -->
  <div class="border-b border-gray-200 mb-6">
    <nav class="-mb-px flex space-x-8">
      <%= link_to "全て", master_employees_path,
          class: "#{params[:employment_type].blank? ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
      <%= link_to "正社員", master_employees_path(employment_type: "regular"),
          class: "#{params[:employment_type] == 'regular' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
      <%= link_to "仮社員", master_employees_path(employment_type: "temporary"),
          class: "#{params[:employment_type] == 'temporary' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
      <%= link_to "外注", master_employees_path(employment_type: "external"),
          class: "#{params[:employment_type] == 'external' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
    </nav>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">コード</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">名前</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">種別</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">役割</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">所属会社</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">メール</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @employees.each do |employee| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= employee.code %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= employee.name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= employment_type_badge_class(employee.employment_type) %>">
                <%= employment_type_label(employee.employment_type) %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= role_label(employee.role) %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= employee.partner&.name || "-" %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= employee.email.presence || "-" %></td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to "編集", edit_master_employee_path(employee), class: "text-blue-600 hover:text-blue-900 mr-3" %>
              <% if employee != current_employee %>
                <%= button_to "削除", master_employee_path(employee), method: :delete,
                    data: { turbo_confirm: "本当に削除しますか？" },
                    class: "text-red-600 hover:text-red-900" %>
              <% end %>
            </td>
          </tr>
        <% end %>
        <% if @employees.empty? %>
          <tr>
            <td colspan="7" class="px-6 py-8 text-center text-gray-500">社員が登録されていません</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
