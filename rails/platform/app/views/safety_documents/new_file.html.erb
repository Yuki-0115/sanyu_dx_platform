  <main class="max-w-2xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <h2 class="text-2xl font-bold text-gray-900 mb-2">ファイルアップロード</h2>
      <p class="text-gray-600 mb-6">
        フォルダ: <span class="font-medium"><%= @folder.name %></span>
      </p>

      <%= form_with model: @file, url: safety_folder_files_path(@folder), class: "space-y-6" do |f| %>
        <% if @file.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <ul class="list-disc list-inside text-sm text-red-700">
              <% @file.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="bg-white shadow rounded-lg p-6">
          <div class="space-y-4">
            <div>
              <%= f.label :name, "ファイル名（表示用）", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", required: true, placeholder: "例: 安全教育修了証一覧" %>
            </div>

            <div>
              <%= f.label :description, "説明・メモ（任意）", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_area :description, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "ファイルの説明" %>
            </div>

            <div>
              <%= f.label :attachments, "ファイル", class: "block text-sm font-medium text-gray-700" %>
              <%= f.file_field :attachments, multiple: true,
                  class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
              <p class="mt-1 text-xs text-gray-500">Excel、PDF、画像など複数ファイル選択可能</p>
            </div>
          </div>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "キャンセル", safety_document_path(@folder), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <%= f.submit "アップロード", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
