<div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <!-- ヘッダー -->
    <div class="flex flex-wrap justify-between items-center gap-4 mb-6">
      <div>
        <h2 class="text-2xl font-bold text-gray-900">安全書類</h2>
        <p class="text-gray-600">案件ごとの安全書類提出状況を確認・管理</p>
      </div>
      <div class="flex items-center gap-2">
        <!-- ビュー切替 -->
        <div class="bg-gray-100 rounded-lg p-1 flex">
          <%= link_to safety_documents_path(view: "projects"),
              class: "px-3 py-1.5 text-sm font-medium rounded-md #{@view_mode == 'projects' ? 'bg-white shadow text-gray-900' : 'text-gray-600 hover:text-gray-900'}" do %>
            案件別
          <% end %>
          <%= link_to safety_documents_path(view: "folders"),
              class: "px-3 py-1.5 text-sm font-medium rounded-md #{@view_mode == 'folders' ? 'bg-white shadow text-gray-900' : 'text-gray-600 hover:text-gray-900'}" do %>
            フォルダ
          <% end %>
        </div>
        <%= link_to new_folder_safety_documents_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z"></path>
          </svg>
          新規フォルダ
        <% end %>
      </div>
    </div>

    <% if @view_mode == "projects" %>
      <!-- 案件別ビュー -->
      <!-- フィルター -->
      <div class="bg-white shadow rounded-lg p-4 mb-6">
        <div class="flex flex-wrap items-center gap-4">
          <span class="text-sm font-medium text-gray-700">フィルター:</span>
          <div class="flex gap-2">
            <%= link_to safety_documents_path(view: "projects"),
                class: "px-3 py-1 text-sm rounded-full #{params[:filter].blank? ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
              すべて
            <% end %>
            <%= link_to safety_documents_path(view: "projects", filter: "incomplete"),
                class: "px-3 py-1 text-sm rounded-full #{params[:filter] == 'incomplete' ? 'bg-red-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
              未完了
            <% end %>
            <%= link_to safety_documents_path(view: "projects", filter: "complete"),
                class: "px-3 py-1 text-sm rounded-full #{params[:filter] == 'complete' ? 'bg-green-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
              完了
            <% end %>
          </div>
        </div>
      </div>

      <!-- 案件一覧 -->
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">案件</th>
                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">提出状況</th>
                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">進捗</th>
                <% SafetyFolder::REQUIRED_DOCUMENTS.each do |doc| %>
                  <th class="px-2 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider" title="<%= doc[:description] %>">
                    <span class="truncate block max-w-16"><%= doc[:name].truncate(6) %></span>
                  </th>
                <% end %>
                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @project_statuses.each do |ps| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-4">
                    <div class="flex items-center">
                      <div>
                        <div class="text-sm font-medium text-gray-900"><%= ps[:project].name %></div>
                        <div class="text-xs text-gray-500"><%= ps[:project].client&.name %></div>
                      </div>
                    </div>
                  </td>
                  <td class="px-4 py-4 text-center">
                    <span class="text-sm font-medium <%= ps[:rate] == 100 ? 'text-green-600' : ps[:rate] >= 50 ? 'text-yellow-600' : 'text-red-600' %>">
                      <%= ps[:submitted_count] %>/<%= ps[:total_count] %>
                    </span>
                  </td>
                  <td class="px-4 py-4">
                    <div class="flex items-center justify-center">
                      <div class="w-24 bg-gray-200 rounded-full h-2.5">
                        <div class="h-2.5 rounded-full <%= ps[:rate] == 100 ? 'bg-green-600' : ps[:rate] >= 50 ? 'bg-yellow-500' : 'bg-red-500' %>" style="width: <%= ps[:rate] %>%"></div>
                      </div>
                      <span class="ml-2 text-xs text-gray-500"><%= ps[:rate] %>%</span>
                    </div>
                  </td>
                  <% ps[:status].each do |doc_status| %>
                    <td class="px-2 py-4 text-center">
                      <% if doc_status[:submitted] && doc_status[:files_count] > 0 %>
                        <%= link_to safety_document_path(doc_status[:folder]), class: "inline-flex items-center justify-center" do %>
                          <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-green-100 text-green-600" title="<%= doc_status[:files_count] %>件のファイル">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                          </span>
                        <% end %>
                      <% elsif doc_status[:submitted] %>
                        <%= link_to safety_document_path(doc_status[:folder]), class: "inline-flex items-center justify-center" do %>
                          <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-yellow-100 text-yellow-600" title="フォルダあり（ファイルなし）">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                            </svg>
                          </span>
                        <% end %>
                      <% else %>
                        <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-gray-100 text-gray-400" title="未提出">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                          </svg>
                        </span>
                      <% end %>
                    </td>
                  <% end %>
                  <td class="px-4 py-4 text-center">
                    <%= link_to safety_documents_path(view: "folders", project_id: ps[:project].id),
                        class: "text-blue-600 hover:text-blue-800 text-sm" do %>
                      詳細 →
                    <% end %>
                  </td>
                </tr>
              <% end %>
              <% if @project_statuses.empty? %>
                <tr>
                  <td colspan="<%= 4 + SafetyFolder::REQUIRED_DOCUMENTS.size %>" class="px-4 py-8 text-center text-gray-500">
                    該当する案件がありません
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- 必要書類の凡例 -->
      <div class="mt-6 bg-white shadow rounded-lg p-4">
        <h3 class="text-sm font-medium text-gray-900 mb-3">必要安全書類一覧</h3>
        <div class="grid grid-cols-2 md:grid-cols-5 gap-2">
          <% SafetyFolder::REQUIRED_DOCUMENTS.each do |doc| %>
            <div class="text-xs text-gray-600" title="<%= doc[:description] %>">
              • <%= doc[:name] %>
            </div>
          <% end %>
        </div>
        <div class="mt-4 flex items-center gap-4 text-xs text-gray-500">
          <span class="flex items-center gap-1">
            <span class="inline-flex items-center justify-center w-4 h-4 rounded-full bg-green-100 text-green-600">
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
            </span>
            提出済み
          </span>
          <span class="flex items-center gap-1">
            <span class="inline-flex items-center justify-center w-4 h-4 rounded-full bg-yellow-100 text-yellow-600">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/></svg>
            </span>
            フォルダのみ
          </span>
          <span class="flex items-center gap-1">
            <span class="inline-flex items-center justify-center w-4 h-4 rounded-full bg-gray-100 text-gray-400">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
            </span>
            未提出
          </span>
        </div>
      </div>

    <% else %>
      <!-- フォルダ一覧モード -->
      <!-- 案件フィルター -->
      <div class="bg-white shadow rounded-lg p-4 mb-6">
        <div class="flex flex-wrap items-center gap-4">
          <label class="text-sm font-medium text-gray-700">案件で絞り込み:</label>
          <%= form_with url: safety_documents_path(view: "folders"), method: :get, local: true, class: "flex items-center gap-2" do %>
            <input type="hidden" name="view" value="folders">
            <%= select_tag :project_id,
                options_from_collection_for_select(Project.order(:name), :id, :name, params[:project_id]),
                include_blank: "全ての案件",
                onchange: "this.form.submit()",
                class: "rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" %>
          <% end %>
          <% if params[:project_id].present? %>
            <% project = Project.find_by(id: params[:project_id]) %>
            <% if project %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800">
                <%= project.name %>
                <%= link_to safety_documents_path(view: "folders"), class: "ml-2 text-blue-600 hover:text-blue-800" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                <% end %>
              </span>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- フォルダ一覧 -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        <% @folders.each do |folder| %>
          <%= link_to safety_document_path(folder), class: "bg-white rounded-lg shadow hover:shadow-md transition-shadow p-4 flex items-start space-x-3" do %>
            <div class="flex-shrink-0">
              <svg class="w-10 h-10 text-yellow-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M10 4H4a2 2 0 00-2 2v12a2 2 0 002 2h16a2 2 0 002-2V8a2 2 0 00-2-2h-8l-2-2z"></path>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-gray-900 truncate"><%= folder.name %></p>
              <p class="text-xs text-gray-500">
                <%= folder.files_count %>件のファイル
              </p>
              <% if folder.project.present? %>
                <p class="text-xs text-blue-600 mt-1 truncate"><%= folder.project.name %></p>
              <% end %>
            </div>
          <% end %>
        <% end %>

        <% if @folders.empty? %>
          <div class="col-span-full text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">フォルダがありません</h3>
            <p class="mt-1 text-sm text-gray-500">フォルダを作成して書類を整理しましょう</p>
            <%= link_to new_folder_safety_documents_path(project_id: params[:project_id]), class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
              新規フォルダ作成
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
