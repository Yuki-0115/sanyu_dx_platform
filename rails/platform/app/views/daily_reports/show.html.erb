  <div class="max-w-4xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <div class="flex justify-between items-center mb-6">
        <div>
          <h2 class="text-2xl font-bold text-gray-900">日報詳細</h2>
          <p class="text-gray-600">
            <%= link_to @project.name, project_path(@project), class: "text-blue-600 hover:underline" %>
            / <%= l(@daily_report.report_date) %>
          </p>
        </div>
        <div class="flex space-x-2">
          <%= link_to "編集", edit_project_daily_report_path(@project, @daily_report),
              class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <%= link_to "一覧", project_daily_reports_path(@project),
              class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      </div>

      <!-- 基本情報 -->
      <div class="bg-white shadow rounded-lg p-6 mb-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-medium text-gray-900">基本情報</h3>
          <span class="px-3 py-1 text-sm font-medium rounded-full <%= daily_report_status_class(@daily_report.status) %>">
            <%= daily_report_status_label(@daily_report.status) %>
          </span>
        </div>

        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">報告日</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= l(@daily_report.report_date) %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">職長</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @daily_report.foreman.name %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">天気</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @daily_report.weather.present? ? DailyReport::WEATHER_LABELS[@daily_report.weather] : "未入力" %>
            </dd>
          </div>
        </dl>

        <% if @daily_report.work_content.present? %>
          <div class="mt-4">
            <dt class="text-sm font-medium text-gray-500">作業内容</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= simple_format(@daily_report.work_content) %></dd>
          </div>
        <% end %>

        <% if @daily_report.notes.present? %>
          <div class="mt-4">
            <dt class="text-sm font-medium text-gray-500">備考</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= simple_format(@daily_report.notes) %></dd>
          </div>
        <% end %>
      </div>

      <!-- 原価情報 -->
      <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">原価情報</h3>

        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <% if @daily_report.materials_used.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">使用材料</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= simple_format(@daily_report.materials_used) %></dd>
            </div>
          <% end %>

          <% if @daily_report.machines_used.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">使用機械</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= simple_format(@daily_report.machines_used) %></dd>
            </div>
          <% end %>

          <% if @daily_report.labor_details.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">労務</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= simple_format(@daily_report.labor_details) %></dd>
            </div>
          <% end %>

          <% if @daily_report.outsourcing_details.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">外注</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= simple_format(@daily_report.outsourcing_details) %></dd>
            </div>
          <% end %>

          <% if @daily_report.transportation_cost.present? && @daily_report.transportation_cost > 0 %>
            <div>
              <dt class="text-sm font-medium text-gray-500">運搬費</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= number_to_currency(@daily_report.transportation_cost, unit: "¥", precision: 0) %></dd>
            </div>
          <% end %>

          <% if @daily_report.machinery_own_cost.present? && @daily_report.machinery_own_cost > 0 %>
            <div>
              <dt class="text-sm font-medium text-gray-500">機械（自社）</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= number_to_currency(@daily_report.machinery_own_cost, unit: "¥", precision: 0) %></dd>
            </div>
          <% end %>

          <% if @daily_report.machinery_rental_cost.present? && @daily_report.machinery_rental_cost > 0 %>
            <div>
              <dt class="text-sm font-medium text-gray-500">機械（レンタル）</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= number_to_currency(@daily_report.machinery_rental_cost, unit: "¥", precision: 0) %></dd>
            </div>
          <% end %>
        </dl>

        <% has_cost_info = @daily_report.materials_used.present? || @daily_report.machines_used.present? || @daily_report.labor_details.present? || @daily_report.outsourcing_details.present? || (@daily_report.transportation_cost.present? && @daily_report.transportation_cost > 0) || (@daily_report.machinery_own_cost.present? && @daily_report.machinery_own_cost > 0) || (@daily_report.machinery_rental_cost.present? && @daily_report.machinery_rental_cost > 0) %>
        <% unless has_cost_info %>
          <p class="text-sm text-gray-500">原価情報は入力されていません</p>
        <% end %>
      </div>

      <!-- カード経費（燃料・高速代） -->
      <% if @daily_report.has_fuel? || @daily_report.has_highway? %>
        <div class="bg-white shadow rounded-lg p-6 mb-6">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-medium text-gray-900">カード経費</h3>
            <% if @daily_report.has_provisional_card_expenses? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                未確定あり
              </span>
            <% end %>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
            <% if @daily_report.has_fuel? %>
              <!-- 燃料 -->
              <div class="p-4 rounded-lg <%= @daily_report.fuel_confirmed? ? 'bg-green-50 border border-green-200' : 'bg-amber-50 border border-amber-200' %>">
                <div class="flex justify-between items-start mb-2">
                  <h4 class="text-sm font-medium <%= @daily_report.fuel_confirmed? ? 'text-green-800' : 'text-amber-800' %>">
                    燃料（ガソリン）
                  </h4>
                  <% if @daily_report.fuel_confirmed? %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-700">
                      ✓ 確定済
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-amber-100 text-amber-700">
                      仮
                    </span>
                  <% end %>
                </div>
                <dl class="space-y-1 text-sm">
                  <div class="flex justify-between">
                    <dt class="text-gray-500">油種</dt>
                    <dd class="text-gray-900"><%= @daily_report.fuel_type_label %></dd>
                  </div>
                  <div class="flex justify-between">
                    <dt class="text-gray-500">給油量</dt>
                    <dd class="text-gray-900"><%= @daily_report.fuel_quantity %> L</dd>
                  </div>
                  <% if @daily_report.fuel_confirmed? %>
                    <div class="flex justify-between">
                      <dt class="text-gray-500">単価</dt>
                      <dd class="text-gray-900"><%= number_to_currency(@daily_report.fuel_unit_price, unit: "¥", precision: 0) %>/L</dd>
                    </div>
                    <div class="flex justify-between font-medium pt-1 border-t border-green-200">
                      <dt class="text-green-700">確定金額</dt>
                      <dd class="text-green-700"><%= number_to_currency(@daily_report.fuel_confirmed_amount, unit: "¥", precision: 0) %></dd>
                    </div>
                  <% else %>
                    <div class="flex justify-between font-medium pt-1 border-t border-amber-200">
                      <dt class="text-amber-700">仮金額</dt>
                      <dd class="text-amber-700"><%= number_to_currency(@daily_report.fuel_amount, unit: "¥", precision: 0) %></dd>
                    </div>
                  <% end %>
                </dl>
              </div>
            <% end %>

            <% if @daily_report.has_highway? %>
              <!-- 高速代 -->
              <div class="p-4 rounded-lg <%= @daily_report.highway_confirmed? ? 'bg-blue-50 border border-blue-200' : 'bg-amber-50 border border-amber-200' %>">
                <div class="flex justify-between items-start mb-2">
                  <h4 class="text-sm font-medium <%= @daily_report.highway_confirmed? ? 'text-blue-800' : 'text-amber-800' %>">
                    高速代（ETC）
                  </h4>
                  <% if @daily_report.highway_confirmed? %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-700">
                      ✓ 確定済
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-amber-100 text-amber-700">
                      仮
                    </span>
                  <% end %>
                </div>
                <dl class="space-y-1 text-sm">
                  <div class="flex justify-between">
                    <dt class="text-gray-500">使用回数</dt>
                    <dd class="text-gray-900"><%= @daily_report.highway_count %> 回</dd>
                  </div>
                  <% if @daily_report.highway_route.present? %>
                    <div class="flex justify-between">
                      <dt class="text-gray-500">経路</dt>
                      <dd class="text-gray-900"><%= @daily_report.highway_route %></dd>
                    </div>
                  <% end %>
                  <% if @daily_report.highway_confirmed? %>
                    <div class="flex justify-between font-medium pt-1 border-t border-blue-200">
                      <dt class="text-blue-700">確定金額</dt>
                      <dd class="text-blue-700"><%= number_to_currency(@daily_report.highway_confirmed_amount, unit: "¥", precision: 0) %></dd>
                    </div>
                  <% else %>
                    <div class="flex justify-between font-medium pt-1 border-t border-amber-200">
                      <dt class="text-amber-700">仮金額</dt>
                      <dd class="text-amber-700"><%= number_to_currency(@daily_report.highway_amount, unit: "¥", precision: 0) %></dd>
                    </div>
                  <% end %>
                </dl>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- 出面 -->
      <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">出面一覧</h3>

        <% present_attendances = @daily_report.attendances.reject { |a| a.attendance_type == 'absent' } %>
        <% if present_attendances.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">氏名</th>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">出勤区分</th>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">労働時間</th>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">走行距離</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% present_attendances.each do |attendance| %>
                  <tr>
                    <td class="px-4 py-3 text-sm text-gray-900">
                      <%= attendance.employee&.name || attendance.partner_worker_name || "不明" %>
                    </td>
                    <td class="px-4 py-3 text-sm">
                      <span class="px-2 py-1 text-xs font-medium rounded-full <%= attendance.attendance_type == 'full' ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                        <%= attendance.attendance_type == 'full' ? '全日' : '半日' %>
                      </span>
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-500">
                      <%= attendance.hours_worked ? "#{attendance.hours_worked}h" : "-" %>
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-500">
                      <%= attendance.travel_distance ? "#{attendance.travel_distance}km" : "-" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <p class="mt-4 text-sm text-gray-500">
            出勤者: <%= present_attendances.count %>名
            （全日: <%= present_attendances.count { |a| a.attendance_type == 'full' } %>名,
            半日: <%= present_attendances.count { |a| a.attendance_type == 'half' } %>名）
          </p>
        <% else %>
          <p class="text-gray-500">出面記録がありません</p>
        <% end %>
      </div>

      <!-- 経費・領収書 -->
      <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">経費・領収書</h3>

        <% if @daily_report.expenses.any? %>
          <div class="space-y-4">
            <% @daily_report.expenses.each do |expense| %>
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex justify-between items-start">
                  <div class="flex-1">
                    <div class="flex items-center space-x-2 mb-2">
                      <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
                        <%= expense_type_label(expense.expense_type) %>
                      </span>
                      <span class="px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800">
                        <%= expense_category_label(expense.category) %>
                      </span>
                      <% if expense.payment_method.present? %>
                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">
                          <%= expense_payment_method_label(expense.payment_method) %>
                        </span>
                      <% end %>
                    </div>
                    <p class="text-lg font-semibold text-gray-900"><%= number_to_currency(expense.amount, unit: "¥", precision: 0) %></p>
                    <% if expense.description.present? %>
                      <p class="text-sm text-gray-600 mt-1"><%= expense.description %></p>
                    <% end %>
                  </div>
                  <% if expense.receipt.attached? %>
                    <div class="ml-4 flex-shrink-0">
                      <% if expense.receipt.content_type.start_with?("image/") %>
                        <%= link_to rails_blob_path(expense.receipt, disposition: "inline"), target: "_blank", class: "block" do %>
                          <%= image_tag expense.receipt, class: "h-20 w-20 object-cover rounded shadow" %>
                        <% end %>
                      <% else %>
                        <%= link_to rails_blob_path(expense.receipt, disposition: "inline"), target: "_blank", class: "flex items-center text-blue-600 hover:text-blue-800" do %>
                          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                          </svg>
                          <span class="ml-1 text-sm"><%= expense.receipt.filename %></span>
                        <% end %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="mt-4 pt-4 border-t border-gray-200">
            <p class="text-sm font-medium text-gray-900">
              経費合計: <%= number_to_currency(@daily_report.expenses.sum(&:amount), unit: "¥", precision: 0) %>
            </p>
          </div>
        <% else %>
          <p class="text-gray-500">経費記録がありません</p>
        <% end %>
      </div>

      <% if @daily_report.status == "draft" %>
        <div class="flex justify-end">
          <%= button_to "日報を確定する", confirm_project_daily_report_path(@project, @daily_report),
              method: :post,
              data: { turbo_confirm: "この日報を確定しますか？" },
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
        </div>
      <% else %>
        <div class="bg-gray-50 rounded-lg p-4 text-sm text-gray-600">
          <div class="flex justify-between">
            <div>
              <% if @daily_report.confirmed_at %>
                <p>確定日時: <%= l(@daily_report.confirmed_at, format: :short) %></p>
              <% end %>
              <% if @daily_report.revised? && @daily_report.revised_at %>
                <p class="mt-1 text-blue-600">
                  修正日時: <%= l(@daily_report.revised_at, format: :short) %>
                  <% if @daily_report.revised_by %>
                    （修正者: <%= @daily_report.revised_by.name %>）
                  <% end %>
                </p>
              <% end %>
            </div>
            <% if @daily_report.finalized? %>
              <span class="text-xs text-gray-400">編集すると「修正済」として記録されます</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
