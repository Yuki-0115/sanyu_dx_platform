<%= form_with model: [@project, daily_report], class: "space-y-6" do |f| %>
  <% if daily_report.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">入力エラーがあります</h3>
          <ul class="mt-2 list-disc list-inside text-sm text-red-700">
            <% daily_report.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- 基本情報 -->
  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">基本情報</h3>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <%= f.label :report_date, "報告日", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :report_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", required: true %>
      </div>

      <div>
        <%= f.label :weather, "天気", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :weather, DailyReport::WEATHER_LABELS.map { |k, v| [v, k] },
            { include_blank: "選択してください" },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
      </div>
    </div>

    <div class="mt-6">
      <%= f.label :work_content, "作業内容", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :work_content, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div class="mt-6">
      <%= f.label :notes, "備考", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :notes, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>
  </div>

  <!-- 原価情報 -->
  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">原価情報</h3>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <%= f.label :materials_used, "使用材料", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :materials_used, rows: 3, placeholder: "例: 鉄筋 D13 500kg、コンクリート 5m³",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :machines_used, "使用機械", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :machines_used, rows: 3, placeholder: "例: クレーン 1台、バックホー 2台",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :labor_details, "労務", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :labor_details, rows: 3, placeholder: "例: 型枠工 3人、鉄筋工 2人",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :outsourcing_details, "外注", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :outsourcing_details, rows: 3, placeholder: "例: 電気工事 ○○電気、配管工事 △△設備",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :transportation_cost, "輸送費 (円)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :transportation_cost, step: 1, placeholder: "例: 50000",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
    </div>
  </div>

  <!-- 出面一括入力 -->
  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">出面一括入力</h3>
    <p class="text-sm text-gray-500 mb-4">各作業員の出勤状況を入力してください。欠勤の場合は「欠勤」を選択してください。</p>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">氏名</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">出勤区分</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">開始時間</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">終了時間</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">走行距離(km)</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <%= f.fields_for :attendances do |af| %>
            <tr>
              <td class="px-4 py-3">
                <%= af.hidden_field :id %>
                <%= af.hidden_field :employee_id %>
                <span class="text-sm font-medium text-gray-900">
                  <%= af.object.employee&.name || "不明" %>
                </span>
              </td>
              <td class="px-4 py-3">
                <%= af.select :attendance_type,
                    [["全日", "full"], ["半日", "half"], ["欠勤", "absent"]],
                    {},
                    { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
              </td>
              <td class="px-4 py-3">
                <%= af.time_field :start_time, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
              </td>
              <td class="px-4 py-3">
                <%= af.time_field :end_time, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
              </td>
              <td class="px-4 py-3">
                <%= af.number_field :travel_distance, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", min: 0 %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if daily_report.attendances.empty? %>
      <p class="mt-4 text-sm text-gray-500">
        作業員がまだ登録されていません。先に作業員を登録してください。
      </p>
    <% end %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "キャンセル", daily_report.persisted? ? project_daily_report_path(@project, daily_report) : project_daily_reports_path(@project),
        class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <%= f.submit daily_report.persisted? ? "更新" : "作成",
        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
