          <div class="mb-3 p-2 bg-green-100 rounded">
            <span class="text-sm font-medium text-green-800">✓ 確定済み</span>
            <span class="text-sm text-green-700 ml-2">
              確定金額: <%= number_to_currency(daily_report.fuel_confirmed_amount, unit: "¥", precision: 0) %>
            </span>
          </div>
        <% end %>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
          <div>
            <%= f.label :fuel_type, "油種", class: "block text-sm font-medium text-gray-700" %>
