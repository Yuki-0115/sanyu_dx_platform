<%= form_with model: [@project, daily_report], class: "space-y-6" do |f| %>
  <% if daily_report.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">入力エラーがあります</h3>
          <ul class="mt-2 list-disc list-inside text-sm text-red-700">
            <% daily_report.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- 基本情報 -->
  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">基本情報</h3>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <%= f.label :report_date, "報告日", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :report_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", required: true %>
      </div>

      <div>
        <%= f.label :weather, "天気", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :weather, DailyReport::WEATHER_LABELS.map { |k, v| [v, k] },
            { include_blank: "選択してください" },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
      </div>
    </div>

    <div class="mt-6">
      <%= f.label :work_content, "作業内容", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :work_content, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div class="mt-6">
      <%= f.label :notes, "備考", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :notes, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <!-- 写真添付 -->
    <div class="mt-6">
      <%= f.label :photos, "写真添付", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.file_field :photos, multiple: true, accept: "image/*",
            class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
      </div>
      <p class="mt-1 text-xs text-gray-500">複数の写真を選択できます（JPEG, PNG対応）</p>

      <% if daily_report.photos.attached? %>
        <div class="mt-3 grid grid-cols-2 sm:grid-cols-4 gap-4">
          <% daily_report.photos.each do |photo| %>
            <div class="relative group">
              <%= image_tag photo, class: "w-full h-24 object-cover rounded-lg" %>
              <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center">
                <%= link_to url_for(photo), target: "_blank", class: "text-white text-sm" do %>
                  拡大
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 原価情報 -->
  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">原価情報</h3>

    <!-- 金額入力 -->
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-6 p-4 bg-blue-50 rounded-lg">
      <div>
        <%= f.label :labor_cost, "労務費 (円)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :labor_cost, step: 1, placeholder: "0",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.label :material_cost, "材料費 (円)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :material_cost, step: 1, placeholder: "0",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.label :outsourcing_cost, "外注費 (円)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :outsourcing_cost, step: 1, placeholder: "0",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.label :transportation_cost, "輸送費 (円)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :transportation_cost, step: 1, placeholder: "0",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
    </div>

    <!-- 詳細メモ -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <%= f.label :materials_used, "使用材料（メモ）", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :materials_used, rows: 2, placeholder: "例: 鉄筋 D13 500kg、コンクリート 5m³",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :machines_used, "使用機械（メモ）", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :machines_used, rows: 2, placeholder: "例: クレーン 1台、バックホー 2台",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :labor_details, "労務（メモ）", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :labor_details, rows: 2, placeholder: "例: 型枠工 3人、鉄筋工 2人",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :outsourcing_details, "外注（メモ）", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :outsourcing_details, rows: 2, placeholder: "例: 電気工事 ○○電気、配管工事 △△設備",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
    </div>
  </div>

  <!-- 出面一括入力 -->
  <div class="bg-white shadow rounded-lg p-6" data-controller="nested-form">
    <div class="flex justify-between items-center mb-4">
      <div>
        <h3 class="text-lg font-medium text-gray-900">出面一括入力</h3>
        <p class="text-sm text-gray-500">各作業員の出勤状況を入力してください。</p>
      </div>
      <button type="button" data-action="nested-form#add"
          class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        追加
      </button>
    </div>

    <!-- テンプレート（非表示、JSで使用） -->
    <template data-nested-form-target="template">
      <tr data-nested-form-target="item">
        <td class="px-4 py-3">
          <input type="text" name="daily_report[attendances_attributes][NEW_RECORD][partner_worker_name]"
              placeholder="氏名を入力"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
        </td>
        <td class="px-4 py-3">
          <select name="daily_report[attendances_attributes][NEW_RECORD][attendance_type]"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
            <option value="full">全日</option>
            <option value="half">半日</option>
            <option value="absent">欠勤</option>
          </select>
        </td>
        <td class="px-4 py-3">
          <input type="number" name="daily_report[attendances_attributes][NEW_RECORD][hours_worked]"
              value="8" step="0.5" min="0" max="24"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
        </td>
        <td class="px-4 py-3">
          <input type="number" name="daily_report[attendances_attributes][NEW_RECORD][travel_distance]"
              min="0" step="0.1"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
        </td>
        <td class="px-4 py-3">
          <button type="button" data-action="nested-form#remove"
              class="text-red-600 hover:text-red-800">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          </button>
        </td>
      </tr>
    </template>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">氏名</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">出勤区分</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">労働時間</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">走行距離(km)</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase w-16"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200" data-nested-form-target="container">
          <%= f.fields_for :attendances do |af| %>
            <tr data-nested-form-target="item">
              <td class="px-4 py-3">
                <%= af.hidden_field :id %>
                <%= af.hidden_field :_destroy %>
                <% if af.object.employee_id.present? %>
                  <%= af.hidden_field :employee_id %>
                  <span class="text-sm font-medium text-gray-900">
                    <%= af.object.employee&.name || "不明" %>
                  </span>
                <% else %>
                  <%= af.text_field :partner_worker_name, placeholder: "氏名を入力",
                      class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
                <% end %>
              </td>
              <td class="px-4 py-3">
                <%= af.select :attendance_type,
                    [["全日", "full"], ["半日", "half"], ["欠勤", "absent"]],
                    {},
                    { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
              </td>
              <td class="px-4 py-3">
                <%= af.number_field :hours_worked, step: 0.5, min: 0, max: 24,
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
              </td>
              <td class="px-4 py-3">
                <%= af.number_field :travel_distance, min: 0, step: 0.1,
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
              </td>
              <td class="px-4 py-3">
                <button type="button" data-action="nested-form#remove"
                    class="text-red-600 hover:text-red-800">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                </button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <p class="mt-4 text-sm text-gray-500">
      「追加」ボタンで作業員を追加できます。協力会社作業員は氏名を直接入力してください。
    </p>
  </div>

  <!-- 経費・領収書入力 -->
  <div class="bg-white shadow rounded-lg p-6" data-controller="expense-form">
    <div class="flex justify-between items-center mb-4">
      <div>
        <h3 class="text-lg font-medium text-gray-900">経費・領収書</h3>
        <p class="text-sm text-gray-500">経費を入力し、領収書があれば写真を添付してください。</p>
      </div>
      <button type="button" data-action="expense-form#add"
          class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        経費追加
      </button>
    </div>

    <!-- テンプレート（非表示、JSで使用） -->
    <template data-expense-form-target="template">
      <div class="border border-gray-200 rounded-lg p-4 mb-4" data-expense-form-target="item">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700">経費種別</label>
            <select name="daily_report[expenses_attributes][NEW_RECORD][expense_type]"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
              <option value="site">現場経費</option>
              <option value="sales">営業経費</option>
              <option value="admin">管理経費</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">カテゴリ</label>
            <select name="daily_report[expenses_attributes][NEW_RECORD][category]"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
              <option value="material">材料費</option>
              <option value="transport">交通費</option>
              <option value="equipment">設備費</option>
              <option value="rental">リース費</option>
              <option value="consumable">消耗品</option>
              <option value="meal">食事代</option>
              <option value="other">その他</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">金額 (円)</label>
            <input type="number" name="daily_report[expenses_attributes][NEW_RECORD][amount]"
                step="1" min="0" placeholder="0"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">支払方法</label>
            <select name="daily_report[expenses_attributes][NEW_RECORD][payment_method]"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
              <option value="cash">現金</option>
              <option value="company_card">会社カード</option>
              <option value="advance">立替</option>
              <option value="credit">掛け</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
          <div>
            <label class="block text-sm font-medium text-gray-700">内容</label>
            <input type="text" name="daily_report[expenses_attributes][NEW_RECORD][description]"
                placeholder="例: 現場材料購入（釘、ボルト）"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">領収書</label>
            <input type="file" name="daily_report[expenses_attributes][NEW_RECORD][receipt]"
                accept="image/*,.pdf"
                class="mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100">
          </div>
        </div>
        <div class="mt-4 flex justify-end">
          <button type="button" data-action="expense-form#remove"
              class="inline-flex items-center text-sm text-red-600 hover:text-red-800">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            削除
          </button>
        </div>
      </div>
    </template>

    <div data-expense-form-target="container">
      <%= f.fields_for :expenses do |ef| %>
        <div class="border border-gray-200 rounded-lg p-4 mb-4" data-expense-form-target="item">
          <%= ef.hidden_field :id %>
          <%= ef.hidden_field :_destroy, data: { expense_form_target: "destroyField" } %>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700">経費種別</label>
              <%= ef.select :expense_type,
                  [["現場経費", "site"], ["営業経費", "sales"], ["管理経費", "admin"]],
                  {},
                  { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">カテゴリ</label>
              <%= ef.select :category,
                  [["材料費", "material"], ["交通費", "transport"], ["設備費", "equipment"], ["リース費", "rental"], ["消耗品", "consumable"], ["食事代", "meal"], ["その他", "other"]],
                  {},
                  { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">金額 (円)</label>
              <%= ef.number_field :amount, step: 1, min: 0, placeholder: "0",
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">支払方法</label>
              <%= ef.select :payment_method,
                  [["現金", "cash"], ["会社カード", "company_card"], ["立替", "advance"], ["掛け", "credit"]],
                  {},
                  { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
            </div>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
            <div>
              <label class="block text-sm font-medium text-gray-700">内容</label>
              <%= ef.text_field :description, placeholder: "例: 現場材料購入（釘、ボルト）",
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">領収書</label>
              <% if ef.object.receipt.attached? %>
                <div class="mt-1 flex items-center space-x-2">
                  <% if ef.object.receipt.content_type.start_with?("image/") %>
                    <%= image_tag ef.object.receipt, class: "h-16 w-16 object-cover rounded" %>
                  <% else %>
                    <div class="flex items-center text-sm text-gray-600">
                      <svg class="w-6 h-6 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                      </svg>
                      <%= ef.object.receipt.filename %>
                    </div>
                  <% end %>
                  <%= link_to "表示", rails_blob_path(ef.object.receipt, disposition: "inline"), target: "_blank", class: "text-blue-600 hover:underline text-sm" %>
                </div>
              <% end %>
              <%= ef.file_field :receipt, accept: "image/*,.pdf",
                  class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
            </div>
          </div>
          <div class="mt-4 flex justify-end">
            <button type="button" data-action="expense-form#remove"
                class="inline-flex items-center text-sm text-red-600 hover:text-red-800">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              削除
            </button>
          </div>
        </div>
      <% end %>
    </div>

    <p class="mt-4 text-sm text-gray-500">
