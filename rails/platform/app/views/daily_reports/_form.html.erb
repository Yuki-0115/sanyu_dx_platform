<%= form_with model: [@project, daily_report], class: "space-y-6" do |f| %>
  <%= render "shared/form_errors", resource: daily_report %>

  <!-- 基本情報 -->
  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">基本情報</h3>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <%= f.label :report_date, "報告日", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :report_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", required: true %>
      </div>

      <div>
        <%= f.label :weather, "天気", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :weather, DailyReport::WEATHER_LABELS.map { |k, v| [v, k] },
            { include_blank: "選択してください" },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
      </div>
    </div>

    <%= render "shared/work_content_fields", f: f %>
    <%= render "shared/photos_field", f: f, resource: daily_report %>
  </div>

  <!-- 出面一括入力（勤怠管理用）-->
  <div class="bg-white shadow rounded-lg p-6" data-controller="nested-form">
    <div class="flex justify-between items-center mb-4">
      <div>
        <h3 class="text-lg font-medium text-gray-900">出面一括入力 <span class="text-blue-600 text-sm font-normal">（勤怠管理）</span></h3>
        <p class="text-sm text-gray-500">正社員・仮社員の出勤状況を入力してください。</p>
      </div>
      <button type="button" data-action="nested-form#add"
          class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        追加
      </button>
    </div>

    <!-- 注意書き -->
    <div class="mb-4 p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-yellow-700">
            <strong>段取り表から自動入力されています。</strong>現場の実際の状況に合わせて、出勤区分や人員の追加・削除を正確に行ってください。
          </p>
        </div>
      </div>
    </div>

    <!-- デスクトップ用テンプレート（非表示、JSで使用） -->
    <template data-nested-form-target="template">
      <tr data-nested-form-target="item" data-controller="attendance-time">
        <td class="px-3 py-2">
          <select name="daily_report[attendances_attributes][NEW_RECORD][employee_id]"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" required>
            <option value="">選択</option>
            <optgroup label="正社員">
              <% Employee.where(employment_type: 'regular').order(:name).each do |emp| %>
                <option value="<%= emp.id %>"><%= emp.name %></option>
              <% end %>
            </optgroup>
            <% Partner.includes(:employees).where(has_temporary_employees: true).order(:name).each do |partner| %>
              <optgroup label="仮社員（<%= partner.name %>）">
                <% partner.employees.where(employment_type: 'temporary').order(:name).each do |emp| %>
                  <option value="<%= emp.id %>"><%= emp.name %></option>
                <% end %>
              </optgroup>
            <% end %>
          </select>
        </td>
        <td class="px-3 py-2">
          <select name="daily_report[attendances_attributes][NEW_RECORD][work_category]"
              data-attendance-time-target="workCategory"
              data-action="change->attendance-time#calculate"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm">
            <option value="work">出勤</option>
            <option value="day_off">公休</option>
            <option value="paid_leave">有給</option>
            <option value="absence">欠勤</option>
            <option value="substitute_holiday">振休</option>
          </select>
        </td>
        <td class="px-3 py-2">
          <select name="daily_report[attendances_attributes][NEW_RECORD][attendance_type]"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm">
            <option value="full">1日</option>
            <option value="half">半日</option>
          </select>
        </td>
        <td class="px-3 py-2">
          <input type="time" name="daily_report[attendances_attributes][NEW_RECORD][start_time]"
              value="08:00"
              data-attendance-time-target="startTime"
              data-action="change->attendance-time#calculate"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm">
        </td>
        <td class="px-3 py-2">
          <input type="time" name="daily_report[attendances_attributes][NEW_RECORD][end_time]"
              value="17:00"
              data-attendance-time-target="endTime"
              data-action="change->attendance-time#calculate"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm">
        </td>
        <td class="px-3 py-2">
          <input type="number" name="daily_report[attendances_attributes][NEW_RECORD][break_minutes]"
              value="60" min="0" step="15"
              data-attendance-time-target="breakMinutes"
              data-action="change->attendance-time#calculate"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm">
        </td>
        <td class="px-3 py-2">
          <input type="text" name="daily_report[attendances_attributes][NEW_RECORD][site_note]"
              placeholder="現場名"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm">
        </td>
        <td class="px-3 py-2">
          <button type="button" data-action="nested-form#remove"
              class="text-red-600 hover:text-red-800">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          </button>
        </td>
      </tr>
    </template>

    <!-- モバイル用テンプレート（非表示、JSで使用） -->
    <template data-nested-form-target="mobileTemplate">
      <div class="border border-blue-200 rounded-lg p-4 bg-blue-50" data-nested-form-target="item" data-controller="attendance-time">
        <!-- 氏名と削除ボタン -->
        <div class="flex justify-between items-start mb-3">
          <div class="flex-1 mr-2">
            <label class="block text-xs font-medium text-gray-600 mb-1">氏名</label>
            <select name="daily_report[attendances_attributes][NEW_RECORD][employee_id]"
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-2" required>
              <option value="">選択</option>
              <optgroup label="正社員">
                <% Employee.where(employment_type: 'regular').order(:name).each do |emp| %>
                  <option value="<%= emp.id %>"><%= emp.name %></option>
                <% end %>
              </optgroup>
              <% Partner.includes(:employees).where(has_temporary_employees: true).order(:name).each do |partner| %>
                <optgroup label="仮社員（<%= partner.name %>）">
                  <% partner.employees.where(employment_type: 'temporary').order(:name).each do |emp| %>
                    <option value="<%= emp.id %>"><%= emp.name %></option>
                  <% end %>
                </optgroup>
              <% end %>
            </select>
          </div>
          <button type="button" data-action="nested-form#remove"
              class="text-red-600 hover:text-red-800 p-2 mt-5">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          </button>
        </div>

        <!-- 区分・出勤タイプ -->
        <div class="grid grid-cols-2 gap-3 mb-3">
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">区分</label>
            <select name="daily_report[attendances_attributes][NEW_RECORD][work_category]"
                data-attendance-time-target="workCategory"
                data-action="change->attendance-time#calculate"
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-2">
              <option value="work">出勤</option>
              <option value="day_off">公休</option>
              <option value="paid_leave">有給</option>
              <option value="absence">欠勤</option>
              <option value="substitute_holiday">振休</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">出勤</label>
            <select name="daily_report[attendances_attributes][NEW_RECORD][attendance_type]"
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-2">
              <option value="full">1日</option>
              <option value="half">半日</option>
            </select>
          </div>
        </div>

        <!-- 出社・退社・休憩 -->
        <div class="grid grid-cols-3 gap-2 mb-3">
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">出社</label>
            <input type="time" name="daily_report[attendances_attributes][NEW_RECORD][start_time]"
                value="08:00"
                data-attendance-time-target="startTime"
                data-action="change->attendance-time#calculate"
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-2">
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">退社</label>
            <input type="time" name="daily_report[attendances_attributes][NEW_RECORD][end_time]"
                value="17:00"
                data-attendance-time-target="endTime"
                data-action="change->attendance-time#calculate"
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-2">
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">休憩</label>
            <input type="number" name="daily_report[attendances_attributes][NEW_RECORD][break_minutes]"
                value="60" min="0" step="15" placeholder="分"
                data-attendance-time-target="breakMinutes"
                data-action="change->attendance-time#calculate"
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-2">
          </div>
        </div>

        <!-- 現場メモ -->
        <div>
          <label class="block text-xs font-medium text-gray-600 mb-1">現場メモ</label>
          <input type="text" name="daily_report[attendances_attributes][NEW_RECORD][site_note]"
              placeholder="現場名など"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-2">
        </div>
      </div>
    </template>

    <%
      # グループ化された社員選択肢を構築
      grouped_employees = []
      grouped_employees << ['正社員', Employee.where(employment_type: 'regular').order(:name).map { |e| [e.name, e.id] }]
      Partner.includes(:employees).where(has_temporary_employees: true).order(:name).each do |partner|
        grouped_employees << ["仮社員（#{partner.name}）", partner.employees.where(employment_type: 'temporary').order(:name).map { |e| [e.name, e.id] }]
      end
    %>

    <!-- デスクトップ用テーブル -->
    <div class="hidden lg:block overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">氏名</th>
            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">区分</th>
            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">出勤</th>
            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">出社</th>
            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">退社</th>
            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">休憩(分)</th>
            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">現場メモ</th>
            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase w-12"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200" data-nested-form-target="container">
          <%= f.fields_for :attendances do |af| %>
            <% next if af.object.employee_id.blank? %>
            <tr data-nested-form-target="item" data-controller="attendance-time">
              <td class="px-3 py-2">
                <%= af.hidden_field :id %>
                <%= af.hidden_field :_destroy %>
                <%= af.select :employee_id,
                    grouped_options_for_select(grouped_employees, af.object.employee_id),
                    { include_blank: "選択" },
                    { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm", required: true } %>
              </td>
              <td class="px-3 py-2">
                <%= af.select :work_category,
                    [["出勤", "work"], ["公休", "day_off"], ["有給", "paid_leave"], ["欠勤", "absence"], ["振休", "substitute_holiday"]],
                    {},
                    { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm",
                      data: { attendance_time_target: "workCategory", action: "change->attendance-time#calculate" } } %>
              </td>
              <td class="px-3 py-2">
                <%= af.select :attendance_type,
                    [["1日", "full"], ["半日", "half"]],
                    {},
                    { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" } %>
              </td>
              <td class="px-3 py-2">
                <%= af.time_field :start_time,
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm",
                    data: { attendance_time_target: "startTime", action: "change->attendance-time#calculate" } %>
              </td>
              <td class="px-3 py-2">
                <%= af.time_field :end_time,
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm",
                    data: { attendance_time_target: "endTime", action: "change->attendance-time#calculate" } %>
              </td>
              <td class="px-3 py-2">
                <%= af.number_field :break_minutes, min: 0, step: 15,
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm",
                    data: { attendance_time_target: "breakMinutes", action: "change->attendance-time#calculate" } %>
              </td>
              <td class="px-3 py-2">
                <%= af.text_field :site_note, placeholder: "現場名",
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" %>
              </td>
              <td class="px-3 py-2">
                <button type="button" data-action="nested-form#remove"
                    class="text-red-600 hover:text-red-800">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                </button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- モバイル用カードレイアウト -->
    <div class="lg:hidden space-y-3" data-nested-form-target="mobileContainer">
      <%= f.fields_for :attendances do |af| %>
        <% next if af.object.employee_id.blank? %>
        <div class="border border-blue-200 rounded-lg p-4 bg-blue-50" data-nested-form-target="item" data-controller="attendance-time">
          <%= af.hidden_field :id %>
          <%= af.hidden_field :_destroy %>

          <!-- 氏名と削除ボタン -->
          <div class="flex justify-between items-start mb-3">
            <div class="flex-1 mr-2">
              <label class="block text-xs font-medium text-gray-600 mb-1">氏名</label>
              <%= af.select :employee_id,
                  grouped_options_for_select(grouped_employees, af.object.employee_id),
                  { include_blank: "選択" },
                  { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-2", required: true } %>
            </div>
            <button type="button" data-action="nested-form#remove"
                class="text-red-600 hover:text-red-800 p-2 mt-5">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>

          <!-- 区分・出勤タイプ -->
          <div class="grid grid-cols-2 gap-3 mb-3">
            <div>
              <label class="block text-xs font-medium text-gray-600 mb-1">区分</label>
              <%= af.select :work_category,
                  [["出勤", "work"], ["公休", "day_off"], ["有給", "paid_leave"], ["欠勤", "absence"], ["振休", "substitute_holiday"]],
                  {},
                  { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-2",
                    data: { attendance_time_target: "workCategory", action: "change->attendance-time#calculate" } } %>
            </div>
            <div>
              <label class="block text-xs font-medium text-gray-600 mb-1">出勤</label>
              <%= af.select :attendance_type,
                  [["1日", "full"], ["半日", "half"]],
                  {},
                  { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-2" } %>
            </div>
          </div>

          <!-- 出社・退社・休憩 -->
          <div class="grid grid-cols-3 gap-2 mb-3">
            <div>
              <label class="block text-xs font-medium text-gray-600 mb-1">出社</label>
              <%= af.time_field :start_time,
                  class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-2",
                  data: { attendance_time_target: "startTime", action: "change->attendance-time#calculate" } %>
            </div>
            <div>
              <label class="block text-xs font-medium text-gray-600 mb-1">退社</label>
              <%= af.time_field :end_time,
                  class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-2",
                  data: { attendance_time_target: "endTime", action: "change->attendance-time#calculate" } %>
            </div>
            <div>
              <label class="block text-xs font-medium text-gray-600 mb-1">休憩</label>
              <%= af.number_field :break_minutes, min: 0, step: 15, placeholder: "分",
                  class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-2",
                  data: { attendance_time_target: "breakMinutes", action: "change->attendance-time#calculate" } %>
            </div>
          </div>

          <!-- 現場メモ -->
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">現場メモ</label>
            <%= af.text_field :site_note, placeholder: "現場名など",
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-base py-2" %>
          </div>
        </div>
      <% end %>
    </div>

    <% if daily_report.attendances.select { |a| a.employee_id.present? }.empty? %>
      <p class="mt-4 text-sm text-gray-500 text-center py-4">
        段取り表に配置された作業員がいません。「追加」ボタンで作業員を追加してください。
      </p>
    <% end %>
  </div>

  <!-- 外注入力（原価管理用）-->
  <div class="bg-white shadow rounded-lg p-6" data-controller="nested-form" data-nested-form-new-record-id-value="outsourcing">
    <div class="flex justify-between items-center mb-4">
      <div>
        <h3 class="text-lg font-medium text-gray-900">外注入力 <span class="text-purple-600 text-sm font-normal">（原価管理）</span></h3>
        <p class="text-sm text-gray-500">協力会社の稼働人数や出来高を入力してください。</p>
      </div>
      <button type="button" data-action="nested-form#add"
          class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        追加
      </button>
    </div>

    <!-- テンプレート（非表示、JSで使用） -->
    <template data-nested-form-target="template">
      <div class="border border-purple-200 rounded-lg p-4 mb-4 bg-purple-50" data-nested-form-target="item" data-controller="partner-select">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
