          </div>
          <div>
            <%= f.label :fuel_quantity, "給油量 (L)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :fuel_quantity, step: 0.1, min: 0, placeholder: "0.0",
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm" %>
          </div>
          <div>
            <%= f.label :fuel_amount, "仮金額 (円)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :fuel_amount, step: 1, min: 0, placeholder: "0",
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm bg-amber-50" %>
          </div>
        </div>
      </div>

      <!-- 高速代（ETC） -->
      <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg">
        <h4 class="text-base font-medium text-blue-800 mb-3 flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
          </svg>
          高速代（ETC）
        </h4>
        <% if daily_report.highway_confirmed? %>
          <div class="mb-3 p-2 bg-blue-100 rounded">
            <span class="text-sm font-medium text-blue-800">✓ 確定済み</span>
            <span class="text-sm text-blue-700 ml-2">
              確定金額: <%= number_to_currency(daily_report.highway_confirmed_amount, unit: "¥", precision: 0) %>
            </span>
          </div>
        <% end %>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
          <div>
            <%= f.label :highway_count, "使用回数", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :highway_count, step: 1, min: 0, placeholder: "0",
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
          <div>
            <%= f.label :highway_amount, "仮金額 (円)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :highway_amount, step: 1, min: 0, placeholder: "0",
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm bg-amber-50" %>
          </div>
          <div>
            <%= f.label :highway_route, "経路メモ", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :highway_route, placeholder: "例: 東名→名神",
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 経費・領収書入力 -->
  <div class="bg-white shadow rounded-lg p-6" data-controller="expense-form">
    <div class="flex justify-between items-center mb-4">
      <div>
        <h3 class="text-lg font-medium text-gray-900">経費・領収書</h3>
        <p class="text-sm text-gray-500">経費を入力し、領収書があれば写真を添付してください。</p>
      </div>
      <button type="button" data-action="expense-form#add"
          class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        経費追加
      </button>
    </div>

    <!-- テンプレート（非表示、JSで使用） -->
    <template data-expense-form-target="template">
      <div class="border border-gray-200 rounded-lg p-4 mb-4" data-expense-form-target="item">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700">経費種別</label>
            <select name="daily_report[expenses_attributes][NEW_RECORD][expense_type]"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
              <option value="site">現場経費</option>
              <option value="sales">営業経費</option>
              <option value="admin">管理経費</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">カテゴリ</label>
            <select name="daily_report[expenses_attributes][NEW_RECORD][category]"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
              <option value="material">材料費</option>
              <option value="transport">交通費</option>
              <option value="equipment">設備費</option>
              <option value="rental">リース費</option>
              <option value="consumable">消耗品</option>
              <option value="meal">食事代</option>
              <option value="other">その他</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">金額 (円)</label>
            <input type="number" name="daily_report[expenses_attributes][NEW_RECORD][amount]"
                step="1" min="0" placeholder="0"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">支払方法</label>
            <select name="daily_report[expenses_attributes][NEW_RECORD][payment_method]"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
              <option value="cash">現金</option>
              <option value="company_card">会社カード</option>
              <option value="advance">立替</option>
              <option value="credit">掛け</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mt-4">
          <div>
            <label class="block text-sm font-medium text-gray-700">内容</label>
            <input type="text" name="daily_report[expenses_attributes][NEW_RECORD][description]"
                placeholder="例: 現場材料購入（釘、ボルト）"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">伝票番号</label>
            <input type="text" name="daily_report[expenses_attributes][NEW_RECORD][voucher_number]"
                placeholder="例: 12345"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
          </div>
          <div></div>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
          <div>
            <label class="block text-sm font-medium text-gray-700">領収書</label>
            <input type="file" name="daily_report[expenses_attributes][NEW_RECORD][receipt]"
                accept="image/*,.pdf"
                class="mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">伝票</label>
            <input type="file" name="daily_report[expenses_attributes][NEW_RECORD][voucher]"
                accept="image/*,.pdf"
                class="mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-green-50 file:text-green-700 hover:file:bg-green-100">
          </div>
        </div>
        <div class="mt-4 flex justify-end">
          <button type="button" data-action="expense-form#remove"
              class="inline-flex items-center text-sm text-red-600 hover:text-red-800">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            削除
          </button>
        </div>
      </div>
    </template>

    <div data-expense-form-target="container">
      <%= f.fields_for :expenses do |ef| %>
        <div class="border border-gray-200 rounded-lg p-4 mb-4" data-expense-form-target="item">
          <%= ef.hidden_field :id %>
          <%= ef.hidden_field :_destroy, data: { expense_form_target: "destroyField" } %>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700">経費種別</label>
              <%= ef.select :expense_type,
                  [["現場経費", "site"], ["営業経費", "sales"], ["管理経費", "admin"]],
                  {},
                  { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">カテゴリ</label>
              <%= ef.select :category,
                  [["材料費", "material"], ["交通費", "transport"], ["設備費", "equipment"], ["リース費", "rental"], ["消耗品", "consumable"], ["食事代", "meal"], ["その他", "other"]],
                  {},
                  { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">金額 (円)</label>
              <%= ef.number_field :amount, step: 1, min: 0, placeholder: "0",
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">支払方法</label>
              <%= ef.select :payment_method,
                  [["現金", "cash"], ["会社カード", "company_card"], ["立替", "advance"], ["掛け", "credit"]],
                  {},
                  { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
