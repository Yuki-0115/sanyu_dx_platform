  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <div class="flex justify-between items-center mb-6">
        <div>
          <h2 class="text-2xl font-bold text-gray-900">日報一覧</h2>
          <p class="text-gray-600">
            <%= link_to @project.name, project_path(@project), class: "text-blue-600 hover:underline" %>
          </p>
        </div>
        <div class="flex space-x-2">
          <%= link_to "新規日報", new_project_daily_report_path(@project),
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
          <%= link_to "案件に戻る", project_path(@project),
              class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      </div>

      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <% if @daily_reports.any? %>
          <ul class="divide-y divide-gray-200">
            <% @daily_reports.each do |report| %>
              <li class="hover:bg-gray-50">
                <div class="px-4 py-4 sm:px-6">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <%= link_to project_daily_report_path(@project, report), class: "text-sm font-medium text-blue-600 hover:underline" do %>
                        <%= l(report.report_date) %>
                      <% end %>
                      <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= daily_report_status_class(report.status) %>">
                        <%= daily_report_status_label(report.status) %>
                      </span>
                      <% if report.weather.present? %>
                        <span class="ml-2 text-sm text-gray-500">
                          <%= DailyReport::WEATHER_LABELS[report.weather] %>
                        </span>
                      <% end %>
                    </div>
                    <div class="flex items-center space-x-3">
                      <% if report.status == "draft" %>
                        <%= button_to "確定", confirm_project_daily_report_path(@project, report),
                            method: :post,
                            class: "inline-flex items-center px-2 py-1 text-xs font-medium rounded bg-green-600 text-white hover:bg-green-700",
                            data: { turbo_confirm: "この日報を確定しますか？" } %>
                      <% end %>
                      <span class="text-sm text-gray-500">職長: <%= report.foreman.name %></span>
                    </div>
                  </div>
                  <div class="mt-2">
                    <p class="text-sm text-gray-600 truncate">
                      出面: <%= report.attendances.present.count %>名
                      <% if report.work_content.present? %>
                        | <%= truncate(report.work_content, length: 50) %>
                      <% end %>
                    </p>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
          <div class="px-4 py-8 text-center text-gray-500">
            日報がありません
          </div>
        <% end %>
      </div>
    </div>
  </div>
