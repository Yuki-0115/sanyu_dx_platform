<%= form_with model: @safety_document_type, class: "space-y-6" do |form| %>
  <% if @safety_document_type.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@safety_document_type.errors.count, "件のエラー") %>があります
          </h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% @safety_document_type.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "名称", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", required: true %>
    <p class="mt-1 text-sm text-gray-500">例: 作業員名簿、安全衛生管理計画書</p>
  </div>

  <div>
    <%= form.label :description, "説明", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :description, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    <p class="mt-1 text-sm text-gray-500">この書類の簡単な説明（任意）</p>
  </div>

  <div>
    <%= form.label :position, "表示順", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :position, class: "mt-1 block w-24 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", min: 1 %>
  </div>

  <div class="flex items-center">
    <%= form.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
    <%= form.label :active, "有効", class: "ml-2 block text-sm text-gray-900" %>
    <p class="ml-6 text-sm text-gray-500">無効にすると提出状況のチェック対象から外れます</p>
  </div>

  <div class="flex justify-end gap-3 pt-4 border-t">
    <%= link_to "キャンセル", safety_document_types_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50" %>
    <%= form.submit @safety_document_type.new_record? ? "追加" : "更新", class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
