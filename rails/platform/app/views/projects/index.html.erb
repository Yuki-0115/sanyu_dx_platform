<div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-900">案件一覧</h2>
        <%= link_to "新規案件", new_project_path,
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      </div>

      <div class="mb-4 flex space-x-4">
        <%= link_to "全て", projects_path,
            class: "px-3 py-2 text-sm font-medium #{params[:filter].blank? ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-500 hover:text-gray-700'}" %>
        <%= link_to "進行中", projects_path(filter: "active"),
            class: "px-3 py-2 text-sm font-medium #{params[:filter] == 'active' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-500 hover:text-gray-700'}" %>
        <%= link_to "4点未完了", projects_path(filter: "four_point"),
            class: "px-3 py-2 text-sm font-medium #{params[:filter] == 'four_point' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-500 hover:text-gray-700'}" %>
      </div>

      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <% if @projects.any? %>
          <ul class="divide-y divide-gray-200">
            <% @projects.each do |project| %>
              <li>
                <%= link_to project_path(project), class: "block hover:bg-gray-50" do %>
                  <div class="px-4 py-4 sm:px-6">
                    <div class="flex items-center justify-between">
                      <div class="flex items-center">
                        <p class="text-sm font-medium text-blue-600 truncate">
                          <%= project.code %>: <%= project.name %>
                        </p>
                        <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_badge_class(project.status) %>">
                          <%= status_label(project.status) %>
                        </span>
                      </div>
                      <div class="flex items-center space-x-2">
                        <% if project.four_point_completed? %>
                          <span class="px-2 py-1 text-xs font-medium text-green-800 bg-green-100 rounded-full">4点OK</span>
                        <% else %>
                          <span class="px-2 py-1 text-xs font-medium text-yellow-800 bg-yellow-100 rounded-full">4点未完</span>
                        <% end %>
                      </div>
                    </div>
                    <div class="mt-2 sm:flex sm:justify-between">
                      <div class="sm:flex">
                        <p class="flex items-center text-sm text-gray-500">
                          顧客: <%= project.client&.name || "未設定" %>
                        </p>
                      </div>
                      <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
                        <% if project.order_amount %>
                          <p>受注金額: <%= number_to_currency(project.order_amount, unit: "¥", precision: 0) %></p>
                        <% elsif project.estimated_amount %>
                          <p>概算見積金額: <%= number_to_currency(project.estimated_amount, unit: "¥", precision: 0) %></p>
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <div class="px-4 py-8 text-center text-gray-500">
            案件がありません
          </div>
        <% end %>
  </div>
</div>
