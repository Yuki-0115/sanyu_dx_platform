<div class="min-h-screen bg-gray-100">
  <%= render "shared/navbar" %>

  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <div class="flex justify-between items-center mb-6">
        <div>
          <h2 class="text-2xl font-bold text-gray-900"><%= @project.name %></h2>
          <p class="text-gray-600"><%= @project.code %></p>
        </div>
        <div class="flex space-x-2">
          <%= link_to "編集", edit_project_path(@project),
              class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <%= link_to "一覧", projects_path,
              class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- 基本情報 -->
        <div class="lg:col-span-2">
          <div class="bg-white shadow rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">基本情報</h3>
            <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">ステータス</dt>
                <dd class="mt-1">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_badge_class(@project.status) %>">
                    <%= status_label(@project.status) %>
                  </span>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">案件種別</dt>
                <dd class="mt-1">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= @project.misc? ? 'bg-orange-100 text-orange-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= Project::PROJECT_TYPE_LABELS[@project.project_type] %>
                  </span>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">顧客</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @project.client&.name || "未設定" %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">見積金額</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @project.estimated_amount ? number_to_currency(@project.estimated_amount, unit: "¥", precision: 0) : "未設定" %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">受注金額</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @project.order_amount ? number_to_currency(@project.order_amount, unit: "¥", precision: 0) : "未設定" %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">予算金額</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @project.budget_amount ? number_to_currency(@project.budget_amount, unit: "¥", precision: 0) : "未設定" %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">実績原価</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @project.actual_cost ? number_to_currency(@project.actual_cost, unit: "¥", precision: 0) : "未計上" %>
                </dd>
              </div>
              <% if @project.site_address.present? %>
                <div class="sm:col-span-2">
                  <dt class="text-sm font-medium text-gray-500">現場住所</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @project.site_address %></dd>
                </div>
              <% end %>
            </dl>
          </div>

          <!-- 担当者 -->
          <div class="bg-white shadow rounded-lg p-6 mt-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">担当者</h3>
            <dl class="grid grid-cols-1 sm:grid-cols-3 gap-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">営業担当</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @project.sales_user&.name || "未設定" %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">技術担当</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @project.engineering_user&.name || "未設定" %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">施工担当</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @project.construction_user&.name || "未設定" %></dd>
              </div>
            </dl>
          </div>

          <!-- 人員配置 -->
          <div id="assignments" class="bg-white shadow rounded-lg p-6 mt-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">人員配置（段取り表用）</h3>

            <% if @project.project_assignments.any? %>
              <div class="mb-4">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead>
                    <tr>
                      <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">名前</th>
                      <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">種別</th>
                      <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">役割</th>
                      <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">期間</th>
                      <th class="px-3 py-2"></th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200">
                    <% @project.project_assignments.includes(:employee).each do |assignment| %>
                      <tr>
                        <td class="px-3 py-2 text-sm text-gray-900"><%= assignment.employee.name %></td>
                        <td class="px-3 py-2 text-sm">
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= employment_type_badge_class(assignment.employee.employment_type) %>">
                            <%= employment_type_label(assignment.employee.employment_type) %>
                          </span>
                        </td>
                        <td class="px-3 py-2 text-sm text-gray-500">
                          <%= { "foreman" => "職長", "worker" => "作業員", "support" => "応援" }[assignment.role] || "-" %>
                        </td>
                        <td class="px-3 py-2 text-sm text-gray-500">
                          <%= assignment.start_date&.strftime("%m/%d") %> 〜 <%= assignment.end_date&.strftime("%m/%d") || "終了まで" %>
                        </td>
                        <td class="px-3 py-2 text-right">
                          <%= button_to "解除", project_assignment_path(@project, assignment), method: :delete,
                              data: { turbo_confirm: "配置を解除しますか？" },
                              class: "text-xs text-red-600 hover:text-red-900" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <p class="text-sm text-gray-500 mb-4">配置されている人員はいません</p>
            <% end %>

            <!-- 人員追加フォーム -->
            <%= form_with url: project_assignments_path(@project), method: :post, scope: :project_assignment, class: "border-t border-gray-200 pt-4 mt-4" do |f| %>
              <div class="grid grid-cols-1 sm:grid-cols-4 gap-3 items-end">
                <div>
                  <label class="block text-xs font-medium text-gray-700">社員</label>
                  <%= f.collection_select :employee_id,
                      Employee.order(:employment_type, :name),
                      :id,
                      ->(e) { "#{e.name}（#{employment_type_label(e.employment_type)}）" },
                      { include_blank: "選択..." },
                      { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" } %>
                </div>
                <div>
                  <label class="block text-xs font-medium text-gray-700">役割</label>
                  <%= f.select :role, [["職長", "foreman"], ["作業員", "worker"], ["応援", "support"]],
                      { include_blank: "選択..." },
                      { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" } %>
                </div>
                <div>
                  <label class="block text-xs font-medium text-gray-700">開始日</label>
                  <%= f.date_field :start_date, value: @project.scheduled_start_date,
                      class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" %>
                </div>
                <div>
                  <%= f.submit "追加", class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- 4点チェック -->
        <div class="lg:col-span-1">
          <div class="bg-white shadow rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">4点チェック</h3>
            <% if @project.four_point_completed? %>
              <div class="mb-4 p-3 bg-green-50 rounded-lg">
                <p class="text-sm text-green-800 font-medium">✓ 4点チェック完了</p>
                <% if @project.four_point_completed_at %>
                  <p class="text-xs text-green-600 mt-1">完了日: <%= l(@project.four_point_completed_at, format: :short) %></p>
                <% end %>
              </div>
            <% else %>
              <div class="mb-4 p-3 bg-yellow-50 rounded-lg">
                <p class="text-sm text-yellow-800 font-medium">⚠ 4点チェック未完了</p>
              </div>
            <% end %>

            <ul class="space-y-3">
              <li class="flex items-center">
                <% if @project.has_contract %>
                  <span class="flex-shrink-0 h-5 w-5 text-green-500">✓</span>
                <% else %>
                  <span class="flex-shrink-0 h-5 w-5 text-gray-400">○</span>
                <% end %>
                <span class="ml-2 text-sm text-gray-700">契約書確認</span>
              </li>
              <li class="flex items-center">
                <% if @project.has_order %>
                  <span class="flex-shrink-0 h-5 w-5 text-green-500">✓</span>
                <% else %>
                  <span class="flex-shrink-0 h-5 w-5 text-gray-400">○</span>
                <% end %>
                <span class="ml-2 text-sm text-gray-700">注文書確認</span>
              </li>
              <li class="flex items-center">
                <% if @project.has_payment_terms %>
                  <span class="flex-shrink-0 h-5 w-5 text-green-500">✓</span>
                <% else %>
                  <span class="flex-shrink-0 h-5 w-5 text-gray-400">○</span>
                <% end %>
                <span class="ml-2 text-sm text-gray-700">支払条件確認</span>
              </li>
              <li class="flex items-center">
                <% if @project.has_customer_approval %>
                  <span class="flex-shrink-0 h-5 w-5 text-green-500">✓</span>
                <% else %>
                  <span class="flex-shrink-0 h-5 w-5 text-gray-400">○</span>
                <% end %>
                <span class="ml-2 text-sm text-gray-700">顧客承認確認</span>
              </li>
            </ul>

            <% unless @project.four_point_completed? || @project.status != "draft" && @project.status != "estimating" %>
              <div class="mt-6">
                <%= button_to "4点チェック完了", complete_four_point_project_path(@project),
                    method: :post,
                    disabled: !@project.four_point_completed?,
                    class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white #{@project.four_point_completed? ? 'bg-green-600 hover:bg-green-700' : 'bg-gray-400 cursor-not-allowed'}" %>
              </div>
            <% end %>
          </div>

          <!-- 着工前ゲート（常に表示、4点チェック完了後に操作可能） -->
          <div class="bg-white shadow rounded-lg p-6 mt-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">着工前ゲート</h3>

            <% if !@project.four_point_completed? %>
              <div class="mb-4 p-3 bg-gray-50 rounded-lg">
                <p class="text-sm text-gray-600">4点チェック完了後に着工前ゲートの操作が可能になります</p>
              </div>
            <% elsif @project.pre_construction_gate_completed_at.present? %>
              <div class="mb-4 p-3 bg-green-50 rounded-lg">
                <p class="text-sm text-green-800 font-medium">✓ 着工前ゲート完了</p>
                <p class="text-xs text-green-600 mt-1">完了日: <%= l(@project.pre_construction_gate_completed_at, format: :short) %></p>
              </div>
            <% elsif @project.status == "ordered" || @project.status == "preparing" %>
              <div class="mb-4 p-3 bg-yellow-50 rounded-lg">
                <p class="text-sm text-yellow-800 font-medium">⚠ 着工前ゲート未完了</p>
              </div>
            <% end %>

            <ul class="space-y-3">
              <li class="flex items-center">
                <% if @project.site_conditions_checked %>
                  <span class="flex-shrink-0 h-5 w-5 text-green-500">✓</span>
                <% else %>
                  <span class="flex-shrink-0 h-5 w-5 text-gray-400">○</span>
                <% end %>
                <span class="ml-2 text-sm text-gray-700">現場条件確認</span>
              </li>
              <li class="flex items-center">
                <% if @project.night_work_checked %>
                  <span class="flex-shrink-0 h-5 w-5 text-green-500">✓</span>
                <% else %>
                  <span class="flex-shrink-0 h-5 w-5 text-gray-400">○</span>
                <% end %>
                <span class="ml-2 text-sm text-gray-700">夜間作業確認</span>
              </li>
              <li class="flex items-center">
                <% if @project.regulations_checked %>
                  <span class="flex-shrink-0 h-5 w-5 text-green-500">✓</span>
                <% else %>
                  <span class="flex-shrink-0 h-5 w-5 text-gray-400">○</span>
                <% end %>
                <span class="ml-2 text-sm text-gray-700">規制確認</span>
              </li>
              <li class="flex items-center">
                <% if @project.safety_docs_checked %>
                  <span class="flex-shrink-0 h-5 w-5 text-green-500">✓</span>
                <% else %>
                  <span class="flex-shrink-0 h-5 w-5 text-gray-400">○</span>
                <% end %>
                <span class="ml-2 text-sm text-gray-700">安全書類完備</span>
              </li>
              <li class="flex items-center">
                <% if @project.delivery_checked %>
                  <span class="flex-shrink-0 h-5 w-5 text-green-500">✓</span>
                <% else %>
                  <span class="flex-shrink-0 h-5 w-5 text-gray-400">○</span>
                <% end %>
                <span class="ml-2 text-sm text-gray-700">搬入制限確認</span>
              </li>
            </ul>

            <% if @project.status == "ordered" %>
              <div class="mt-6">
                <%= button_to "着工前ゲート完了", complete_pre_construction_gate_project_path(@project),
                    method: :post,
                    disabled: !@project.pre_construction_gate_completed?,
                    class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white #{@project.pre_construction_gate_completed? ? 'bg-blue-600 hover:bg-blue-700' : 'bg-gray-400 cursor-not-allowed'}" %>
              </div>
            <% elsif @project.status == "preparing" %>
              <div class="mt-6">
                <%= button_to "着工開始", start_construction_project_path(@project),
                    method: :post,
                    class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
              </div>
            <% end %>
          </div>

          <% if current_employee.can_access?(:estimates) %>
            <!-- 見積書 -->
            <div class="bg-white shadow rounded-lg p-6 mt-6">
              <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-medium text-gray-900">見積書</h3>
                <% if @project.estimate %>
                  <%= link_to "詳細", project_estimate_path(@project),
                      class: "text-sm text-blue-600 hover:underline" %>
                <% end %>
              </div>
              <% if @project.estimate %>
                <dl class="grid grid-cols-2 gap-4 text-sm">
                  <div>
                    <dt class="text-gray-500">見積原価</dt>
                    <dd class="font-medium"><%= number_to_currency(@project.estimate.total_cost, unit: "¥", precision: 0) %></dd>
                  </div>
                  <div>
                    <dt class="text-gray-500">売価</dt>
                    <dd class="font-medium"><%= number_to_currency(@project.estimate.selling_price, unit: "¥", precision: 0) %></dd>
                  </div>
                  <div>
                    <dt class="text-gray-500">利益率</dt>
                    <dd class="font-medium <%= @project.estimate.profit_margin && @project.estimate.profit_margin >= 0 ? 'text-green-600' : 'text-red-600' %>">
                      <%= @project.estimate.profit_margin ? "#{@project.estimate.profit_margin}%" : "-" %>
                    </dd>
                  </div>
                  <div>
                    <dt class="text-gray-500">ステータス</dt>
                    <dd>
                      <% badge_class = case @project.estimate.status
                         when "approved" then "bg-green-100 text-green-800"
                         when "submitted" then "bg-blue-100 text-blue-800"
                         when "rejected" then "bg-red-100 text-red-800"
                         else "bg-yellow-100 text-yellow-800"
                         end %>
                      <span class="px-2 py-1 text-xs font-medium rounded-full <%= badge_class %>">
                        <%= { "draft" => "下書き", "submitted" => "提出済", "approved" => "承認済", "rejected" => "却下" }[@project.estimate.status] %>
                      </span>
                    </dd>
                  </div>
                </dl>
              <% else %>
                <p class="text-sm text-gray-500">未作成</p>
                <%= link_to "見積書を作成", new_project_estimate_path(@project),
                    class: "mt-2 inline-block text-sm text-blue-600 hover:underline" %>
              <% end %>
            </div>
          <% end %>

          <% if current_employee.can_access?(:budgets) %>
            <!-- 実行予算 -->
            <div class="bg-white shadow rounded-lg p-6 mt-6">
              <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-medium text-gray-900">実行予算</h3>
                <%= link_to "詳細", project_budget_path(@project),
                    class: "text-sm text-blue-600 hover:underline" %>
              </div>
              <% if @project.budget %>
                <dl class="grid grid-cols-2 gap-4 text-sm">
                  <div>
                    <dt class="text-gray-500">予算原価</dt>
                    <dd class="font-medium"><%= number_to_currency(@project.budget.total_cost, unit: "¥", precision: 0) %></dd>
                  </div>
                  <div>
                    <dt class="text-gray-500">ステータス</dt>
                    <dd>
                      <span class="px-2 py-1 text-xs font-medium rounded-full <%= @project.budget.status == 'confirmed' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                        <%= @project.budget.status == 'confirmed' ? '確定' : '下書き' %>
                      </span>
                    </dd>
                  </div>
                </dl>
              <% else %>
                <p class="text-sm text-gray-500">未作成</p>
                <%= link_to "予算を作成", new_project_budget_path(@project),
                    class: "mt-2 inline-block text-sm text-blue-600 hover:underline" %>
              <% end %>
            </div>
          <% end %>

          <% if current_employee.can_access?(:daily_reports) %>
            <!-- 日報 -->
            <div class="bg-white shadow rounded-lg p-6 mt-6">
              <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-medium text-gray-900">日報</h3>
                <%= link_to "一覧", project_daily_reports_path(@project),
                    class: "text-sm text-blue-600 hover:underline" %>
              </div>
              <% recent_reports = @project.daily_reports.order(report_date: :desc).limit(3) %>
              <% if recent_reports.any? %>
                <ul class="space-y-2">
                  <% recent_reports.each do |report| %>
                    <li class="flex justify-between items-center text-sm">
                      <%= link_to project_daily_report_path(@project, report), class: "text-blue-600 hover:underline" do %>
                        <%= l(report.report_date) %>
                      <% end %>
                      <span class="px-2 py-1 text-xs font-medium rounded-full <%= report.confirmed? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                        <%= report.confirmed? ? '確定' : '下書き' %>
                      </span>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p class="text-sm text-gray-500">日報がありません</p>
              <% end %>
              <%= link_to "新規日報", new_project_daily_report_path(@project),
                  class: "mt-3 inline-block text-sm text-blue-600 hover:underline" %>
            </div>
          <% end %>

          <% if current_employee.can_access?(:invoices) %>
            <!-- 請求書 -->
            <div class="bg-white shadow rounded-lg p-6 mt-6">
              <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-medium text-gray-900">請求書</h3>
                <%= link_to "一覧", project_invoices_path(@project),
                    class: "text-sm text-blue-600 hover:underline" %>
              </div>
              <% recent_invoices = @project.invoices.order(created_at: :desc).limit(3) %>
              <% if recent_invoices.any? %>
                <ul class="space-y-2">
                  <% recent_invoices.each do |invoice| %>
                    <li class="flex justify-between items-center text-sm">
                      <%= link_to project_invoice_path(@project, invoice), class: "text-blue-600 hover:underline" do %>
                        <%= invoice.invoice_number || "##{invoice.id}" %>
                        <span class="text-gray-500 ml-1">(<%= number_to_currency(invoice.total_amount, unit: "¥", precision: 0) %>)</span>
                      <% end %>
                      <% badge_class = invoice.status == "paid" ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800" %>
                      <span class="px-2 py-1 text-xs font-medium rounded-full <%= badge_class %>">
                        <%= { "draft" => "下書き", "issued" => "発行済", "waiting" => "入金待ち", "paid" => "入金済", "overdue" => "期限超過" }[invoice.status] %>
                      </span>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p class="text-sm text-gray-500">請求書がありません</p>
              <% end %>
              <%= link_to "新規請求書", new_project_invoice_path(@project),
                  class: "mt-3 inline-block text-sm text-blue-600 hover:underline" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
