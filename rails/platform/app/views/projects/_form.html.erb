<%= form_with model: project, class: "space-y-6", data: { controller: "order-flow" } do |f| %>
  <% if project.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">入力エラーがあります</h3>
          <ul class="mt-2 list-disc list-inside text-sm text-red-700">
            <% project.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    <div>
      <%= f.label :code, "案件コード", class: "block text-sm font-medium text-gray-700" %>
      <% if project.persisted? %>
        <%= f.text_field :code, readonly: true,
            class: "mt-1 block w-full rounded-md border-gray-300 bg-gray-50 shadow-sm sm:text-sm" %>
      <% else %>
        <%= f.text_field :code, placeholder: "自動採番（空欄でOK）",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        <p class="mt-1 text-xs text-gray-500">空欄の場合、自動で「PJ202601001」形式のコードが付与されます</p>
      <% end %>
    </div>

    <div>
      <%= f.label :name, "案件名", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", required: true %>
    </div>

    <div>
      <%= f.label :client_id, "顧客", class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :client_id, Client.all, :id, :name,
          { include_blank: "選択してください" },
          { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
    </div>

    <div>
      <%= f.label :status, "ステータス", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :status, Project::STATUSES.map { |s| [status_label(s), s] },
          {},
          { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
    </div>

    <div>
      <%= f.label :project_type, "案件種別", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :project_type, Project::PROJECT_TYPE_LABELS.map { |k, v| [v, k] },
          {},
          { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
      <p class="mt-1 text-xs text-gray-500">「その他」は小工事・常用工事など簡易な案件に使用</p>
    </div>

    <div>
      <%= f.label :order_flow, "受注フロー", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :order_flow, Project::ORDER_FLOW_LABELS.map { |k, v| [v, k] },
          {},
          { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            data: { order_flow_target: "select", action: "change->order-flow#toggle" } } %>
      <p class="mt-1 text-xs text-gray-500">「口頭先行」は急ぎの案件で口頭で金額を決め、後から注文書をもらうパターン</p>
    </div>

    <div>
      <%= f.label :estimated_amount, "見積金額", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :estimated_amount, step: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :order_amount, "受注金額", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :order_amount, step: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :budget_amount, "予算金額", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :budget_amount, step: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :site_address, "現場住所", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :site_address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>
  </div>

  <div class="border-t border-gray-200 pt-6">
    <h4 class="text-md font-medium text-gray-900 mb-4">工期</h4>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <div>
        <%= f.label :scheduled_start_date, "予定開始日", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :scheduled_start_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.label :scheduled_end_date, "予定終了日", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :scheduled_end_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.label :actual_start_date, "実績開始日", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :actual_start_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.label :actual_end_date, "実績終了日", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :actual_end_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
    </div>
    <p class="mt-2 text-xs text-gray-500">段取り表（ガントチャート）に表示するには予定開始日・終了日を設定してください</p>
  </div>

  <div class="border-t border-gray-200 pt-6">
    <h4 class="text-md font-medium text-gray-900 mb-4">担当者</h4>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
      <div>
        <%= f.label :sales_user_id, "営業担当", class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :sales_user_id, Employee.where(role: %w[admin management sales]), :id, :name,
            { include_blank: "選択してください" },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
      </div>

      <div>
        <%= f.label :engineering_user_id, "技術担当", class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :engineering_user_id, Employee.where(role: %w[admin management engineering]), :id, :name,
            { include_blank: "選択してください" },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
      </div>

      <div>
        <%= f.label :construction_user_id, "施工担当", class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :construction_user_id, Employee.where(role: %w[admin management construction]), :id, :name,
            { include_blank: "選択してください" },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
      </div>
    </div>
  </div>

  <!-- 口頭受注セクション（口頭先行フローの場合のみ表示） -->
  <div id="oral-order-section" class="border-t border-gray-200 pt-6 <%= 'hidden' unless project.oral_first_flow? %>" data-order-flow-target="oralSection">
    <h4 class="text-md font-medium text-gray-900 mb-4">
      <span class="inline-flex items-center">
        <svg class="w-5 h-5 mr-2 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        口頭受注情報
      </span>
    </h4>
    <div class="bg-orange-50 border border-orange-200 rounded-lg p-4 mb-4">
      <p class="text-sm text-orange-800">
        口頭で金額を決めて先に着工するパターンです。後から正式な注文書を受領してください。
      </p>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <%= f.label :oral_order_amount, "口頭合意金額", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :oral_order_amount, step: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.label :oral_order_received_at, "口頭合意日", class: "block text-sm font-medium text-gray-700" %>
        <%= f.datetime_local_field :oral_order_received_at, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
      <div class="sm:col-span-2">
        <%= f.label :oral_order_note, "口頭合意メモ（誰と・どのような条件で等）", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :oral_order_note, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "例: 〇〇部長と電話で合意。概算350万円、詳細は後日調整" %>
      </div>
      <% if project.persisted? && project.oral_first_flow? %>
        <div class="sm:col-span-2">
          <div class="flex items-center justify-between p-3 bg-white rounded-lg border">
            <div>
              <p class="text-sm font-medium text-gray-700">注文書受領状況</p>
              <% if project.order_document_received_at.present? %>
                <p class="text-sm text-green-600">
                  受領済み: <%= project.order_document_received_at.strftime('%Y年%m月%d日') %>
                </p>
              <% else %>
                <p class="text-sm text-orange-600">未受領（注文書を受け取ったら記録してください）</p>
              <% end %>
            </div>
            <% if project.order_document_received_at.blank? %>
              <%= f.label :order_document_received_at, "受領日", class: "sr-only" %>
              <%= f.datetime_local_field :order_document_received_at, class: "rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="border-t border-gray-200 pt-6">
    <h4 class="text-md font-medium text-gray-900 mb-4">4点チェック</h4>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div class="flex items-center">
        <%= f.check_box :has_contract, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :has_contract, "契約書確認済", class: "ml-2 block text-sm text-gray-700" %>
      </div>
      <div class="flex items-center">
        <%= f.check_box :has_order, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :has_order, "注文書確認済", class: "ml-2 block text-sm text-gray-700" %>
      </div>
      <div class="flex items-center">
        <%= f.check_box :has_payment_terms, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :has_payment_terms, "支払条件確認済", class: "ml-2 block text-sm text-gray-700" %>
      </div>
      <div class="flex items-center">
        <%= f.check_box :has_customer_approval, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :has_customer_approval, "顧客承認確認済", class: "ml-2 block text-sm text-gray-700" %>
      </div>
    </div>
  </div>

  <div class="border-t border-gray-200 pt-6">
    <h4 class="text-md font-medium text-gray-900 mb-4">着工前ゲート</h4>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div class="flex items-center">
        <%= f.check_box :site_conditions_checked, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :site_conditions_checked, "現場条件確認済", class: "ml-2 block text-sm text-gray-700" %>
      </div>
      <div class="flex items-center">
        <%= f.check_box :night_work_checked, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :night_work_checked, "夜間作業確認済", class: "ml-2 block text-sm text-gray-700" %>
      </div>
      <div class="flex items-center">
        <%= f.check_box :regulations_checked, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :regulations_checked, "規制確認済", class: "ml-2 block text-sm text-gray-700" %>
      </div>
      <div class="flex items-center">
        <%= f.check_box :safety_docs_checked, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :safety_docs_checked, "安全書類完備確認済", class: "ml-2 block text-sm text-gray-700" %>
      </div>
      <div class="flex items-center">
        <%= f.check_box :delivery_checked, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :delivery_checked, "搬入制限確認済", class: "ml-2 block text-sm text-gray-700" %>
      </div>
    </div>
  </div>

  <div class="border-t border-gray-200 pt-6">
    <%= f.label :description, "説明", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>

  <!-- 見積メモ -->
  <div class="border-t border-gray-200 pt-6">
    <div class="flex items-center mb-4">
      <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
      </svg>
      <h4 class="text-md font-medium text-gray-900">見積メモ</h4>
    </div>
    <p class="text-sm text-gray-500 mb-3">
      見積作成前のメモや概算情報を記録できます。案件作成後に「見積作成」で詳細な見積書を作成できます。
    </p>
    <%= f.text_area :estimate_memo, rows: 6,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm font-mono",
        placeholder: "例:\n・舗装工事 約200m2\n・材料費: As合材 概算50万\n・労務: 3人工×2日\n・諸経費込み概算80万程度" %>
  </div>

  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to "キャンセル", project.persisted? ? project_path(project) : projects_path,
        class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <%= f.submit project.persisted? ? "更新" : "作成",
        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
