<div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">

  
    <div class="px-4 py-6 sm:px-0">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-900">経営ダッシュボード</h2>
        <div class="flex items-center space-x-2">
          <%= link_to management_dashboard_path(month: (@selected_month - 1.month).strftime("%Y-%m-01")),
              class: "p-2 text-gray-500 hover:text-gray-700" do %>
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          <% end %>
          <span class="text-lg font-medium text-gray-900"><%= l(@selected_month, format: "%Y年%m月") %></span>
          <% if @selected_month < @current_month %>
            <%= link_to management_dashboard_path(month: (@selected_month + 1.month).strftime("%Y-%m-01")),
                class: "p-2 text-gray-500 hover:text-gray-700" do %>
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            <% end %>
          <% else %>
            <span class="p-2 text-gray-300">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          <% end %>
        </div>
      </div>

      <!-- 月次分析へのリンク -->
      <div class="mb-6 flex space-x-3">
        <%= link_to monthly_profit_loss_path(year: @selected_month.year, month: @selected_month.month),
            class: "inline-flex items-center px-4 py-2 border border-blue-300 rounded-md text-sm font-medium text-blue-700 bg-blue-50 hover:bg-blue-100" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          工事部門損益
        <% end %>
        <%= link_to monthly_income_statement_path(year: @selected_month.year, month: @selected_month.month),
            class: "inline-flex items-center px-4 py-2 border border-indigo-300 rounded-md text-sm font-medium text-indigo-700 bg-indigo-50 hover:bg-indigo-100" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
          月次損益計算書
        <% end %>
        <%= link_to monthly_admin_expenses_path(year: @selected_month.year, month: @selected_month.month),
            class: "inline-flex items-center px-4 py-2 border border-purple-300 rounded-md text-sm font-medium text-purple-700 bg-purple-50 hover:bg-purple-100" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          販管費入力
        <% end %>
      </div>

      <!-- 月次サマリーカード -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0 bg-blue-500 rounded-md p-3">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">月間受注</dt>
                  <dd class="text-xl font-bold text-gray-900"><%= number_to_currency(@monthly_order_amount, unit: "¥", precision: 0) %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0 bg-green-500 rounded-md p-3">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">月間請求</dt>
                  <dd class="text-xl font-bold text-gray-900"><%= number_to_currency(@monthly_invoice_amount, unit: "¥", precision: 0) %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0 bg-emerald-500 rounded-md p-3">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">月間入金</dt>
                  <dd class="text-xl font-bold text-green-600"><%= number_to_currency(@monthly_payment_amount, unit: "¥", precision: 0) %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0 bg-red-500 rounded-md p-3">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">月間原価</dt>
                  <dd class="text-xl font-bold text-red-600"><%= number_to_currency(@monthly_cost, unit: "¥", precision: 0) %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- 累計サマリー -->
      <div class="bg-white shadow rounded-lg p-6 mb-8">
        <h3 class="text-lg font-medium text-gray-900 mb-4">累計サマリー</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div>
            <dt class="text-sm font-medium text-gray-500">累計受注</dt>
            <dd class="mt-1 text-2xl font-bold text-gray-900"><%= number_to_currency(@total_order_amount, unit: "¥", precision: 0) %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">累計請求</dt>
            <dd class="mt-1 text-2xl font-bold text-gray-900"><%= number_to_currency(@total_invoice_amount, unit: "¥", precision: 0) %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">累計入金</dt>
            <dd class="mt-1 text-2xl font-bold text-green-600"><%= number_to_currency(@total_paid_amount, unit: "¥", precision: 0) %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">未入金残高</dt>
            <dd class="mt-1 text-2xl font-bold text-yellow-600"><%= number_to_currency(@total_unpaid_amount, unit: "¥", precision: 0) %></dd>
          </div>
        </div>
      </div>

      <%# 有給休暇アラート %>
      <% if @paid_leave_at_risk.any? || @pending_leave_requests > 0 %>
        <div class="bg-white shadow rounded-lg p-6 mb-8">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-medium text-gray-900">有給休暇アラート</h3>
            <%= link_to "管理画面", paid_leaves_path, class: "text-sm text-blue-600 hover:underline" %>
          </div>

          <% if @pending_leave_requests > 0 %>
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3 mb-4">
              <div class="flex items-center justify-between">
                <span class="text-yellow-800">
                  承認待ちの有給申請が <strong><%= @pending_leave_requests %>件</strong> あります
                </span>
                <%= link_to "確認する", paid_leave_requests_path, class: "text-yellow-800 underline text-sm" %>
              </div>
            </div>
          <% end %>

          <% if @paid_leave_at_risk.any? %>
            <div class="space-y-2">
              <p class="text-sm text-gray-600 mb-2">年5日取得義務 要注意者（<%= @paid_leave_at_risk.size %>名）</p>
              <% @paid_leave_at_risk.each do |risk| %>
                <%
                  badge_class = case risk[:alert_level]
                  when :urgent then "bg-red-600 text-white"
                  when :danger then "bg-red-100 text-red-800"
                  else "bg-yellow-100 text-yellow-800"
                  end
                  alert_text = case risk[:alert_level]
                  when :urgent then "緊急"
                  when :danger then "危険"
                  else "注意"
                  end
                %>
                <div class="flex items-center justify-between p-3 rounded-lg <%= risk[:alert_level] == :urgent ? 'bg-red-50' : 'bg-gray-50' %>">
                  <div class="flex items-center gap-3">
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= badge_class %>">
                      <%= alert_text %>
                    </span>
                    <%= link_to risk[:employee].name, paid_leafe_path(risk[:employee]), class: "font-medium text-gray-900 hover:underline" %>
                  </div>
                  <div class="text-sm text-gray-600">
                    取得 <strong><%= risk[:taken] %></strong>/5日
                    <span class="text-gray-400 mx-1">|</span>
                    あと<strong class="text-red-600"><%= risk[:shortage] %></strong>日
                    <span class="text-gray-400 mx-1">|</span>
                    期限まで<%= risk[:days_remaining] %>日
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- 月別推移 -->
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">月別推移（過去6ヶ月）</h3>
          <div class="overflow-x-auto">
            <table class="min-w-full text-sm">
              <thead>
                <tr class="border-b">
                  <th class="text-left py-2 px-2 font-medium text-gray-500">月</th>
                  <th class="text-right py-2 px-2 font-medium text-gray-500">受注</th>
                  <th class="text-right py-2 px-2 font-medium text-gray-500">請求</th>
                  <th class="text-right py-2 px-2 font-medium text-gray-500">入金</th>
                </tr>
              </thead>
              <tbody>
                <% @monthly_trends.each do |trend| %>
                  <tr class="border-b <%= trend[:month] == @selected_month ? 'bg-blue-50' : '' %>">
                    <td class="py-2 px-2 font-medium"><%= l(trend[:month], format: "%Y/%m") %></td>
                    <td class="py-2 px-2 text-right"><%= number_to_currency(trend[:order_amount], unit: "", precision: 0) %></td>
                    <td class="py-2 px-2 text-right"><%= number_to_currency(trend[:invoice_amount], unit: "", precision: 0) %></td>
                    <td class="py-2 px-2 text-right text-green-600"><%= number_to_currency(trend[:payment_amount], unit: "", precision: 0) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- ステータス別案件 -->
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">案件ステータス</h3>
          <div class="space-y-3">
            <% Project::STATUSES.each do |status| %>
              <% count = @projects_by_status[status] || 0 %>
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <span class="px-2 py-1 text-xs font-medium rounded-full <%= status_badge_class(status) %>">
                    <%= status_label(status) %>
                  </span>
                </div>
                <span class="text-sm font-medium text-gray-900"><%= count %>件</span>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- 入金待ち請求書 -->
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-medium text-gray-900">入金待ち請求書</h3>
            <%= link_to "一覧", all_invoices_path, class: "text-sm text-blue-600 hover:underline" %>
          </div>
          <% if @unpaid_invoices.any? %>
            <ul class="divide-y divide-gray-200">
              <% @unpaid_invoices.each do |invoice| %>
                <li class="py-3">
                  <div class="flex items-center justify-between">
                    <div>
                      <%= link_to project_invoice_path(invoice.project, invoice), class: "text-sm font-medium text-blue-600 hover:underline" do %>
                        <%= invoice.invoice_number || "##{invoice.id}" %>
                      <% end %>
                      <p class="text-xs text-gray-500"><%= invoice.project.name %> - <%= invoice.project.client&.name %></p>
                    </div>
                    <div class="text-right">
                      <p class="text-sm font-medium text-gray-900"><%= number_to_currency(invoice.remaining_amount, unit: "¥", precision: 0) %></p>
                      <% if invoice.due_date %>
                        <p class="text-xs <%= invoice.due_date < Date.current ? 'text-red-600 font-medium' : 'text-gray-500' %>">
                          期限: <%= l(invoice.due_date) %>
                        </p>
                      <% end %>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-sm text-gray-500">入金待ちの請求書はありません</p>
          <% end %>
        </div>

        <!-- 進行中案件（予算順） -->
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-medium text-gray-900">進行中案件（予算規模順）</h3>
            <%= link_to "一覧", projects_path, class: "text-sm text-blue-600 hover:underline" %>
          </div>
          <% if @risky_projects.any? %>
            <ul class="divide-y divide-gray-200">
              <% @risky_projects.each do |project| %>
                <li class="py-3">
                  <div class="flex items-center justify-between">
                    <div>
                      <%= link_to project.name, project_path(project), class: "text-sm font-medium text-blue-600 hover:underline" %>
                      <p class="text-xs text-gray-500"><%= project.client&.name %></p>
                    </div>
                    <div class="text-right">
                      <p class="text-sm font-medium text-gray-900">
                        予算: <%= number_to_currency(project.budget&.total_cost, unit: "¥", precision: 0) %>
                      </p>
                      <p class="text-xs text-gray-500">
                        受注: <%= number_to_currency(project.order_amount, unit: "¥", precision: 0) %>
                      </p>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-sm text-gray-500">進行中の案件はありません</p>
          <% end %>
        </div>
      </div>
    </div>
  
</div>
