<%= form_with model: daily_report, url: (daily_report.persisted? ? external_daily_report_path(daily_report) : external_daily_reports_path), class: "space-y-6" do |f| %>
  <%= render "shared/form_errors", resource: daily_report %>

  <!-- 基本情報 -->
  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">基本情報</h3>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <%= f.label :report_date, "報告日", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :report_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", required: true %>
      </div>

      <div>
        <%= f.label :external_site_name, "現場名（常用先）", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :external_site_name, placeholder: "例: ○○建設 △△現場",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", required: true %>
      </div>

      <div>
        <%= f.label :project_id, "紐付け案件（任意）", class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :project_id, Project.misc.active, :id, :name,
            { include_blank: "なし（案件に紐付けない）" },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
        <p class="mt-1 text-xs text-gray-500">「その他」案件に紐付けると原価が集計されます</p>
      </div>

      <div>
        <%= f.label :weather, "天気", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :weather, DailyReport::WEATHER_LABELS.map { |k, v| [v, k] },
            { include_blank: "選択してください" },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
      </div>
    </div>

    <%= render "shared/work_content_fields", f: f %>
    <%= render "shared/photos_field", f: f, resource: daily_report %>
  </div>

  <!-- 原価情報 -->
  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">原価情報</h3>

    <!-- 金額入力 -->
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-6 p-4 bg-blue-50 rounded-lg">
      <div>
        <%= f.label :labor_cost, "労務費 (円)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :labor_cost, step: 1, placeholder: "0",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.label :material_cost, "材料費 (円)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :material_cost, step: 1, placeholder: "0",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.label :outsourcing_cost, "外注費 (円)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :outsourcing_cost, step: 1, placeholder: "0",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.label :transportation_cost, "輸送費 (円)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :transportation_cost, step: 1, placeholder: "0",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
    </div>

    <!-- 詳細メモ -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <%= f.label :materials_used, "使用材料（メモ）", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :materials_used, rows: 2, placeholder: "例: 鉄筋 D13 500kg、コンクリート 5m³",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :machines_used, "使用機械（メモ）", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :machines_used, rows: 2, placeholder: "例: クレーン 1台、バックホー 2台",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :labor_details, "労務（メモ）", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :labor_details, rows: 2, placeholder: "例: 型枠工 3人、鉄筋工 2人",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :outsourcing_details, "外注（メモ）", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :outsourcing_details, rows: 2, placeholder: "例: 電気工事 ○○電気、配管工事 △△設備",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
    </div>
  </div>

  <!-- 出面一括入力 -->
  <div class="bg-white shadow rounded-lg p-6" data-controller="nested-form">
    <div class="flex justify-between items-center mb-4">
      <div>
        <h3 class="text-lg font-medium text-gray-900">出面一括入力</h3>
        <p class="text-sm text-gray-500">各作業員の出勤状況を入力してください。</p>
      </div>
      <button type="button" data-action="nested-form#add"
          class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        追加
      </button>
    </div>

    <!-- テンプレート（非表示、JSで使用） -->
    <template data-nested-form-target="template">
      <tr data-nested-form-target="item">
        <td class="px-4 py-3">
          <input type="text" name="daily_report[attendances_attributes][NEW_RECORD][partner_worker_name]"
              placeholder="氏名を入力"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
        </td>
        <td class="px-4 py-3">
          <select name="daily_report[attendances_attributes][NEW_RECORD][attendance_type]"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
            <option value="full">全日</option>
            <option value="half">半日</option>
            <option value="absent">欠勤</option>
          </select>
        </td>
        <td class="px-4 py-3">
          <input type="number" name="daily_report[attendances_attributes][NEW_RECORD][hours_worked]"
              value="8" step="0.5" min="0" max="24"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
        </td>
        <td class="px-4 py-3">
          <input type="number" name="daily_report[attendances_attributes][NEW_RECORD][travel_distance]"
              min="0" step="0.1"
              class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
        </td>
        <td class="px-4 py-3">
          <button type="button" data-action="nested-form#remove"
              class="text-red-600 hover:text-red-800">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          </button>
        </td>
      </tr>
    </template>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">氏名</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">出勤区分</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">労働時間</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">走行距離(km)</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase w-16"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200" data-nested-form-target="container">
          <%= f.fields_for :attendances do |af| %>
            <tr data-nested-form-target="item">
              <td class="px-4 py-3">
                <%= af.hidden_field :id %>
                <%= af.hidden_field :_destroy %>
                <% if af.object.employee_id.present? %>
                  <%= af.hidden_field :employee_id %>
                  <span class="text-sm font-medium text-gray-900">
                    <%= af.object.employee&.name || "不明" %>
                  </span>
                <% else %>
                  <%= af.text_field :partner_worker_name, placeholder: "氏名を入力",
                      class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
                <% end %>
              </td>
              <td class="px-4 py-3">
                <%= af.select :attendance_type,
                    [["全日", "full"], ["半日", "half"], ["欠勤", "absent"]],
                    {},
                    { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
              </td>
              <td class="px-4 py-3">
                <%= af.number_field :hours_worked, step: 0.5, min: 0, max: 24,
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
              </td>
              <td class="px-4 py-3">
                <%= af.number_field :travel_distance, min: 0, step: 0.1,
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
              </td>
              <td class="px-4 py-3">
                <button type="button" data-action="nested-form#remove"
                    class="text-red-600 hover:text-red-800">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                </button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <p class="mt-4 text-sm text-gray-500">
      「追加」ボタンで作業員を追加できます。常用先の作業員は氏名を直接入力してください。
    </p>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "キャンセル", daily_report.persisted? ? external_daily_report_path(daily_report) : external_daily_reports_path,
        class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <%= f.submit daily_report.persisted? ? "更新" : "作成",
        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
