<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">経費処理</h1>
    <div class="flex gap-2">
      <%= link_to "処理済み一覧", processed_accounting_expenses_path, class: "px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700" %>
    </div>
  </div>

  <!-- タブ -->
  <div class="border-b border-gray-200 mb-6">
    <nav class="flex gap-4">
      <%= link_to accounting_expenses_path(tab: "cash"),
          class: "px-4 py-3 border-b-2 font-medium text-sm #{@tab == 'cash' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
        現金・立替
        <% if @tab != 'cash' %>
          <span class="ml-1 px-2 py-0.5 text-xs bg-gray-100 rounded-full">
            <%= Expense.ready_for_accounting.cash_payment.count %>
          </span>
        <% end %>
      <% end %>

      <%= link_to accounting_expenses_path(tab: "card"),
          class: "px-4 py-3 border-b-2 font-medium text-sm #{@tab == 'card' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
        カード明細
        <% if @tab != 'card' %>
          <span class="ml-1 px-2 py-0.5 text-xs bg-gray-100 rounded-full">
            <%= Expense.ready_for_accounting.card_payment.count %>
          </span>
        <% end %>
      <% end %>

      <%= link_to accounting_expenses_path(tab: "invoices"),
          class: "px-4 py-3 border-b-2 font-medium text-sm #{@tab == 'invoices' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
        請求書突合
        <% if @tab != 'invoices' %>
          <span class="ml-1 px-2 py-0.5 text-xs bg-gray-100 rounded-full">
            <%= Expense.ready_for_accounting.credit_payment.count %>
          </span>
        <% end %>
      <% end %>
    </nav>
  </div>

  <!-- タブコンテンツ -->
  <% case @tab %>
  <% when "cash" %>
    <%= render "cash_tab" %>
  <% when "card" %>
    <%= render "card_tab" %>
  <% when "invoices" %>
    <%= render "invoices_tab" %>
  <% end %>
</div>
