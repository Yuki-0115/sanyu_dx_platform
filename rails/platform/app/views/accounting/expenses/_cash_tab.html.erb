<!-- サマリー -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
  <div class="bg-white rounded-lg shadow p-4">
    <div class="text-sm text-gray-500">処理待ち件数</div>
    <div class="text-2xl font-bold text-orange-600"><%= @expenses.count %>件</div>
  </div>
  <div class="bg-white rounded-lg shadow p-4">
    <div class="text-sm text-gray-500">処理待ち金額</div>
    <div class="text-2xl font-bold"><%= number_with_delimiter(@total_amount.to_i) %>円</div>
  </div>
  <div class="bg-white rounded-lg shadow p-4">
    <div class="text-sm text-gray-500">精算待ち</div>
    <div class="text-2xl font-bold text-red-600"><%= @needs_reimbursement.count %>件</div>
  </div>
</div>

<!-- 処理待ち経費一覧 -->
<%= form_with url: bulk_process_accounting_expenses_path, method: :post, id: "bulk-form", data: { controller: "select-all" } do %>
  <input type="hidden" name="tab" value="cash">
  <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
    <div class="p-4 bg-gray-50 border-b flex justify-between items-center">
      <div class="flex items-center gap-2">
        <input type="checkbox" data-select-all-target="all" data-action="change->select-all#toggle" class="w-4 h-4">
        <label class="text-sm text-gray-600">すべて選択</label>
        <span class="text-sm text-gray-500 ml-4">レシート確認 → 勘定科目確定</span>
      </div>
      <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
        選択した経費を処理
      </button>
    </div>

    <table class="w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-3 text-left text-sm font-medium text-gray-500 w-10"></th>
          <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">日付</th>
          <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">案件</th>
          <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">カテゴリ</th>
          <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">内容</th>
          <th class="px-4 py-3 text-right text-sm font-medium text-gray-500">金額</th>
          <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">支払方法</th>
          <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">支払者</th>
          <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">レシート</th>
          <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">操作</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @expenses.each do |expense| %>
          <tr class="hover:bg-gray-50">
            <td class="px-4 py-3">
              <input type="checkbox" name="expense_ids[]" value="<%= expense.id %>" data-select-all-target="checkbox" data-action="change->select-all#updateAll" class="w-4 h-4">
            </td>
            <td class="px-4 py-3 text-sm">
              <%= expense.daily_report&.report_date&.strftime("%m/%d") || "-" %>
            </td>
            <td class="px-4 py-3 text-sm">
              <%= expense.project&.name || "-" %>
            </td>
            <td class="px-4 py-3">
              <span class="px-2 py-1 text-xs rounded bg-gray-100"><%= expense.category_label %></span>
            </td>
            <td class="px-4 py-3 text-sm"><%= expense.description %></td>
            <td class="px-4 py-3 text-sm text-right font-medium">
              <%= number_with_delimiter(expense.amount.to_i) %>円
            </td>
            <td class="px-4 py-3 text-center">
              <span class="px-2 py-1 text-xs rounded <%= expense.advance_payment? ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100' %>">
                <%= expense.payment_method_label %>
              </span>
            </td>
            <td class="px-4 py-3 text-sm text-center"><%= expense.payer&.name || "-" %></td>
            <td class="px-4 py-3 text-center">
              <% if expense.receipt_attached? %>
                <%= link_to rails_blob_path(expense.receipt, disposition: "inline"), target: "_blank", class: "text-green-600 hover:text-green-800" do %>
                  <% if expense.receipt.content_type.start_with?("image/") %>
                    <svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  <% else %>
                    <svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                  <% end %>
                <% end %>
              <% else %>
                <span class="text-red-400">×</span>
              <% end %>
            </td>
            <td class="px-4 py-3 text-center">
              <%= link_to "詳細", accounting_expense_path(expense), class: "px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-700" %>
            </td>
          </tr>
        <% end %>
        <% if @expenses.empty? %>
          <tr>
            <td colspan="10" class="px-4 py-8 text-center text-gray-500">
              処理待ちの経費はありません
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<!-- 精算待ちセクション（立替払い） -->
<% if @needs_reimbursement.any? %>
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="p-4 bg-yellow-50 border-b">
      <h3 class="font-bold text-yellow-800">精算待ち一覧（立替払い）</h3>
      <p class="text-sm text-yellow-600 mt-1">経理処理済みで、社員への精算が必要な経費</p>
    </div>

    <%= form_with url: bulk_reimburse_accounting_expenses_path, method: :post, data: { controller: "select-all" } do %>
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500 w-10">
              <input type="checkbox" data-select-all-target="all" data-action="change->select-all#toggle" class="w-4 h-4">
            </th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">日付</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">案件</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">内容</th>
            <th class="px-4 py-3 text-right text-sm font-medium text-gray-500">金額</th>
            <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">支払者</th>
            <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">操作</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @needs_reimbursement.each do |expense| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3">
                <input type="checkbox" name="expense_ids[]" value="<%= expense.id %>" data-select-all-target="checkbox" data-action="change->select-all#updateAll" class="w-4 h-4">
              </td>
              <td class="px-4 py-3 text-sm">
                <%= expense.daily_report&.report_date&.strftime("%m/%d") || "-" %>
              </td>
              <td class="px-4 py-3 text-sm"><%= expense.project&.name || "-" %></td>
              <td class="px-4 py-3 text-sm"><%= expense.description %></td>
              <td class="px-4 py-3 text-sm text-right font-medium">
                <%= number_with_delimiter(expense.amount.to_i) %>円
              </td>
              <td class="px-4 py-3 text-sm text-center"><%= expense.payer&.name || "-" %></td>
              <td class="px-4 py-3 text-center">
                <%= button_to "精算済み", reimburse_accounting_expense_path(expense),
                    method: :post,
                    class: "px-3 py-1 bg-green-600 text-white text-sm rounded hover:bg-green-700" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="p-4 bg-gray-50 border-t flex justify-end">
        <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700">
          選択した経費を精算済みにする
        </button>
      </div>
    <% end %>
  </div>
<% end %>

