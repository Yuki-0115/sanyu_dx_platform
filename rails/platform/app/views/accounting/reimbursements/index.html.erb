<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold">立替精算管理</h1>
      <p class="text-gray-500">従業員の立替経費を確認・精算</p>
    </div>
  </div>

  <!-- サマリー -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500">未精算合計</div>
      <div class="text-2xl font-bold text-red-600">
        <%= number_with_delimiter(@unreimbursed_by_employee.sum { |_, amount| amount }.to_i) %>円
      </div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500">未精算件数</div>
      <div class="text-2xl font-bold text-orange-600"><%= @pending_expenses.count %>件</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500">今月精算済み</div>
      <div class="text-2xl font-bold text-green-600">
        <%= number_with_delimiter(@reimbursed_this_month.to_i) %>円
      </div>
    </div>
  </div>

  <!-- 個人別未精算額 -->
  <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
    <div class="px-4 py-3 border-b bg-gray-50">
      <h2 class="font-bold">個人別 未精算額</h2>
    </div>
    <% if @unreimbursed_by_employee.any? %>
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">従業員</th>
            <th class="px-4 py-3 text-right text-sm font-medium text-gray-500">未精算額</th>
            <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">操作</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @unreimbursed_by_employee.each do |employee, amount| %>
            <% next if employee.nil? %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3">
                <div class="font-medium"><%= employee.name %></div>
                <div class="text-xs text-gray-500"><%= { "regular" => "正社員", "temporary" => "臨時", "external" => "外注" }[employee.employment_type] || employee.employment_type %></div>
              </td>
              <td class="px-4 py-3 text-right">
                <span class="text-lg font-bold text-red-600">
                  <%= number_with_delimiter(amount.to_i) %>円
                </span>
              </td>
              <td class="px-4 py-3 text-center">
                <%= link_to "詳細", accounting_reimbursement_path(employee),
                    class: "px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-700 mr-2" %>
                <%= button_to "一括精算", bulk_reimburse_accounting_reimbursements_path(employee_id: employee.id),
                    method: :post,
                    class: "px-3 py-1 bg-green-600 text-white text-sm rounded hover:bg-green-700",
                    data: { turbo_confirm: "#{employee.name}の立替経費を全て精算済みにしますか？" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="p-8 text-center text-gray-500">
        未精算の立替経費はありません
      </div>
    <% end %>
  </div>

  <!-- 直近の立替経費 -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-4 py-3 border-b bg-gray-50">
      <h2 class="font-bold">直近の立替経費（未精算）</h2>
    </div>
    <% if @pending_expenses.any? %>
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">日付</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">従業員</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">案件/種別</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">支払先</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">内容</th>
            <th class="px-4 py-3 text-right text-sm font-medium text-gray-500">金額</th>
            <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">レシート</th>
            <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">操作</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @pending_expenses.each do |expense| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 text-sm">
                <%= expense.created_at.strftime("%m/%d") %>
              </td>
              <td class="px-4 py-3 text-sm">
                <%= expense.payer&.name || "-" %>
              </td>
              <td class="px-4 py-3 text-sm">
                <% if expense.daily_report_id.present? %>
                  <span class="px-2 py-1 text-xs rounded bg-orange-100 text-orange-800">日報</span>
                  <%= expense.project&.name || "現場経費" %>
                <% elsif expense.project.present? %>
                  <span class="px-2 py-1 text-xs rounded bg-blue-100 text-blue-800">営業</span>
                  <%= expense.project.name %>
                <% else %>
                  <span class="px-2 py-1 text-xs rounded bg-purple-100 text-purple-800">管理</span>
                  販管費
                <% end %>
              </td>
              <td class="px-4 py-3 text-sm"><%= expense.payee_name || "-" %></td>
              <td class="px-4 py-3 text-sm"><%= expense.description %></td>
              <td class="px-4 py-3 text-sm text-right font-medium">
                <%= number_with_delimiter(expense.amount.to_i) %>円
              </td>
              <td class="px-4 py-3 text-center">
                <% if expense.receipt.attached? %>
                  <%= link_to rails_blob_path(expense.receipt, disposition: "inline"), target: "_blank", class: "text-blue-600 hover:underline" do %>
                    <svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  <% end %>
                <% else %>
                  <span class="text-gray-400 text-xs">なし</span>
                <% end %>
              </td>
              <td class="px-4 py-3 text-center">
                <%= button_to "精算", reimburse_accounting_reimbursement_path(expense),
                    method: :post,
                    class: "px-3 py-1 bg-green-600 text-white text-sm rounded hover:bg-green-700" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="p-8 text-center text-gray-500">
        精算待ちの経費はありません
      </div>
    <% end %>
  </div>
</div>
