<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold">精算済み一覧</h1>
      <p class="text-gray-500">立替経費の精算履歴</p>
    </div>
    <div class="flex gap-2">
      <%= link_to "未精算一覧", accounting_reimbursements_path, class: "px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700" %>
    </div>
  </div>

  <!-- フィルター -->
  <div class="bg-white rounded-lg shadow p-4 mb-6">
    <%= form_with url: reimbursed_accounting_reimbursements_path, method: :get, class: "flex flex-wrap gap-4 items-end" do %>
      <div>
        <label class="block text-sm text-gray-600 mb-1">年</label>
        <%= select_tag :year, options_for_select((2024..Date.current.year + 1).to_a.reverse, @year), class: "border rounded px-3 py-2" %>
      </div>
      <div>
        <label class="block text-sm text-gray-600 mb-1">月</label>
        <%= select_tag :month, options_for_select((1..12).to_a, @month), class: "border rounded px-3 py-2" %>
      </div>
      <div>
        <label class="block text-sm text-gray-600 mb-1">従業員</label>
        <%= select_tag :employee_id,
            options_for_select(
              [["全員", ""]] + @employees_with_reimbursements.map { |e| [e.name, e.id] },
              params[:employee_id]
            ),
            class: "border rounded px-3 py-2" %>
      </div>
      <div>
        <%= submit_tag "表示", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <!-- サマリー -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500"><%= @year %>年<%= @month %>月 精算済み件数</div>
      <div class="text-2xl font-bold text-green-600"><%= @expenses.count %>件</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500"><%= @year %>年<%= @month %>月 精算済み金額</div>
      <div class="text-2xl font-bold"><%= number_with_delimiter(@total_amount.to_i) %>円</div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500">対象従業員数</div>
      <div class="text-2xl font-bold"><%= @expenses_by_employee.count %>人</div>
    </div>
  </div>

  <!-- 従業員別集計 -->
  <% if @expenses_by_employee.any? && !params[:employee_id].present? %>
    <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
      <div class="px-4 py-3 border-b bg-gray-50">
        <h2 class="font-bold">従業員別 精算済み金額</h2>
      </div>
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">従業員</th>
            <th class="px-4 py-3 text-right text-sm font-medium text-gray-500">件数</th>
            <th class="px-4 py-3 text-right text-sm font-medium text-gray-500">金額</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @expenses_by_employee.each do |employee, amount| %>
            <% next if employee.nil? %>
            <% employee_expenses = @expenses.select { |e| e.payer_id == employee.id } %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3">
                <%= link_to employee.name,
                    reimbursed_accounting_reimbursements_path(year: @year, month: @month, employee_id: employee.id),
                    class: "text-blue-600 hover:underline" %>
              </td>
              <td class="px-4 py-3 text-right text-sm"><%= employee_expenses.count %>件</td>
              <td class="px-4 py-3 text-right font-medium">
                <%= number_with_delimiter(amount.to_i) %>円
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot class="bg-gray-100">
          <tr>
            <td class="px-4 py-3 font-bold">合計</td>
            <td class="px-4 py-3 text-right font-bold"><%= @expenses.count %>件</td>
            <td class="px-4 py-3 text-right font-bold"><%= number_with_delimiter(@total_amount.to_i) %>円</td>
          </tr>
        </tfoot>
      </table>
    </div>
  <% end %>

  <!-- 精算済み一覧 -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-4 py-3 border-b bg-green-50">
      <h2 class="font-bold text-green-800">
        精算済み経費一覧
        <% if @selected_employee %>
          - <%= @selected_employee.name %>
        <% end %>
      </h2>
    </div>
    <% if @expenses.any? %>
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">精算日</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">報告日</th>
            <% unless @selected_employee %>
              <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">従業員</th>
            <% end %>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">案件</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">支払先</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">カテゴリ</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-500">内容</th>
            <th class="px-4 py-3 text-right text-sm font-medium text-gray-500">金額</th>
            <th class="px-4 py-3 text-center text-sm font-medium text-gray-500">レシート</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @expenses.each do |expense| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 text-sm text-green-600">
                <%= expense.reimbursed_at&.strftime("%Y/%m/%d") || "-" %>
              </td>
              <td class="px-4 py-3 text-sm">
                <%= expense.daily_report&.report_date&.strftime("%Y/%m/%d") || expense.created_at.strftime("%Y/%m/%d") %>
              </td>
              <% unless @selected_employee %>
                <td class="px-4 py-3 text-sm">
                  <%= expense.payer&.name || "-" %>
                </td>
              <% end %>
              <td class="px-4 py-3 text-sm">
                <% if expense.project.present? %>
                  <%= link_to expense.project.name, project_path(expense.project), class: "text-blue-600 hover:underline" %>
                <% else %>
                  <span class="text-gray-400">販管費</span>
                <% end %>
              </td>
              <td class="px-4 py-3 text-sm"><%= expense.payee_name || "-" %></td>
              <td class="px-4 py-3">
                <span class="px-2 py-1 text-xs rounded bg-gray-100"><%= expense.category_label %></span>
              </td>
              <td class="px-4 py-3 text-sm"><%= expense.description %></td>
              <td class="px-4 py-3 text-sm text-right font-medium">
                <%= number_with_delimiter(expense.amount.to_i) %>円
              </td>
              <td class="px-4 py-3 text-center">
                <% if expense.receipt.attached? %>
                  <%= link_to rails_blob_path(expense.receipt, disposition: "inline"), target: "_blank" do %>
                    <% if expense.receipt.content_type.start_with?("image/") %>
                      <%= image_tag expense.receipt, class: "h-10 w-10 object-cover rounded inline" %>
                    <% else %>
                      <span class="text-blue-600 hover:underline text-sm">PDF</span>
                    <% end %>
                  <% end %>
                <% else %>
                  <span class="text-gray-400 text-xs">-</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot class="bg-gray-100">
          <tr>
            <td colspan="<%= @selected_employee ? 6 : 7 %>" class="px-4 py-3 text-right font-bold">合計</td>
            <td class="px-4 py-3 text-right font-bold text-green-600">
              <%= number_with_delimiter(@total_amount.to_i) %>円
            </td>
            <td></td>
          </tr>
        </tfoot>
      </table>
    <% else %>
      <div class="p-8 text-center text-gray-500">
        <%= @year %>年<%= @month %>月の精算済み経費はありません
      </div>
    <% end %>
  </div>
</div>
