<div class="max-w-2xl mx-auto">
  <!-- ヘッダー -->
  <div class="mb-6">
    <nav class="text-sm text-gray-500 mb-2">
      <%= link_to "案件一覧", projects_path, class: "hover:text-gray-700" %> /
      <%= link_to @project.name, @project, class: "hover:text-gray-700" %> /
      <%= link_to "書類ファイル", project_project_documents_path(@project), class: "hover:text-gray-700" %> /
      新規追加
    </nav>
    <h1 class="text-2xl font-bold text-gray-900">書類を追加</h1>
    <p class="mt-1 text-sm text-gray-500"><%= @project.code %> - <%= @project.name %></p>
  </div>

  <!-- フォーム -->
  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with model: [@project, @document], class: "space-y-6" do |f| %>
      <% if @document.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">入力エラーがあります</h3>
              <ul class="mt-2 list-disc list-inside text-sm text-red-700">
                <% @document.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= f.label :category, "カテゴリ", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :category, ProjectDocument::CATEGORY_LABELS.map { |k, v| [v, k] },
            {},
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
      </div>

      <div>
        <%= f.label :name, "書類名", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name,
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            required: true,
            placeholder: "例: 注文書、施工要領書、安全書類一式" %>
      </div>

      <div>
        <%= f.label :document_date, "書類日付", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :document_date,
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        <p class="mt-1 text-xs text-gray-500">書類の発行日や受領日など</p>
      </div>

      <div>
        <%= f.label :file, "ファイル", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md">
          <div class="space-y-1 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
              <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <div class="flex text-sm text-gray-600">
              <%= f.label :file, class: "relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500" do %>
                <span>ファイルを選択</span>
                <%= f.file_field :file, class: "sr-only" %>
              <% end %>
              <p class="pl-1">またはドラッグ&ドロップ</p>
            </div>
            <p class="text-xs text-gray-500">PDF, Word, Excel, 画像など（最大10MB）</p>
          </div>
        </div>
      </div>

      <div>
        <%= f.label :description, "備考", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :description,
            rows: 3,
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            placeholder: "書類に関するメモ（任意）" %>
      </div>

      <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
        <%= link_to "キャンセル", project_project_documents_path(@project),
            class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <%= f.submit "アップロード",
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
