<div class="container mx-auto px-4 py-6 max-w-2xl">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">経費報告</h1>
    <%= link_to "戻る", expense_reports_path, class: "px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700" %>
  </div>

  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
    <p class="text-blue-800 text-sm">
      <strong>営業経費・管理経費</strong>の報告画面です。<br>
      現場経費は日報から入力してください。
    </p>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <%= form_with model: @expense, url: expense_reports_path, class: "space-y-6", data: { controller: "conditional-field" } do |f| %>
      <% if @expense.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded p-4">
          <p class="text-red-800 font-medium">入力エラーがあります</p>
          <ul class="mt-2 text-sm text-red-600 list-disc list-inside">
            <% @expense.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- 経費種別（営業・管理のみ） -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">経費種別</label>
        <div class="flex gap-4">
          <label class="flex items-center p-3 border rounded-lg cursor-pointer hover:bg-gray-50">
            <%= f.radio_button :expense_type, "sales", class: "mr-2", checked: @expense.expense_type == "sales" %>
            <div>
              <span class="font-medium">営業経費</span>
              <p class="text-xs text-gray-500">→ 工事原価（固定費）</p>
            </div>
          </label>
          <label class="flex items-center p-3 border rounded-lg cursor-pointer hover:bg-gray-50">
            <%= f.radio_button :expense_type, "admin", class: "mr-2" %>
            <div>
              <span class="font-medium">管理経費</span>
              <p class="text-xs text-gray-500">→ 販管費</p>
            </div>
          </label>
        </div>
      </div>

      <!-- 案件（営業経費の場合） -->
      <div id="project-field">
        <label class="block text-sm font-medium text-gray-700 mb-2">
          案件 <span class="text-gray-400 text-xs">（営業経費の場合は関連案件を選択）</span>
        </label>
        <%= f.select :project_id,
              options_for_select(@projects.map { |p| [p.name, p.id] }, @expense.project_id),
              { include_blank: "-- 案件なし（共通経費）--" },
              class: "w-full border rounded px-3 py-2" %>
      </div>

      <!-- カテゴリ -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">カテゴリ</label>
        <%= f.select :category,
              options_for_select(Expense::CATEGORY_LABELS.map { |k, v| [v, k] }, @expense.category),
              { include_blank: "-- 選択してください --" },
              class: "w-full border rounded px-3 py-2", required: true %>
      </div>

      <!-- 支払方法 -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">支払方法</label>
        <%= f.select :payment_method,
              options_for_select([
                ["立替（現金）", "advance"],
                ["会社カード", "company_card"],
                ["掛け払い", "credit"]
              ], @expense.payment_method),
              { include_blank: "-- 選択してください --" },
              class: "w-full border rounded px-3 py-2", required: true,
              data: { conditional_field_target: "trigger", action: "change->conditional-field#update" } %>
      </div>

      <!-- 支払先 -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">支払先（店舗名・会社名など）</label>
        <%= f.text_field :payee_name, placeholder: "例: コンビニ、ホームセンター、◯◯商事",
            class: "w-full border rounded px-3 py-2" %>
      </div>

      <!-- 仕入先（掛け払いの場合） -->
      <div data-conditional-field-target="field" data-show-when="credit" class="hidden">
        <label class="block text-sm font-medium text-gray-700 mb-2">仕入先（掛け払いの場合）</label>
        <%= f.select :supplier_id,
              options_for_select(@partners.map { |p| [p.name, p.id] }, @expense.supplier_id),
              { include_blank: "-- 仕入先を選択 --" },
              class: "w-full border rounded px-3 py-2" %>
      </div>

      <!-- 内容 -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">内容・用途</label>
        <%= f.text_field :description, placeholder: "何を購入したか、何に使ったか",
            class: "w-full border rounded px-3 py-2", required: true %>
      </div>

      <!-- 金額・数量 -->
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">金額（税込）</label>
          <%= f.number_field :amount, step: 1, min: 0,
              class: "w-full border rounded px-3 py-2", required: true %>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">数量 <span class="text-gray-400 text-xs">（任意）</span></label>
          <div class="flex gap-2">
            <%= f.number_field :quantity, step: 0.1, min: 0,
                class: "flex-1 border rounded px-3 py-2", placeholder: "数量" %>
            <%= f.text_field :unit, placeholder: "単位",
                class: "w-20 border rounded px-3 py-2" %>
          </div>
        </div>
      </div>

      <!-- レシート添付 -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          レシート・領収書
          <span class="text-red-500 text-xs ml-1">※現金・立替払いは必須</span>
        </label>
        <%= f.file_field :receipt,
            accept: "image/*,.pdf",
            class: "w-full border rounded px-3 py-2" %>
        <p class="text-xs text-gray-400 mt-1">画像またはPDF</p>
      </div>

      <!-- 送信ボタン -->
      <div class="flex justify-end gap-4 pt-4 border-t">
        <%= link_to "キャンセル", expense_reports_path, class: "px-6 py-2 bg-gray-300 rounded hover:bg-gray-400" %>
        <%= f.submit "報告する", class: "px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

