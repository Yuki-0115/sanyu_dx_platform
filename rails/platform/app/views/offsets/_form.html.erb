<%= form_with model: offset, class: "space-y-6", data: { controller: "offset-form" } do |f| %>
  <% if offset.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">入力エラーがあります</h3>
          <ul class="mt-2 list-disc list-inside text-sm text-red-700">
            <% offset.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <%# ステータス表示 %>
  <% if offset.persisted? %>
    <div class="flex items-center justify-between bg-white shadow rounded-lg p-4">
      <div class="flex items-center space-x-3">
        <span class="text-sm font-medium text-gray-700">ステータス:</span>
        <% if offset.status == "confirmed" %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            確定済み
          </span>
          <% if offset.confirmed_at %>
            <span class="text-xs text-gray-500">
              (<%= offset.confirmed_at.strftime("%Y/%m/%d %H:%M") %>
              <% if offset.confirmed_by %>- <%= offset.confirmed_by.name %><% end %>)
            </span>
          <% end %>
        <% else %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
            下書き
          </span>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# 稼働・給与データ表示 %>
  <% if @employee_summaries.present? %>
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-6">
      <h3 class="text-lg font-medium text-blue-900 mb-4">稼働・給与データ（自動集計）</h3>

      <div class="grid grid-cols-5 gap-4 mb-4">
        <div class="bg-white p-4 rounded-lg text-center">
          <div class="text-2xl font-bold text-blue-600"><%= @attendance_total[:full_days] %></div>
          <div class="text-sm text-gray-600">1日出勤</div>
        </div>
        <div class="bg-white p-4 rounded-lg text-center">
          <div class="text-2xl font-bold text-blue-500"><%= @attendance_total[:half_days] %></div>
          <div class="text-sm text-gray-600">半日出勤</div>
        </div>
        <div class="bg-white p-4 rounded-lg text-center">
          <div class="text-2xl font-bold text-blue-800"><%= @attendance_total[:man_days] %></div>
          <div class="text-sm text-gray-600">合計人日</div>
        </div>
        <div class="bg-white p-4 rounded-lg text-center">
          <div class="text-xl font-bold text-green-600"><%= number_to_currency(@attendance_total[:total_salary], unit: "¥", precision: 0) %></div>
          <div class="text-sm text-gray-600">給与計</div>
        </div>
        <div class="bg-white p-4 rounded-lg text-center">
          <div class="text-xl font-bold text-orange-600"><%= number_to_currency(@attendance_total[:total_social_insurance], unit: "¥", precision: 0) %></div>
          <div class="text-sm text-gray-600">社保計</div>
        </div>
      </div>

      <% if @employee_summaries.any? %>
        <table class="min-w-full divide-y divide-blue-200 bg-white rounded-lg overflow-hidden text-sm">
          <thead class="bg-blue-100">
            <tr>
              <th class="px-3 py-2 text-left text-xs font-medium text-blue-800">仮社員名</th>
              <th class="px-3 py-2 text-right text-xs font-medium text-blue-800">人日</th>
              <th class="px-3 py-2 text-right text-xs font-medium text-blue-800">月給/日給</th>
              <th class="px-3 py-2 text-right text-xs font-medium text-blue-800">給与</th>
              <th class="px-3 py-2 text-right text-xs font-medium text-blue-800">社保</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-blue-100">
            <% @employee_summaries.each do |summary| %>
              <tr>
                <td class="px-3 py-2 text-gray-900"><%= summary[:employee].name %></td>
                <td class="px-3 py-2 text-gray-900 text-right"><%= summary[:man_days] %></td>
                <td class="px-3 py-2 text-gray-500 text-right">
                  <% if summary[:daily_rate] > 0 %>
                    日給 <%= number_to_currency(summary[:daily_rate], unit: "¥", precision: 0) %>
                  <% elsif summary[:monthly_salary] > 0 %>
                    月給 <%= number_to_currency(summary[:monthly_salary], unit: "¥", precision: 0) %>
                  <% else %>
                    <span class="text-red-500">未設定</span>
                  <% end %>
                </td>
                <td class="px-3 py-2 font-medium text-green-600 text-right"><%= number_to_currency(summary[:calculated_salary], unit: "¥", precision: 0) %></td>
                <td class="px-3 py-2 font-medium text-orange-600 text-right"><%= number_to_currency(summary[:calculated_social_insurance], unit: "¥", precision: 0) %></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot class="bg-blue-50">
            <tr>
              <td class="px-3 py-2 font-medium text-gray-900">合計</td>
              <td class="px-3 py-2 font-bold text-blue-800 text-right"><%= @attendance_total[:man_days] %></td>
              <td class="px-3 py-2 text-right">-</td>
              <td class="px-3 py-2 font-bold text-green-600 text-right"><%= number_to_currency(@attendance_total[:total_salary], unit: "¥", precision: 0) %></td>
              <td class="px-3 py-2 font-bold text-orange-600 text-right"><%= number_to_currency(@attendance_total[:total_social_insurance], unit: "¥", precision: 0) %></td>
            </tr>
          </tfoot>
        </table>

        <% if offset.status != "confirmed" %>
          <div class="mt-4 flex justify-end">
            <button type="button"
                    onclick="document.getElementById('offset_total_salary').value = <%= @attendance_total[:total_salary] %>; document.getElementById('offset_social_insurance').value = <%= @attendance_total[:total_social_insurance] %>;"
                    class="inline-flex items-center px-3 py-2 border border-blue-300 text-sm font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50">
              集計値を入力欄に反映
            </button>
          </div>
        <% end %>
      <% else %>
        <p class="text-sm text-blue-700">この協力会社の仮社員はいません</p>
      <% end %>
    </div>
  <% end %>

  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">相殺情報</h3>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <%= f.label :partner_id, "協力会社", class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :partner_id, @partners, :id, :name,
            { include_blank: "選択してください" },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", required: true, disabled: offset.status == "confirmed" } %>
      </div>

      <div>
        <%= f.label :year_month, "対象月", class: "block text-sm font-medium text-gray-700" %>
        <%
          current = Date.current
          month_options = (-12..3).map do |m_offset|
            date = current.beginning_of_month + m_offset.months
            [date.strftime("%Y年%m月"), date.strftime("%Y-%m")]
          end
        %>
        <%= f.select :year_month, options_for_select(month_options, offset.year_month),
            {},
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", disabled: offset.status == "confirmed" } %>
      </div>

      <div>
        <%= f.label :total_salary, "給与支払額", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :total_salary, step: 1,
            data: { action: "input->offset-form#calculate", "offset-form-target": "salary" },
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            disabled: offset.status == "confirmed" %>
      </div>

      <div>
        <%= f.label :social_insurance, "社会保険料", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :social_insurance, step: 1,
            data: { action: "input->offset-form#calculate", "offset-form-target": "insurance" },
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            disabled: offset.status == "confirmed" %>
      </div>

      <div class="sm:col-span-2">
        <%= f.label :revenue_amount, "売上金額", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :revenue_amount, step: 1,
            data: { action: "input->offset-form#calculate", "offset-form-target": "revenue" },
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            disabled: offset.status == "confirmed" %>
        <p class="mt-1 text-sm text-gray-500">協力会社からの請求売上金額を入力してください</p>
      </div>
    </div>

    <%# 計算結果表示 %>
    <div class="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
      <h4 class="text-sm font-medium text-blue-900 mb-3">計算結果（自動計算）</h4>
      <dl class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <div class="bg-white p-3 rounded-md">
          <dt class="text-xs text-gray-500">相殺額</dt>
          <dd class="text-lg font-bold text-gray-900" data-offset-form-target="offsetAmount">
            <%= number_to_currency(offset.offset_amount || 0, unit: "¥", precision: 0) %>
          </dd>
          <p class="text-xs text-gray-400 mt-1">給与 + 社保</p>
        </div>
        <div class="bg-white p-3 rounded-md">
          <dt class="text-xs text-gray-500">売上金額</dt>
          <dd class="text-lg font-bold text-gray-900" data-offset-form-target="revenueDisplay">
            <%= number_to_currency(offset.revenue_amount || 0, unit: "¥", precision: 0) %>
          </dd>
        </div>
        <div class="bg-white p-3 rounded-md">
          <dt class="text-xs text-gray-500">差引残高</dt>
          <dd class="text-lg font-bold <%= (offset.balance || 0) >= 0 ? 'text-green-600' : 'text-red-600' %>" data-offset-form-target="balance">
            <%= number_to_currency(offset.balance || 0, unit: "¥", precision: 0) %>
          </dd>
          <p class="text-xs text-gray-400 mt-1">売上 - 相殺額</p>
        </div>
      </dl>
    </div>

    <div class="mt-4 p-3 bg-gray-50 rounded-lg text-sm text-gray-600">
      <strong>計算式:</strong> 相殺額 = 給与支払額 + 社会保険料 / 差引残高 = 売上金額 - 相殺額
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "キャンセル", offset.persisted? ? offset_path(offset) : offsets_path,
        class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <% if offset.status != "confirmed" %>
      <%= f.submit offset.persisted? ? "更新" : "作成",
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
    <% end %>
  </div>
<% end %>
