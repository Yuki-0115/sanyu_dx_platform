  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <!-- ヘッダー -->
      <div class="flex justify-between items-center mb-6">
        <div>
          <%= link_to "← 勤怠管理表に戻る", attendance_sheets_path(month: @current_month.strftime("%Y-%m")), class: "text-blue-600 hover:underline text-sm" %>
          <h2 class="text-2xl font-bold text-gray-900 mt-2">勤怠詳細</h2>
        </div>
        <div class="flex items-center space-x-2">
          <%= link_to employee_detail_attendance_sheets_path(employee_id: @employee.id, month: @current_month.prev_month.strftime("%Y-%m")),
              class: "p-2 rounded-md hover:bg-gray-200" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          <% end %>
          <span class="text-lg font-medium"><%= l(@current_month, format: "%Y年%m月") %></span>
          <%= link_to employee_detail_attendance_sheets_path(employee_id: @employee.id, month: @current_month.next_month.strftime("%Y-%m")),
              class: "p-2 rounded-md hover:bg-gray-200" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          <% end %>
        </div>
      </div>

      <!-- 社員情報ヘッダー -->
      <div class="bg-white shadow rounded-lg p-6 mb-6">
        <div class="flex justify-between items-start">
          <div>
            <div class="flex items-center space-x-4">
              <div class="h-16 w-16 rounded-full bg-blue-100 flex items-center justify-center">
                <span class="text-2xl font-bold text-blue-600"><%= @employee.name.first %></span>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900"><%= @employee.name %></h3>
                <p class="text-sm text-gray-500">
                  <%= @employee.employment_type == "regular" ? "正社員" : "仮社員" %>
                  <% if @employee.partner.present? %>
                    （<%= @employee.partner.name %>）
                  <% end %>
                </p>
              </div>
            </div>
          </div>
          <div class="text-right">
            <div class="text-sm text-gray-500 mb-2">
              <p>社員コード: <%= @employee.code %></p>
              <p>入社日: <%= @employee.hire_date.present? ? l(@employee.hire_date) : "-" %></p>
            </div>
            <%= link_to export_employee_attendance_sheets_path(employee_id: @employee.id, month: @current_month.strftime("%Y-%m"), format: :csv),
                class: "inline-flex items-center px-3 py-2 border border-green-600 text-sm font-medium rounded-md text-green-600 bg-white hover:bg-green-50" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              CSV出力
            <% end %>
          </div>
        </div>
      </div>

      <%# 正社員の場合：確定給与入力セクション %>
      <% if @employee.employment_type == "regular" %>
        <div class="bg-white shadow rounded-lg p-6 mb-6">
          <div class="flex justify-between items-center mb-4">
            <h4 class="text-lg font-medium text-gray-900">確定給与</h4>
            <% if @monthly_salary&.persisted? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                入力済み
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                未入力
              </span>
            <% end %>
          </div>

          <%# 基本月給との比較表示 %>
          <% if @employee.monthly_salary.present? && @employee.monthly_salary > 0 %>
            <div class="grid grid-cols-3 gap-4 mb-4 p-3 bg-gray-50 rounded-lg">
              <div class="text-center">
                <div class="text-xs text-gray-500">基本月給（マスタ）</div>
                <div class="text-lg font-medium text-gray-700"><%= number_to_currency(@employee.monthly_salary, unit: "¥", precision: 0) %></div>
              </div>
              <div class="text-center">
                <div class="text-xs text-gray-500">確定給与</div>
                <div class="text-lg font-bold <%= @monthly_salary&.persisted? ? 'text-blue-600' : 'text-gray-400' %>">
                  <%= @monthly_salary&.persisted? ? number_to_currency(@monthly_salary.total_amount, unit: "¥", precision: 0) : "未入力" %>
                </div>
              </div>
              <div class="text-center">
                <div class="text-xs text-gray-500">差額（残業・休出等）</div>
                <% if @monthly_salary&.persisted? %>
                  <% diff = @monthly_salary.total_amount.to_i - @employee.monthly_salary.to_i %>
                  <div class="text-lg font-bold <%= diff >= 0 ? 'text-green-600' : 'text-red-600' %>">
                    <%= diff >= 0 ? '+' : '' %><%= number_to_currency(diff, unit: "¥", precision: 0) %>
                  </div>
                <% else %>
                  <div class="text-lg text-gray-400">-</div>
                <% end %>
              </div>
            </div>
          <% elsif @employee.monthly_salary.blank? || @employee.monthly_salary == 0 %>
            <div class="mb-4 p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
              <p class="text-sm text-yellow-800">
                基本月給が未設定です。
                <%= link_to "社員マスタで設定", edit_master_employee_path(@employee), class: "underline hover:text-yellow-900" %>
              </p>
            </div>
          <% end %>

          <%= form_with url: update_employee_salary_attendance_sheets_path(employee_id: @employee.id, month: @current_month.strftime("%Y-%m")),
                        method: :patch, class: "space-y-4" do |f| %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">確定給与（総支給額）</label>
                <div class="relative rounded-md shadow-sm">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <span class="text-gray-500 sm:text-sm">¥</span>
                  </div>
                  <%= text_field_tag :total_amount,
                      @monthly_salary&.total_amount&.to_i.presence,
                      class: "block w-full pl-8 pr-3 py-2 text-right rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                      placeholder: "0",
                      inputmode: "numeric" %>
                </div>
                <p class="mt-1 text-xs text-gray-500">社労士計算後の給与を入力</p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">備考</label>
                <%= text_field_tag :note,
                    @monthly_salary&.note,
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                    placeholder: "備考（任意）" %>
              </div>
            </div>
            <div class="flex justify-end">
              <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 cursor-pointer">
                給与を保存
              </button>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- 月間集計サマリー -->
      <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h4 class="text-lg font-medium text-gray-900 mb-4">月間集計</h4>
        <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
          <div class="bg-blue-50 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-blue-600"><%= @summary[:work_days] %></div>
            <div class="text-xs text-gray-600">出勤日数</div>
          </div>
          <div class="bg-gray-50 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-gray-600"><%= @summary[:day_off_days] %></div>
            <div class="text-xs text-gray-600">公休</div>
          </div>
          <div class="bg-green-50 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-green-600"><%= @summary[:paid_leave_days] %></div>
            <div class="text-xs text-gray-600">有給</div>
          </div>
          <div class="bg-red-50 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-red-600"><%= @summary[:absence_days] %></div>
            <div class="text-xs text-gray-600">欠勤</div>
          </div>
          <div class="bg-yellow-50 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-yellow-600"><%= @summary[:substitute_holiday_days] %></div>
            <div class="text-xs text-gray-600">振休</div>
          </div>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-4">
          <div class="border border-gray-200 rounded-lg p-4 text-center">
            <div class="text-xl font-bold text-gray-800"><%= sprintf("%.1f", @summary[:total_regular_hours]) %> h</div>
            <div class="text-xs text-gray-600">基本就業時間</div>
          </div>
          <div class="border border-orange-200 rounded-lg p-4 text-center">
            <div class="text-xl font-bold text-orange-600"><%= sprintf("%.1f", @summary[:total_overtime_hours]) %> h</div>
            <div class="text-xs text-gray-600">残業時間</div>
          </div>
          <div class="border border-purple-200 rounded-lg p-4 text-center">
            <div class="text-xl font-bold text-purple-600"><%= sprintf("%.1f", @summary[:total_night_hours]) %> h</div>
            <div class="text-xs text-gray-600">深夜時間</div>
          </div>
          <div class="border border-blue-200 rounded-lg p-4 text-center">
            <div class="text-xl font-bold text-blue-800"><%= sprintf("%.1f", @summary[:total_work_hours]) %> h</div>
            <div class="text-xs text-gray-600">合計就業時間</div>
          </div>
        </div>
      </div>

      <!-- 勤怠詳細テーブル（Excel風） -->
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 text-sm">
            <thead class="bg-gray-100">
              <tr>
                <th class="px-3 py-2 text-left text-xs font-medium text-gray-600 uppercase border-r border-gray-200">日</th>
                <th class="px-3 py-2 text-left text-xs font-medium text-gray-600 uppercase border-r border-gray-200">曜日</th>
                <th class="px-3 py-2 text-left text-xs font-medium text-gray-600 uppercase border-r border-gray-200">区分</th>
                <th class="px-3 py-2 text-center text-xs font-medium text-gray-600 uppercase border-r border-gray-200" colspan="2">就業時刻</th>
                <th class="px-3 py-2 text-center text-xs font-medium text-gray-600 uppercase border-r border-gray-200">休憩計</th>
                <th class="px-3 py-2 text-center text-xs font-medium text-gray-600 uppercase border-r border-gray-200" colspan="3">就業時間</th>
                <th class="px-3 py-2 text-center text-xs font-medium text-gray-600 uppercase border-r border-gray-200">計</th>
                <th class="px-3 py-2 text-left text-xs font-medium text-gray-600 uppercase">現場</th>
              </tr>
              <tr class="bg-gray-50">
                <th class="px-3 py-1 border-r border-gray-200"></th>
                <th class="px-3 py-1 border-r border-gray-200"></th>
                <th class="px-3 py-1 border-r border-gray-200"></th>
                <th class="px-3 py-1 text-center text-xs text-gray-500 border-r border-gray-200">出社</th>
                <th class="px-3 py-1 text-center text-xs text-gray-500 border-r border-gray-200">退社</th>
                <th class="px-3 py-1 border-r border-gray-200"></th>
                <th class="px-3 py-1 text-center text-xs text-gray-500 border-r border-gray-200">基本</th>
                <th class="px-3 py-1 text-center text-xs text-gray-500 border-r border-gray-200">残業</th>
                <th class="px-3 py-1 text-center text-xs text-gray-500 border-r border-gray-200">深夜</th>
                <th class="px-3 py-1 border-r border-gray-200"></th>
                <th class="px-3 py-1"></th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% @days.each do |date| %>
                <%
                  att = @attendance_by_date[date]
                  wday = %w[日 月 火 水 木 金 土][date.wday]
                  is_weekend = date.wday == 0 || date.wday == 6
                  row_class = is_weekend ? "bg-red-50" : ""
                  row_class = "bg-green-50" if att&.work_category == "paid_leave"
                  row_class = "bg-yellow-50" if att&.work_category == "substitute_holiday"
                %>
                <tr class="<%= row_class %> hover:bg-gray-50">
                  <td class="px-3 py-2 border-r border-gray-200 font-medium"><%= date.day %></td>
                  <td class="px-3 py-2 border-r border-gray-200 <%= is_weekend ? 'text-red-600 font-medium' : '' %>"><%= wday %></td>
                  <td class="px-3 py-2 border-r border-gray-200">
                    <% if att.present? %>
                      <span class="<%= att.work_category == 'work' ? 'text-blue-600' : 'text-gray-600' %>">
                        <%= att.work_category_label %>
                      </span>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-3 py-2 border-r border-gray-200 text-center">
                    <% if att&.start_time.present? %>
                      <%= att.start_time.strftime("%H:%M") %>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-3 py-2 border-r border-gray-200 text-center">
                    <% if att&.end_time.present? %>
                      <%= att.end_time.strftime("%H:%M") %>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-3 py-2 border-r border-gray-200 text-center">
                    <% if att.present? %>
                      <%= att.break_time_display %>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-3 py-2 border-r border-gray-200 text-center">
                    <% if att.present? && att.work_category == "work" %>
                      <%= att.minutes_to_time_display(att.regular_work_minutes) %>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-3 py-2 border-r border-gray-200 text-center">
                    <% if att&.overtime_minutes.to_i > 0 %>
                      <span class="text-orange-600 font-medium"><%= att.minutes_to_time_display(att.overtime_minutes) %></span>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-3 py-2 border-r border-gray-200 text-center">
                    <% if att&.night_minutes.to_i > 0 %>
                      <span class="text-purple-600 font-medium"><%= att.minutes_to_time_display(att.night_minutes) %></span>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-3 py-2 border-r border-gray-200 text-center font-medium">
                    <% if att.present? && att.work_category == "work" %>
                      <%= att.minutes_to_time_display(att.total_work_minutes) %>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-3 py-2 text-sm">
                    <% if att.present? %>
                      <% if att.site_note.present? %>
                        <%= att.site_note %>
                      <% elsif att.daily_report&.project.present? %>
                        <span class="text-gray-600"><%= att.daily_report.project.name %></span>
                      <% elsif att.daily_report&.external_site_name.present? %>
                        <span class="text-orange-600"><%= att.daily_report.external_site_name %></span>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot class="bg-gray-100 font-medium">
              <tr>
                <td colspan="6" class="px-3 py-2 border-r border-gray-200 text-right">合計</td>
                <td class="px-3 py-2 border-r border-gray-200 text-center"><%= sprintf("%.1f", @summary[:total_regular_hours]) %>h</td>
                <td class="px-3 py-2 border-r border-gray-200 text-center text-orange-600"><%= sprintf("%.1f", @summary[:total_overtime_hours]) %>h</td>
                <td class="px-3 py-2 border-r border-gray-200 text-center text-purple-600"><%= sprintf("%.1f", @summary[:total_night_hours]) %>h</td>
                <td class="px-3 py-2 border-r border-gray-200 text-center text-blue-600"><%= sprintf("%.1f", @summary[:total_work_hours]) %>h</td>
                <td class="px-3 py-2"></td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>

      <!-- 凡例 -->
      <div class="mt-4 flex flex-wrap gap-4 text-sm text-gray-600">
        <div class="flex items-center">
          <span class="w-4 h-4 bg-red-50 border border-gray-200 rounded mr-2"></span>
          土日
        </div>
        <div class="flex items-center">
          <span class="w-4 h-4 bg-green-50 border border-gray-200 rounded mr-2"></span>
          有給
        </div>
        <div class="flex items-center">
          <span class="w-4 h-4 bg-yellow-50 border border-gray-200 rounded mr-2"></span>
          振休
        </div>
      </div>
    </div>
  </div>
