<div class="min-h-screen bg-gray-100">
  <%= render "shared/navbar" %>

  <main class="max-w-full mx-auto py-6 px-4">
    <!-- ヘッダー -->
    <div class="mb-6">
      <div class="flex flex-wrap justify-between items-center gap-4">
        <div>
          <h2 class="text-2xl font-bold text-gray-900">勤怠管理表</h2>
          <p class="text-gray-600">日報から自動集計された個人別勤怠情報</p>
        </div>

        <!-- 月ナビゲーション -->
        <div class="flex items-center space-x-2">
          <%= link_to attendance_sheets_path(month: (@current_month - 1.month).strftime("%Y-%m")),
              class: "p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-200 rounded-lg" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          <% end %>
          <span class="text-xl font-semibold px-4 min-w-32 text-center">
            <%= l(@current_month, format: "%Y年%m月") %>
          </span>
          <%= link_to attendance_sheets_path(month: (@current_month + 1.month).strftime("%Y-%m")),
              class: "p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-200 rounded-lg" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          <% end %>
          <%= link_to "今月", attendance_sheets_path,
              class: "ml-4 px-3 py-1 text-sm bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
          <%= link_to export_all_attendance_sheets_path(month: @current_month.strftime("%Y-%m"), format: :csv),
              class: "ml-2 inline-flex items-center px-3 py-1 border border-green-600 text-sm font-medium rounded-md text-green-600 bg-white hover:bg-green-50" do %>
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            CSV
          <% end %>
        </div>
      </div>
    </div>

    <!-- 凡例 -->
    <div class="mb-4 flex flex-wrap items-center gap-4 text-sm">
      <span class="font-medium text-gray-700">凡例:</span>
      <span class="inline-flex items-center gap-1">
        <span class="w-6 h-6 rounded bg-green-500 text-white text-xs font-bold flex items-center justify-center">1</span>
        <span class="text-gray-600">1日出勤</span>
      </span>
      <span class="inline-flex items-center gap-1">
        <span class="w-6 h-6 rounded bg-yellow-500 text-white text-xs font-bold flex items-center justify-center">.5</span>
        <span class="text-gray-600">半日出勤</span>
      </span>
      <span class="inline-flex items-center gap-1">
        <span class="w-6 h-6 rounded bg-gray-200 text-gray-400 text-xs flex items-center justify-center">-</span>
        <span class="text-gray-600">出勤なし</span>
      </span>
      <span class="text-gray-500 ml-4">※ セルにマウスを乗せると現場名が表示されます</span>
    </div>

    <!-- ==================== -->
    <!-- 正社員 勤怠表 -->
    <!-- ==================== -->
    <div class="bg-white shadow rounded-lg overflow-hidden mb-6">
      <div class="px-4 py-3 bg-blue-50 border-b border-blue-200">
        <h3 class="text-lg font-medium text-blue-900">正社員 勤怠表</h3>
        <p class="text-sm text-blue-600"><%= @regular_employees.count %>名</p>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 text-sm">
          <thead class="bg-gray-50">
            <tr>
              <th class="sticky left-0 z-20 bg-gray-50 px-3 py-2 text-left text-xs font-medium text-gray-500 border-r min-w-36">
                社員名
              </th>
              <% @days.each do |day| %>
                <%
                  is_today = day == Date.current
                  is_sunday = day.wday == 0
                  is_saturday = day.wday == 6
                %>
                <th class="px-0.5 py-2 text-center text-xs font-medium w-8 <%= is_today ? 'bg-blue-100' : '' %> <%= is_sunday ? 'text-red-500 bg-red-50' : (is_saturday ? 'text-blue-500 bg-blue-50' : 'text-gray-500') %>">
                  <div class="text-xs"><%= %w[日 月 火 水 木 金 土][day.wday] %></div>
                  <div><%= day.day %></div>
                </th>
              <% end %>
              <th class="px-2 py-2 text-center text-xs font-medium text-gray-500 bg-green-50 border-l w-10">出勤</th>
              <th class="px-2 py-2 text-center text-xs font-medium text-gray-500 bg-yellow-50 w-10">半日</th>
              <th class="px-2 py-2 text-center text-xs font-medium text-gray-500 bg-blue-50 w-12">人日</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @regular_employees.each do |employee| %>
              <tr class="hover:bg-gray-50">
                <td class="sticky left-0 z-10 bg-white px-3 py-1.5 font-medium border-r whitespace-nowrap">
                  <%= link_to employee.name, employee_detail_attendance_sheets_path(employee_id: employee.id, month: @current_month.strftime("%Y-%m")), class: "text-blue-600 hover:underline" %>
                </td>
                <% @days.each do |day| %>
                  <%
                    is_today = day == Date.current
                    is_sunday = day.wday == 0
                    is_saturday = day.wday == 6
                    day_attendances = @attendance_map.dig(employee.id, day) || []
                    status = day_attendance_status(day_attendances)
                    site_names = day_attendances.map { |a| a.daily_report.site_name }.compact.uniq.join(", ")
                  %>
                  <td class="px-0.5 py-1 text-center <%= is_today ? 'bg-blue-50' : (is_sunday ? 'bg-red-50/50' : (is_saturday ? 'bg-blue-50/50' : '')) %>"
                      <% if site_names.present? %>title="<%= day.strftime('%m/%d') %>: <%= site_names %>"<% end %>>
                    <% case status %>
                    <% when "full" %>
                      <span class="inline-flex items-center justify-center w-6 h-6 rounded bg-green-500 text-white text-xs font-bold">1</span>
                    <% when "half" %>
                      <span class="inline-flex items-center justify-center w-6 h-6 rounded bg-yellow-500 text-white text-xs font-bold">.5</span>
                    <% else %>
                      <span class="text-gray-300">-</span>
                    <% end %>
                  </td>
                <% end %>
                <% summary = @regular_summary[employee.id] || { full_days: 0, half_days: 0, total_days: 0 } %>
                <td class="px-2 py-1.5 text-center font-medium text-green-700 bg-green-50 border-l"><%= summary[:full_days] %></td>
                <td class="px-2 py-1.5 text-center font-medium text-yellow-700 bg-yellow-50"><%= summary[:half_days] %></td>
                <td class="px-2 py-1.5 text-center font-bold text-blue-700 bg-blue-50"><%= summary[:total_days] %></td>
              </tr>
            <% end %>
            <% if @regular_employees.empty? %>
              <tr>
                <td colspan="<%= 1 + @days.size + 3 %>" class="px-4 py-8 text-center text-gray-500">
                  正社員が登録されていません
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot class="bg-gray-100">
            <tr class="font-medium">
              <td class="sticky left-0 z-10 bg-gray-100 px-3 py-2 text-gray-700 border-r">
                正社員合計
              </td>
              <% @days.each do |day| %>
                <%
                  day_count = @regular_employees.count do |emp|
                    atts = @attendance_map.dig(emp.id, day) || []
                    day_attendance_status(atts) == "full"
                  end
                  half_count = @regular_employees.count do |emp|
                    atts = @attendance_map.dig(emp.id, day) || []
                    day_attendance_status(atts) == "half"
                  end
                  total = day_count + half_count
                %>
                <td class="px-0.5 py-2 text-center text-xs <%= total > 0 ? 'text-gray-700' : 'text-gray-300' %>">
                  <%= total > 0 ? total : '-' %>
                </td>
              <% end %>
              <td class="px-2 py-2 text-center text-green-700 bg-green-100 border-l">
                <%= @regular_summary.values.sum { |s| s[:full_days] } %>
              </td>
              <td class="px-2 py-2 text-center text-yellow-700 bg-yellow-100">
                <%= @regular_summary.values.sum { |s| s[:half_days] } %>
              </td>
              <td class="px-2 py-2 text-center text-blue-700 bg-blue-100 font-bold">
                <%= @regular_summary.values.sum { |s| s[:total_days] } %>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>

    <!-- ==================== -->
    <!-- 仮社員 勤怠表（協力会社別） -->
    <!-- ==================== -->
    <% @partners_with_temporary.each do |partner| %>
      <% partner_employees = @temporary_employees.select { |e| e.partner_id == partner.id } %>
      <div class="bg-white shadow rounded-lg overflow-hidden mb-6">
        <div class="px-4 py-3 bg-yellow-50 border-b border-yellow-200">
          <h3 class="text-lg font-medium text-yellow-900">仮社員 勤怠表 - <%= partner.name %></h3>
          <p class="text-sm text-yellow-600"><%= partner_employees.count %>名</p>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 text-sm">
            <thead class="bg-gray-50">
              <tr>
                <th class="sticky left-0 z-20 bg-gray-50 px-3 py-2 text-left text-xs font-medium text-gray-500 border-r min-w-36">
                  社員名
                </th>
                <% @days.each do |day| %>
                  <%
                    is_today = day == Date.current
                    is_sunday = day.wday == 0
                    is_saturday = day.wday == 6
                  %>
                  <th class="px-0.5 py-2 text-center text-xs font-medium w-8 <%= is_today ? 'bg-blue-100' : '' %> <%= is_sunday ? 'text-red-500 bg-red-50' : (is_saturday ? 'text-blue-500 bg-blue-50' : 'text-gray-500') %>">
                    <div class="text-xs"><%= %w[日 月 火 水 木 金 土][day.wday] %></div>
                    <div><%= day.day %></div>
                  </th>
                <% end %>
                <th class="px-2 py-2 text-center text-xs font-medium text-gray-500 bg-green-50 border-l w-10">出勤</th>
                <th class="px-2 py-2 text-center text-xs font-medium text-gray-500 bg-yellow-50 w-10">半日</th>
                <th class="px-2 py-2 text-center text-xs font-medium text-gray-500 bg-yellow-50 w-12">人日</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% partner_employees.each do |employee| %>
                <tr class="hover:bg-gray-50">
                  <td class="sticky left-0 z-10 bg-white px-3 py-1.5 font-medium border-r whitespace-nowrap">
                    <%= link_to employee.name, employee_detail_attendance_sheets_path(employee_id: employee.id, month: @current_month.strftime("%Y-%m")), class: "text-blue-600 hover:underline" %>
                  </td>
                  <% @days.each do |day| %>
                    <%
                      is_today = day == Date.current
                      is_sunday = day.wday == 0
                      is_saturday = day.wday == 6
                      day_attendances = @attendance_map.dig(employee.id, day) || []
                      status = day_attendance_status(day_attendances)
                      site_names = day_attendances.map { |a| a.daily_report.site_name }.compact.uniq.join(", ")
                    %>
                    <td class="px-0.5 py-1 text-center <%= is_today ? 'bg-blue-50' : (is_sunday ? 'bg-red-50/50' : (is_saturday ? 'bg-blue-50/50' : '')) %>"
                        <% if site_names.present? %>title="<%= day.strftime('%m/%d') %>: <%= site_names %>"<% end %>>
                      <% case status %>
                      <% when "full" %>
                        <span class="inline-flex items-center justify-center w-6 h-6 rounded bg-green-500 text-white text-xs font-bold">1</span>
                      <% when "half" %>
                        <span class="inline-flex items-center justify-center w-6 h-6 rounded bg-yellow-500 text-white text-xs font-bold">.5</span>
                      <% else %>
                        <span class="text-gray-300">-</span>
                      <% end %>
                    </td>
                  <% end %>
                  <% summary = @temporary_summary[employee.id] || { full_days: 0, half_days: 0, total_days: 0 } %>
                  <td class="px-2 py-1.5 text-center font-medium text-green-700 bg-green-50 border-l"><%= summary[:full_days] %></td>
                  <td class="px-2 py-1.5 text-center font-medium text-yellow-700 bg-yellow-50"><%= summary[:half_days] %></td>
                  <td class="px-2 py-1.5 text-center font-bold text-yellow-700 bg-yellow-50"><%= summary[:total_days] %></td>
                </tr>
              <% end %>
            </tbody>
            <tfoot class="bg-gray-100">
              <tr class="font-medium">
                <td class="sticky left-0 z-10 bg-gray-100 px-3 py-2 text-gray-700 border-r">
                  <%= partner.name %> 合計
                </td>
                <% @days.each do |day| %>
                  <%
                    day_count = partner_employees.count do |emp|
                      atts = @attendance_map.dig(emp.id, day) || []
                      day_attendance_status(atts) == "full"
                    end
                    half_count = partner_employees.count do |emp|
                      atts = @attendance_map.dig(emp.id, day) || []
                      day_attendance_status(atts) == "half"
                    end
                    total = day_count + half_count
                  %>
                  <td class="px-0.5 py-2 text-center text-xs <%= total > 0 ? 'text-gray-700' : 'text-gray-300' %>">
                    <%= total > 0 ? total : '-' %>
                  </td>
                <% end %>
                <% ps = @partner_summaries[partner.id] || { full_days: 0, half_days: 0, total_days: 0 } %>
                <td class="px-2 py-2 text-center text-green-700 bg-green-100 border-l"><%= ps[:full_days] %></td>
                <td class="px-2 py-2 text-center text-yellow-700 bg-yellow-100"><%= ps[:half_days] %></td>
                <td class="px-2 py-2 text-center text-yellow-700 bg-yellow-100 font-bold"><%= ps[:total_days] %></td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    <% end %>

    <% if @partners_with_temporary.empty? && @temporary_employees.any? %>
      <!-- 協力会社に紐付かない仮社員がいる場合 -->
      <div class="bg-white shadow rounded-lg overflow-hidden mb-6">
        <div class="px-4 py-3 bg-yellow-50 border-b border-yellow-200">
          <h3 class="text-lg font-medium text-yellow-900">仮社員 勤怠表</h3>
          <p class="text-sm text-yellow-600"><%= @temporary_employees.count %>名</p>
        </div>
        <div class="p-4 text-center text-gray-500">
          仮社員が登録されていますが、協力会社への紐付けがありません
        </div>
      </div>
    <% end %>

    <!-- ==================== -->
    <!-- 外注稼働表（原価管理用） -->
    <!-- ==================== -->
    <% if @outsourcing_data.any? %>
      <div class="bg-white shadow rounded-lg overflow-hidden mb-6">
        <div class="px-4 py-3 bg-purple-50 border-b border-purple-200">
          <h3 class="text-lg font-medium text-purple-900">外注稼働表（原価管理用）</h3>
          <p class="text-sm text-purple-600">会社別の稼働人数 - <%= @outsourcing_data.size %>社</p>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 text-sm">
            <thead class="bg-gray-50">
              <tr>
                <th class="sticky left-0 z-20 bg-gray-50 px-3 py-2 text-left text-xs font-medium text-gray-500 border-r min-w-36">
                  外注会社
                </th>
                <% @days.each do |day| %>
                  <%
                    is_today = day == Date.current
                    is_sunday = day.wday == 0
                    is_saturday = day.wday == 6
                  %>
                  <th class="px-0.5 py-2 text-center text-xs font-medium w-8 <%= is_today ? 'bg-blue-100' : '' %> <%= is_sunday ? 'text-red-500 bg-red-50' : (is_saturday ? 'text-blue-500 bg-blue-50' : 'text-gray-500') %>">
                    <div class="text-xs"><%= %w[日 月 火 水 木 金 土][day.wday] %></div>
                    <div><%= day.day %></div>
                  </th>
                <% end %>
                <th class="px-2 py-2 text-center text-xs font-medium text-gray-500 bg-purple-50 border-l w-14">
                  延べ人工
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @outsourcing_data.each do |partner_name, data| %>
                <tr class="hover:bg-gray-50">
                  <td class="sticky left-0 z-10 bg-white px-3 py-1.5 font-medium text-gray-900 border-r whitespace-nowrap">
                    <%= partner_name %>
                  </td>
                  <% @days.each do |day| %>
                    <%
                      is_today = day == Date.current
                      is_sunday = day.wday == 0
                      is_saturday = day.wday == 6
                      day_data = data[:days][day] || { full: 0, half: 0 }
                      man_days = day_data[:full] + (day_data[:half] * 0.5)
                    %>
                    <td class="px-0.5 py-1 text-center <%= is_today ? 'bg-blue-50' : (is_sunday ? 'bg-red-50/50' : (is_saturday ? 'bg-blue-50/50' : '')) %>">
                      <% if man_days > 0 %>
                        <span class="inline-flex items-center justify-center min-w-6 h-6 px-1 rounded bg-purple-500 text-white text-xs font-bold">
                          <%= man_days == man_days.to_i ? man_days.to_i : man_days %>
                        </span>
                      <% else %>
                        <span class="text-gray-300">-</span>
                      <% end %>
                    </td>
                  <% end %>
                  <td class="px-2 py-1.5 text-center font-bold text-purple-700 bg-purple-50 border-l">
                    <%= data[:total_man_days] %>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot class="bg-gray-100">
              <tr class="font-medium">
                <td class="sticky left-0 z-10 bg-gray-100 px-3 py-2 text-gray-700 border-r">
                  外注合計
                </td>
                <% @days.each do |day| %>
                  <%
                    day_total = @outsourcing_data.values.sum do |data|
                      day_data = data[:days][day] || { full: 0, half: 0 }
                      day_data[:full] + (day_data[:half] * 0.5)
                    end
                  %>
                  <td class="px-0.5 py-2 text-center text-xs <%= day_total > 0 ? 'text-gray-700' : 'text-gray-300' %>">
                    <%= day_total > 0 ? (day_total == day_total.to_i ? day_total.to_i : day_total) : '-' %>
                  </td>
                <% end %>
                <td class="px-2 py-2 text-center text-purple-700 bg-purple-100 font-bold border-l">
                  <%= @outsourcing_data.values.sum { |d| d[:total_man_days] } %>
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    <% end %>

    <!-- ==================== -->
    <!-- 月間集計サマリー -->
    <!-- ==================== -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-4 py-3 bg-gray-50 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900"><%= l(@current_month, format: "%Y年%m月") %> 月間集計</h3>
      </div>
      <div class="p-4">
        <!-- 全体サマリーカード -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-6">
          <div class="bg-blue-50 rounded-lg p-4 text-center">
            <div class="text-sm text-blue-600">正社員</div>
            <div class="text-2xl font-bold text-blue-700"><%= @total_summary[:regular_count] %><span class="text-sm font-normal">名</span></div>
          </div>
          <div class="bg-blue-50 rounded-lg p-4 text-center">
            <div class="text-sm text-blue-600">正社員 延べ</div>
            <div class="text-2xl font-bold text-blue-700"><%= @total_summary[:regular_man_days] %><span class="text-sm font-normal">人日</span></div>
          </div>
          <div class="bg-yellow-50 rounded-lg p-4 text-center">
            <div class="text-sm text-yellow-600">仮社員</div>
            <div class="text-2xl font-bold text-yellow-700"><%= @total_summary[:temporary_count] %><span class="text-sm font-normal">名</span></div>
          </div>
          <div class="bg-yellow-50 rounded-lg p-4 text-center">
            <div class="text-sm text-yellow-600">仮社員 延べ</div>
            <div class="text-2xl font-bold text-yellow-700"><%= @total_summary[:temporary_man_days] %><span class="text-sm font-normal">人日</span></div>
          </div>
          <div class="bg-purple-50 rounded-lg p-4 text-center">
            <div class="text-sm text-purple-600">外注会社</div>
            <div class="text-2xl font-bold text-purple-700"><%= @total_summary[:outsourcing_companies] %><span class="text-sm font-normal">社</span></div>
          </div>
          <div class="bg-purple-50 rounded-lg p-4 text-center">
            <div class="text-sm text-purple-600">外注 延べ</div>
            <div class="text-2xl font-bold text-purple-700"><%= @total_summary[:outsourcing_man_days] %><span class="text-sm font-normal">人工</span></div>
          </div>
        </div>

        <!-- 詳細集計テーブル -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <!-- 正社員 詳細 -->
          <div>
            <h4 class="text-sm font-medium text-gray-700 mb-2">正社員 個人別集計</h4>
            <div class="border rounded-lg overflow-hidden">
              <table class="min-w-full divide-y divide-gray-200 text-sm">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">氏名</th>
                    <th class="px-3 py-2 text-center text-xs font-medium text-gray-500">出勤</th>
                    <th class="px-3 py-2 text-center text-xs font-medium text-gray-500">半日</th>
                    <th class="px-3 py-2 text-center text-xs font-medium text-gray-500">人日</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                  <% @regular_employees.each do |emp| %>
                    <% s = @regular_summary[emp.id] || { full_days: 0, half_days: 0, total_days: 0 } %>
                    <tr>
                      <td class="px-3 py-2">
                        <%= link_to emp.name, employee_detail_attendance_sheets_path(employee_id: emp.id, month: @current_month.strftime("%Y-%m")), class: "text-blue-600 hover:underline" %>
                      </td>
                      <td class="px-3 py-2 text-center text-green-600"><%= s[:full_days] %></td>
                      <td class="px-3 py-2 text-center text-yellow-600"><%= s[:half_days] %></td>
                      <td class="px-3 py-2 text-center font-medium text-blue-600"><%= s[:total_days] %></td>
                    </tr>
                  <% end %>
                  <% if @regular_employees.empty? %>
                    <tr>
                      <td colspan="4" class="px-3 py-4 text-center text-gray-500">データなし</td>
                    </tr>
                  <% end %>
                </tbody>
                <tfoot class="bg-gray-100">
                  <tr class="font-medium">
                    <td class="px-3 py-2 text-gray-700">合計</td>
                    <td class="px-3 py-2 text-center text-green-700"><%= @regular_summary.values.sum { |s| s[:full_days] } %></td>
                    <td class="px-3 py-2 text-center text-yellow-700"><%= @regular_summary.values.sum { |s| s[:half_days] } %></td>
                    <td class="px-3 py-2 text-center text-blue-700"><%= @total_summary[:regular_man_days] %></td>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>

          <!-- 仮社員・協力会社別 詳細 -->
          <div>
            <h4 class="text-sm font-medium text-gray-700 mb-2">仮社員 協力会社別集計</h4>
            <div class="border rounded-lg overflow-hidden">
              <table class="min-w-full divide-y divide-gray-200 text-sm">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">協力会社</th>
                    <th class="px-3 py-2 text-center text-xs font-medium text-gray-500">人数</th>
                    <th class="px-3 py-2 text-center text-xs font-medium text-gray-500">出勤</th>
                    <th class="px-3 py-2 text-center text-xs font-medium text-gray-500">半日</th>
                    <th class="px-3 py-2 text-center text-xs font-medium text-gray-500">人日</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                  <% @partner_summaries.each do |partner_id, ps| %>
                    <tr>
                      <td class="px-3 py-2 text-gray-900"><%= ps[:name] %></td>
                      <td class="px-3 py-2 text-center text-gray-600"><%= ps[:employee_count] %></td>
                      <td class="px-3 py-2 text-center text-green-600"><%= ps[:full_days] %></td>
                      <td class="px-3 py-2 text-center text-yellow-600"><%= ps[:half_days] %></td>
                      <td class="px-3 py-2 text-center font-medium text-yellow-600"><%= ps[:total_days] %></td>
                    </tr>
                  <% end %>
                  <% if @partner_summaries.empty? %>
                    <tr>
                      <td colspan="5" class="px-3 py-4 text-center text-gray-500">データなし</td>
                    </tr>
                  <% end %>
                </tbody>
                <tfoot class="bg-gray-100">
                  <tr class="font-medium">
                    <td class="px-3 py-2 text-gray-700">合計</td>
                    <td class="px-3 py-2 text-center text-gray-700"><%= @total_summary[:temporary_count] %></td>
                    <td class="px-3 py-2 text-center text-green-700"><%= @partner_summaries.values.sum { |s| s[:full_days] } %></td>
                    <td class="px-3 py-2 text-center text-yellow-700"><%= @partner_summaries.values.sum { |s| s[:half_days] } %></td>
                    <td class="px-3 py-2 text-center text-yellow-700"><%= @total_summary[:temporary_man_days] %></td>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- 説明 -->
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <h4 class="text-sm font-medium text-blue-800 mb-2">勤怠データについて</h4>
      <ul class="text-sm text-blue-700 space-y-1">
        <li>・ <strong>正社員勤怠表</strong>：自社正社員の個人別出勤状況</li>
        <li>・ <strong>仮社員勤怠表</strong>：協力会社から派遣された仮社員の個人別出勤状況</li>
        <li>・ <strong>外注稼働表</strong>：外注会社別の稼働人数（原価計算用）</li>
        <li>・ データは職長が入力した日報から自動集計されます</li>
        <li>・ セルにマウスを乗せると現場名が確認できます</li>
      </ul>
    </div>
  </main>
</div>
