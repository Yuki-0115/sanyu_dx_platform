<div class="bg-white shadow rounded-lg p-6">
  <div class="flex justify-between items-center mb-4">
    <h3 class="text-lg font-medium text-gray-900">予算明細</h3>
    <p class="text-sm text-gray-500">※ 内訳明細タブで追加した工種・項目が自動で表示されます</p>
  </div>

  <div id="budget-categories-container">
    <% if @estimate.estimate_categories.any? %>
      <% @estimate.estimate_categories.order(:sort_order).each_with_index do |category, cat_idx| %>
        <div class="budget-category-section mb-4" data-category-id="<%= category.id %>">
          <!-- 工種ヘッダー（クリックで展開/折りたたみ） -->
          <div class="bg-green-100 px-4 py-3 flex justify-between items-center rounded-t-lg cursor-pointer budget-category-header"
               onclick="toggleBudgetCategory(this)">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-700 transform transition-transform budget-chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
              <span class="text-green-800 font-medium"><%= cat_idx + 1 %>. <%= category.name %> 一式</span>
              <span class="text-green-600 text-sm">（<%= category.estimate_items.count %>項目）</span>
            </div>
            <div class="flex items-center gap-4">
              <span class="text-green-700 text-sm">見積: <%= number_to_currency(category.direct_cost, unit: "¥", precision: 0) %></span>
              <span class="text-green-800 font-medium budget-category-total">
                予算: <%= number_to_currency(category.estimate_items.sum { |i| i.budget_amount.to_i }, unit: "¥", precision: 0) %>
              </span>
            </div>
          </div>

          <!-- 項目テーブル -->
          <div class="budget-category-content overflow-x-auto border border-gray-200 rounded-b-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-green-50">
                <tr>
                  <th class="px-2 py-2 text-left text-xs font-medium text-gray-500 w-48">名称</th>
                  <th class="px-2 py-2 text-left text-xs font-medium text-gray-500 w-40">規格</th>
                  <th class="px-2 py-2 text-right text-xs font-medium text-gray-500 w-20">数量</th>
                  <th class="px-2 py-2 text-center text-xs font-medium text-gray-500 w-16">単位</th>
                  <th class="px-2 py-2 text-right text-xs font-medium text-gray-500 w-24">見積単価</th>
                  <th class="px-2 py-2 text-right text-xs font-medium text-gray-500 w-28">予算単価</th>
                  <th class="px-2 py-2 text-right text-xs font-medium text-gray-500 w-28">予算金額</th>
                  <th class="px-2 py-2 text-right text-xs font-medium text-gray-500 w-20">工事日数</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% category.estimate_items.order(:sort_order).each do |item| %>
                  <% next if item.name.blank? %>
                  <% item_index = @estimate.estimate_items.index(item) || 0 %>
                  <tr class="budget-item-row" data-estimate-qty="<%= item.quantity %>" data-estimate-price="<%= item.unit_price %>">
                    <td class="px-2 py-2 text-sm text-gray-700">
                      <%= item.name %>
                      <%= hidden_field_tag "estimate[estimate_items_attributes][#{item_index}][id]", item.id if item.persisted? %>
                    </td>
                    <td class="px-2 py-2 text-sm text-gray-500">
                      <%= item.specification.presence || "-" %>
                    </td>
                    <td class="px-2 py-2 text-sm text-right text-gray-700">
                      <%= item.quantity.present? ? number_with_precision(item.quantity, precision: 2, strip_insignificant_zeros: true) : "-" %>
                    </td>
                    <td class="px-2 py-2 text-sm text-center text-gray-500">
                      <%= item.unit.presence || "-" %>
                    </td>
                    <td class="px-2 py-2 text-sm text-right text-gray-500">
                      <%= item.unit_price.present? ? number_to_currency(item.unit_price, unit: "¥", precision: 0) : "-" %>
                    </td>
                    <td class="px-1 py-1">
                      <input type="number" name="estimate[estimate_items_attributes][<%= item_index %>][budget_unit_price]"
                             value="<%= item.budget_unit_price %>"
                             step="1"
                             placeholder="<%= item.unit_price %>"
                             class="block w-full rounded border-gray-300 text-sm text-right budget-price">
                    </td>
                    <td class="px-2 py-2 text-right font-medium budget-amount">
                      <% if item.budget_amount.to_i > 0 %>
                        <%= number_to_currency(item.budget_amount, unit: "¥", precision: 0) %>
                      <% else %>
                        -
                      <% end %>
                    </td>
                    <td class="px-1 py-1">
                      <input type="number" name="estimate[estimate_items_attributes][<%= item_index %>][construction_days]"
                             value="<%= item.construction_days %>"
                             step="0.5" min="0"
                             class="block w-full rounded border-gray-300 text-sm text-right">
                    </td>
                  </tr>
                <% end %>
              </tbody>
              <tfoot class="bg-green-50">
                <tr>
                  <td colspan="4" class="px-2 py-2 text-sm font-medium text-gray-700">工種小計</td>
                  <td class="px-2 py-2 text-right text-sm text-gray-500">
                    <%= number_to_currency(category.direct_cost, unit: "¥", precision: 0) %>
                  </td>
                  <td></td>
                  <td class="px-2 py-2 text-right font-medium budget-category-subtotal">
                    <%= number_to_currency(category.estimate_items.sum { |i| i.budget_amount.to_i }, unit: "¥", precision: 0) %>
                  </td>
                  <td></td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      <% end %>
    <% elsif @estimate.estimate_items.any? { |i| i.name.present? } %>
      <!-- 旧データ：工種がない場合 -->
      <div class="budget-category-section mb-4">
        <div class="bg-green-100 px-4 py-3 flex justify-between items-center rounded-t-lg">
          <span class="text-green-800 font-medium">工事項目</span>
          <span class="text-green-800 font-medium budget-category-total">
            予算: <%= number_to_currency(@estimate.budget_total, unit: "¥", precision: 0) %>
          </span>
        </div>
        <div class="budget-category-content overflow-x-auto border border-gray-200 rounded-b-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-green-50">
              <tr>
                <th class="px-2 py-2 text-left text-xs font-medium text-gray-500 w-48">名称</th>
                <th class="px-2 py-2 text-left text-xs font-medium text-gray-500 w-40">規格</th>
                <th class="px-2 py-2 text-right text-xs font-medium text-gray-500 w-20">数量</th>
                <th class="px-2 py-2 text-center text-xs font-medium text-gray-500 w-16">単位</th>
                <th class="px-2 py-2 text-right text-xs font-medium text-gray-500 w-24">見積単価</th>
                <th class="px-2 py-2 text-right text-xs font-medium text-gray-500 w-28">予算単価</th>
                <th class="px-2 py-2 text-right text-xs font-medium text-gray-500 w-28">予算金額</th>
                <th class="px-2 py-2 text-right text-xs font-medium text-gray-500 w-20">工事日数</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @estimate.estimate_items.each_with_index do |item, idx| %>
                <% next if item.name.blank? %>
                <tr class="budget-item-row" data-estimate-qty="<%= item.quantity %>" data-estimate-price="<%= item.unit_price %>">
                  <td class="px-2 py-2 text-sm text-gray-700">
                    <%= item.name %>
                    <%= hidden_field_tag "estimate[estimate_items_attributes][#{idx}][id]", item.id if item.persisted? %>
                  </td>
                  <td class="px-2 py-2 text-sm text-gray-500">
                    <%= item.specification.presence || "-" %>
                  </td>
                  <td class="px-2 py-2 text-sm text-right text-gray-700">
                    <%= item.quantity.present? ? number_with_precision(item.quantity, precision: 2, strip_insignificant_zeros: true) : "-" %>
                  </td>
                  <td class="px-2 py-2 text-sm text-center text-gray-500">
                    <%= item.unit.presence || "-" %>
                  </td>
                  <td class="px-2 py-2 text-sm text-right text-gray-500">
                    <%= item.unit_price.present? ? number_to_currency(item.unit_price, unit: "¥", precision: 0) : "-" %>
                  </td>
                  <td class="px-1 py-1">
                    <input type="number" name="estimate[estimate_items_attributes][<%= idx %>][budget_unit_price]"
                           value="<%= item.budget_unit_price %>"
                           step="1"
                           placeholder="<%= item.unit_price %>"
                           class="block w-full rounded border-gray-300 text-sm text-right budget-price">
                  </td>
                  <td class="px-2 py-2 text-right font-medium budget-amount">
                    <% if item.budget_amount.to_i > 0 %>
                      <%= number_to_currency(item.budget_amount, unit: "¥", precision: 0) %>
                    <% else %>
                      -
                    <% end %>
                  </td>
                  <td class="px-1 py-1">
                    <input type="number" name="estimate[estimate_items_attributes][<%= idx %>][construction_days]"
                           value="<%= item.construction_days %>"
                           step="0.5" min="0"
                           class="block w-full rounded border-gray-300 text-sm text-right">
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12 bg-gray-50 rounded-lg" id="no-budget-items-message">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
        <p class="mt-4 text-gray-500">内訳明細タブで工種・項目を追加してください</p>
        <button type="button" onclick="window.switchEstimateTab('items')"
                class="mt-4 text-green-600 hover:text-green-800 font-medium">
          → 内訳明細タブへ移動
        </button>
      </div>
    <% end %>
  </div>

  <!-- 予算サマリー -->
  <div class="mt-6 grid grid-cols-1 md:grid-cols-4 gap-4 p-4 bg-green-50 rounded-lg">
    <div class="text-center">
      <p class="text-sm text-gray-600">見積金額（税抜）</p>
      <p class="text-xl font-bold text-gray-900" id="budget-direct-cost">
        <%= number_to_currency(@estimate.subtotal, unit: "¥", precision: 0) %>
      </p>
    </div>
    <div class="text-center">
      <p class="text-sm text-gray-600">予算合計</p>
      <p class="text-xl font-bold text-gray-900" id="budget-total-display">
        <%= number_to_currency(@estimate.budget_total, unit: "¥", precision: 0) %>
      </p>
    </div>
    <div class="text-center">
      <p class="text-sm text-gray-600">粗利</p>
      <p class="text-xl font-bold <%= @estimate.gross_profit >= 0 ? 'text-green-600' : 'text-red-600' %>" id="budget-gross-profit">
        <%= number_to_currency(@estimate.gross_profit, unit: "¥", precision: 0) %>
      </p>
    </div>
    <div class="text-center">
      <p class="text-sm text-gray-600">粗利率</p>
      <p class="text-xl font-bold <%= @estimate.gross_profit >= 0 ? 'text-green-600' : 'text-red-600' %>" id="budget-profit-rate">
        <%= @estimate.profit_rate %>%
      </p>
    </div>
  </div>
</div>

<script>
(function() {
  function formatCurrency(amount) {
    return '¥' + Math.round(amount).toLocaleString();
  }

  // 工種セクションの展開/折りたたみ
  window.toggleBudgetCategory = function(header) {
    const section = header.closest('.budget-category-section');
    const content = section.querySelector('.budget-category-content');
    const chevron = header.querySelector('.budget-chevron');

    if (content.style.display === 'none') {
      content.style.display = 'block';
      chevron.style.transform = 'rotate(0deg)';
    } else {
      content.style.display = 'none';
      chevron.style.transform = 'rotate(-90deg)';
    }
  };

  function calculateBudgetTotals() {
    let budgetTotal = 0;

    // 各カテゴリの小計を計算
    document.querySelectorAll('.budget-category-section').forEach(section => {
      let categoryTotal = 0;

      section.querySelectorAll('.budget-item-row').forEach(row => {
        if (row.style.display !== 'none') {
          const qty = parseFloat(row.dataset.estimateQty) || 0;
          const price = parseFloat(row.querySelector('.budget-price')?.value) || 0;
          const amount = Math.round(qty * price);
          categoryTotal += amount;

          const amountCell = row.querySelector('.budget-amount');
          if (amountCell) {
            amountCell.textContent = amount > 0 ? formatCurrency(amount) : '-';
          }
        }
      });

      // カテゴリヘッダーの予算表示を更新
      const categoryTotalEl = section.querySelector('.budget-category-total');
      if (categoryTotalEl) {
        categoryTotalEl.textContent = '予算: ' + formatCurrency(categoryTotal);
      }

      // カテゴリフッターの小計を更新
      const categorySubtotalEl = section.querySelector('.budget-category-subtotal');
      if (categorySubtotalEl) {
        categorySubtotalEl.textContent = formatCurrency(categoryTotal);
      }

      budgetTotal += categoryTotal;
    });

    // 全体の予算表示を更新
    const budgetTotalDisplay = document.getElementById('budget-total-display');
    if (budgetTotalDisplay) {
      budgetTotalDisplay.textContent = formatCurrency(budgetTotal);
    }

    // 見積金額を取得
    const directCostEl = document.getElementById('budget-direct-cost');
    const directCost = parseInt(directCostEl?.textContent.replace(/[¥,]/g, '')) || 0;

    // 粗利計算
    const grossProfit = directCost - budgetTotal;
    const profitRate = directCost > 0 ? (grossProfit / directCost * 100).toFixed(1) : 0;

    const profitEl = document.getElementById('budget-gross-profit');
    if (profitEl) {
      profitEl.textContent = formatCurrency(grossProfit);
      profitEl.className = 'text-xl font-bold ' + (grossProfit >= 0 ? 'text-green-600' : 'text-red-600');
    }

    const profitRateEl = document.getElementById('budget-profit-rate');
    if (profitRateEl) {
      profitRateEl.textContent = profitRate + '%';
      profitRateEl.className = 'text-xl font-bold ' + (grossProfit >= 0 ? 'text-green-600' : 'text-red-600');
    }

    // 表紙タブの予算情報も更新
    const coverBudgetTotal = document.getElementById('cover-budget-total');
    if (coverBudgetTotal) {
      coverBudgetTotal.textContent = formatCurrency(budgetTotal);
    }
    const coverGrossProfit = document.getElementById('cover-gross-profit');
    if (coverGrossProfit) {
      coverGrossProfit.textContent = formatCurrency(grossProfit) + '（' + profitRate + '%）';
      coverGrossProfit.className = 'font-medium ' + (grossProfit >= 0 ? 'text-green-600' : 'text-red-600');
    }
  }

  // 予算入力イベント
  document.querySelectorAll('.budget-price').forEach(input => {
    input.addEventListener('input', calculateBudgetTotals);
  });

  // 内訳明細タブからの更新イベントを受信
  window.addEventListener('estimateUpdated', function(e) {
    const directCostEl = document.getElementById('budget-direct-cost');
    if (directCostEl && e.detail.subtotal !== undefined) {
      directCostEl.textContent = formatCurrency(e.detail.subtotal);
      calculateBudgetTotals();
    }
  });

  // グローバルに公開（タブ切り替え時に再計算）
  window.recalculateBudgetTotals = calculateBudgetTotals;

  // 初期計算
  calculateBudgetTotals();
})();
</script>
