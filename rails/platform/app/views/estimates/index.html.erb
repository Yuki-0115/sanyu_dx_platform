<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">見積一覧</h1>
      <p class="text-gray-600"><%= @project.name %></p>
    </div>
    <div class="flex gap-2">
      <%= link_to "案件詳細", @project, class: "btn-secondary" %>
      <%= link_to "新規作成", new_project_estimate_path(@project), class: "btn-primary" %>
    </div>
  </div>

  <% if @estimates.any? %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">見積番号</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">見積日</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">見積金額</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">予算金額</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">粗利</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">ステータス</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @estimates.each do |estimate| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to estimate.estimate_number, project_estimate_path(@project, estimate),
                    class: "text-blue-600 hover:underline font-medium" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-600">
                <%= estimate.estimate_date&.strftime("%Y/%m/%d") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right font-medium">
                <%= number_to_currency(estimate.total_amount, unit: "¥", precision: 0) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-gray-600">
                <%= number_to_currency(estimate.budget_total, unit: "¥", precision: 0) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <% if estimate.gross_profit >= 0 %>
                  <span class="text-green-600">
                    <%= number_to_currency(estimate.gross_profit, unit: "¥", precision: 0) %>
                    (<%= estimate.profit_rate %>%)
                  </span>
                <% else %>
                  <span class="text-red-600">
                    <%= number_to_currency(estimate.gross_profit, unit: "¥", precision: 0) %>
                    (<%= estimate.profit_rate %>%)
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <% case estimate.status %>
                <% when "draft" %>
                  <span class="px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-800">下書き</span>
                <% when "submitted" %>
                  <span class="px-2 py-1 text-xs rounded-full bg-yellow-100 text-yellow-800">提出済</span>
                <% when "approved" %>
                  <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">承認済</span>
                <% when "rejected" %>
                  <span class="px-2 py-1 text-xs rounded-full bg-red-100 text-red-800">却下</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <div class="flex justify-end gap-2">
                  <%= link_to "編集", edit_project_estimate_path(@project, estimate),
                      class: "text-blue-600 hover:underline text-sm" %>
                  <%= link_to "削除", project_estimate_path(@project, estimate),
                      data: { turbo_method: :delete, turbo_confirm: "削除してよろしいですか？" },
                      class: "text-red-600 hover:underline text-sm" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-8 text-center">
      <p class="text-gray-500 mb-4">見積書がありません</p>
      <%= link_to "新規作成", new_project_estimate_path(@project), class: "btn-primary" %>
    </div>
  <% end %>
</div>
