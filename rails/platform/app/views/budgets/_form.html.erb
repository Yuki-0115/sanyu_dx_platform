<%= form_with model: budget, url: project_budget_path(@project), method: (budget.persisted? ? :patch : :post), class: "space-y-6" do |f| %>
  <% if budget.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">入力エラーがあります</h3>
          <ul class="mt-2 list-disc list-inside text-sm text-red-700">
            <% budget.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-gray-50 rounded-lg p-4 mb-6">
    <h4 class="text-sm font-medium text-gray-700 mb-2">案件情報</h4>
    <dl class="grid grid-cols-2 gap-4 text-sm">
      <div>
        <dt class="text-gray-500">案件名</dt>
        <dd class="font-medium"><%= @project.name %></dd>
      </div>
      <div>
        <dt class="text-gray-500">受注金額</dt>
        <dd class="font-medium">
          <%= @project.order_amount ? number_to_currency(@project.order_amount, unit: "¥", precision: 0) : "未設定" %>
        </dd>
      </div>
    </dl>
  </div>

  <%# 人工単価設定 %>
  <div class="bg-white border border-gray-200 rounded-lg p-6">
    <h4 class="text-lg font-medium text-gray-900 mb-2">人工単価</h4>
    <p class="text-sm text-gray-500 mb-6">現場台帳で原価を計算する際に使用する1人工あたりの単価です。</p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <%= f.label :regular_labor_unit_price, "正社員単価", class: "block text-sm font-medium text-gray-700" %>
        <p class="text-xs text-gray-500 mb-2">正社員の1人工あたりの原価</p>
        <div class="relative rounded-md shadow-sm">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">¥</span>
          </div>
          <%= f.number_field :regular_labor_unit_price, step: 1000,
              class: "block w-full pl-8 pr-12 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
              placeholder: "18000" %>
          <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">/人工</span>
          </div>
        </div>
      </div>

      <div>
        <%= f.label :outsourcing_unit_price, "外注単価（人工）", class: "block text-sm font-medium text-gray-700" %>
        <p class="text-xs text-gray-500 mb-2">外注の人工計算時の単価（請負は日報で金額入力）</p>
        <div class="relative rounded-md shadow-sm">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">¥</span>
          </div>
          <%= f.number_field :outsourcing_unit_price, step: 1000,
              class: "block w-full pl-8 pr-12 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
              placeholder: "18000" %>
          <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">/人工</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# 計算例 %>
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
    <h4 class="text-sm font-medium text-blue-800 mb-2">現場台帳での計算方法</h4>
    <div class="text-sm text-blue-700 space-y-1">
      <p><strong>労務費</strong> = 正社員単価 × 正社員の人工数（日報から集計）</p>
      <p><strong>外注費（人工）</strong> = 外注単価 × 外注の人工数（日報から集計）</p>
      <p><strong>外注費（請負）</strong> = 日報で入力した請負金額の合計</p>
    </div>
  </div>

  <%# 予算金額 %>
  <div class="bg-white border border-gray-200 rounded-lg p-6">
    <h4 class="text-lg font-medium text-gray-900 mb-2">予算金額</h4>
    <p class="text-sm text-gray-500 mb-6">現場台帳で予算対比を表示するための予算額です。</p>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <div>
        <%= f.label :labor_cost, "労務費", class: "block text-sm font-medium text-gray-700" %>
        <div class="relative rounded-md shadow-sm mt-1">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">¥</span>
          </div>
          <%= f.number_field :labor_cost, step: 1000,
              class: "block w-full pl-8 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
              placeholder: "0" %>
        </div>
      </div>

      <div>
        <%= f.label :material_cost, "材料費", class: "block text-sm font-medium text-gray-700" %>
        <div class="relative rounded-md shadow-sm mt-1">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">¥</span>
          </div>
          <%= f.number_field :material_cost, step: 1000,
              class: "block w-full pl-8 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
              placeholder: "0" %>
        </div>
      </div>

      <div>
        <%= f.label :outsourcing_cost, "外注費", class: "block text-sm font-medium text-gray-700" %>
        <div class="relative rounded-md shadow-sm mt-1">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">¥</span>
          </div>
          <%= f.number_field :outsourcing_cost, step: 1000,
              class: "block w-full pl-8 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
              placeholder: "0" %>
        </div>
      </div>

      <div>
        <%= f.label :machinery_own_cost, "機械（自社）", class: "block text-sm font-medium text-gray-700" %>
        <div class="relative rounded-md shadow-sm mt-1">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">¥</span>
          </div>
          <%= f.number_field :machinery_own_cost, step: 1000,
              class: "block w-full pl-8 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
              placeholder: "0" %>
        </div>
      </div>

      <div>
        <%= f.label :machinery_rental_cost, "機械（レンタル）", class: "block text-sm font-medium text-gray-700" %>
        <div class="relative rounded-md shadow-sm mt-1">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">¥</span>
          </div>
          <%= f.number_field :machinery_rental_cost, step: 1000,
              class: "block w-full pl-8 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
              placeholder: "0" %>
        </div>
      </div>

      <div>
        <%= f.label :expense_cost, "経費（その他）", class: "block text-sm font-medium text-gray-700" %>
        <div class="relative rounded-md shadow-sm mt-1">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">¥</span>
          </div>
          <%= f.number_field :expense_cost, step: 1000,
              class: "block w-full pl-8 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
              placeholder: "0" %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to "キャンセル", project_budget_path(@project),
        class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 cursor-pointer">
      <%= budget.persisted? ? "更新" : "保存" %>
    </button>
  </div>
<% end %>
