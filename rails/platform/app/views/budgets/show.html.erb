  <div class="max-w-2xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <div class="flex justify-between items-center mb-6">
        <div>
          <h2 class="text-2xl font-bold text-gray-900">単価設定</h2>
          <p class="text-gray-600">
            <%= link_to @project.name, project_path(@project), class: "text-blue-600 hover:underline" %>
          </p>
        </div>
        <div class="flex space-x-2">
          <% if @budget.persisted? %>
            <%= link_to "編集", edit_project_budget_path(@project),
                class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <% end %>
          <%= link_to "案件に戻る", project_path(@project),
              class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      </div>

      <% if @budget.persisted? %>
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-6">人工単価</h3>

          <dl class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="bg-blue-50 rounded-lg p-4">
              <dt class="text-sm font-medium text-gray-500">正社員単価</dt>
              <dd class="mt-1 text-2xl font-bold text-gray-900">
                <%= number_to_currency(@budget.regular_labor_unit_price, unit: "¥", precision: 0) %>
                <span class="text-sm font-normal text-gray-500">/人工</span>
              </dd>
            </div>
            <div class="bg-orange-50 rounded-lg p-4">
              <dt class="text-sm font-medium text-gray-500">外注単価（人工）</dt>
              <dd class="mt-1 text-2xl font-bold text-gray-900">
                <%= number_to_currency(@budget.outsourcing_unit_price, unit: "¥", precision: 0) %>
                <span class="text-sm font-normal text-gray-500">/人工</span>
              </dd>
            </div>
          </dl>

          <div class="mt-6 p-4 bg-gray-50 rounded-lg">
            <h4 class="text-sm font-medium text-gray-700 mb-2">現場台帳での使われ方</h4>
            <ul class="text-sm text-gray-600 space-y-1">
              <li><strong>労務費</strong> = 正社員単価 × 正社員の人工数</li>
              <li><strong>外注費（人工）</strong> = 外注単価 × 外注の人工数</li>
              <li><strong>外注費（請負）</strong> = 日報で入力した請負金額の合計</li>
            </ul>
          </div>

          <div class="mt-6 pt-6 border-t border-gray-200">
            <%= link_to project_site_ledger_path(@project), class: "inline-flex items-center text-blue-600 hover:text-blue-800" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              現場台帳で原価を確認
            <% end %>
          </div>
        </div>

        <%# 見積書の予算明細 %>
        <% if @estimate&.estimate_categories&.any? || @estimate&.estimate_items&.any? %>
          <div class="bg-white shadow rounded-lg p-6 mt-6">
            <div class="flex justify-between items-center mb-4">
              <h3 class="text-lg font-medium text-gray-900">見積書 予算明細</h3>
              <%= link_to "見積書を編集", edit_project_estimate_path(@project, @estimate),
                  class: "text-sm text-blue-600 hover:text-blue-800" %>
            </div>

            <% if @estimate.estimate_categories.any? %>
              <% @estimate.estimate_categories.order(:sort_order).each_with_index do |category, cat_idx| %>
                <div class="mb-4">
                  <div class="bg-green-100 px-4 py-3 flex justify-between items-center rounded-t-lg">
                    <div class="flex items-center gap-2">
                      <span class="text-green-800 font-medium"><%= cat_idx + 1 %>. <%= category.name %> 一式</span>
                      <span class="text-green-600 text-sm">（<%= category.estimate_items.count %>項目）</span>
                    </div>
                    <div class="flex items-center gap-4">
                      <span class="text-green-700 text-sm">見積: <%= number_to_currency(category.direct_cost, unit: "¥", precision: 0) %></span>
                      <span class="text-green-800 font-medium">
                        予算: <%= number_to_currency(category.estimate_items.sum { |i| i.budget_amount.to_i }, unit: "¥", precision: 0) %>
                      </span>
                    </div>
                  </div>

                  <div class="overflow-x-auto border border-gray-200 rounded-b-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                      <thead class="bg-green-50">
                        <tr>
                          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">名称</th>
                          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">規格</th>
                          <th class="px-3 py-2 text-right text-xs font-medium text-gray-500">数量</th>
                          <th class="px-3 py-2 text-center text-xs font-medium text-gray-500">単位</th>
                          <th class="px-3 py-2 text-right text-xs font-medium text-gray-500">見積単価</th>
                          <th class="px-3 py-2 text-right text-xs font-medium text-gray-500">予算単価</th>
                          <th class="px-3 py-2 text-right text-xs font-medium text-gray-500">予算金額</th>
                        </tr>
                      </thead>
                      <tbody class="bg-white divide-y divide-gray-200">
                        <% category.estimate_items.order(:sort_order).each do |item| %>
                          <% next if item.name.blank? %>
                          <tr>
                            <td class="px-3 py-2 text-sm text-gray-700"><%= item.name %></td>
                            <td class="px-3 py-2 text-sm text-gray-500"><%= item.specification.presence || "-" %></td>
                            <td class="px-3 py-2 text-sm text-right text-gray-700">
                              <%= item.quantity.present? ? number_with_precision(item.quantity, precision: 2, strip_insignificant_zeros: true) : "-" %>
                            </td>
                            <td class="px-3 py-2 text-sm text-center text-gray-500"><%= item.unit.presence || "-" %></td>
                            <td class="px-3 py-2 text-sm text-right text-gray-500">
                              <%= item.unit_price.present? ? number_to_currency(item.unit_price, unit: "¥", precision: 0) : "-" %>
                            </td>
                            <td class="px-3 py-2 text-sm text-right text-gray-700">
                              <%= item.budget_unit_price.present? ? number_to_currency(item.budget_unit_price, unit: "¥", precision: 0) : "-" %>
                            </td>
                            <td class="px-3 py-2 text-sm text-right font-medium text-gray-900">
                              <%= item.budget_amount.to_i > 0 ? number_to_currency(item.budget_amount, unit: "¥", precision: 0) : "-" %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                      <tfoot class="bg-green-50">
                        <tr>
                          <td colspan="5" class="px-3 py-2 text-sm font-medium text-gray-700">工種小計</td>
                          <td></td>
                          <td class="px-3 py-2 text-right font-medium text-gray-900">
                            <%= number_to_currency(category.estimate_items.sum { |i| i.budget_amount.to_i }, unit: "¥", precision: 0) %>
                          </td>
                        </tr>
                      </tfoot>
                    </table>
                  </div>
                </div>
              <% end %>
            <% elsif @estimate.estimate_items.any? { |i| i.name.present? } %>
              <div class="overflow-x-auto border border-gray-200 rounded-lg">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-green-50">
                    <tr>
                      <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">名称</th>
                      <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">規格</th>
                      <th class="px-3 py-2 text-right text-xs font-medium text-gray-500">数量</th>
                      <th class="px-3 py-2 text-center text-xs font-medium text-gray-500">単位</th>
                      <th class="px-3 py-2 text-right text-xs font-medium text-gray-500">見積単価</th>
                      <th class="px-3 py-2 text-right text-xs font-medium text-gray-500">予算単価</th>
                      <th class="px-3 py-2 text-right text-xs font-medium text-gray-500">予算金額</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    <% @estimate.estimate_items.each do |item| %>
                      <% next if item.name.blank? %>
                      <tr>
                        <td class="px-3 py-2 text-sm text-gray-700"><%= item.name %></td>
                        <td class="px-3 py-2 text-sm text-gray-500"><%= item.specification.presence || "-" %></td>
                        <td class="px-3 py-2 text-sm text-right text-gray-700">
                          <%= item.quantity.present? ? number_with_precision(item.quantity, precision: 2, strip_insignificant_zeros: true) : "-" %>
                        </td>
                        <td class="px-3 py-2 text-sm text-center text-gray-500"><%= item.unit.presence || "-" %></td>
                        <td class="px-3 py-2 text-sm text-right text-gray-500">
                          <%= item.unit_price.present? ? number_to_currency(item.unit_price, unit: "¥", precision: 0) : "-" %>
                        </td>
                        <td class="px-3 py-2 text-sm text-right text-gray-700">
                          <%= item.budget_unit_price.present? ? number_to_currency(item.budget_unit_price, unit: "¥", precision: 0) : "-" %>
                        </td>
                        <td class="px-3 py-2 text-sm text-right font-medium text-gray-900">
                          <%= item.budget_amount.to_i > 0 ? number_to_currency(item.budget_amount, unit: "¥", precision: 0) : "-" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% end %>

            <%# 予算サマリー %>
            <div class="mt-4 grid grid-cols-2 sm:grid-cols-4 gap-4 p-4 bg-green-50 rounded-lg">
              <div class="text-center">
                <p class="text-xs sm:text-sm text-gray-600">見積金額（税抜）</p>
                <p class="text-lg sm:text-xl font-bold text-gray-900">
                  <%= number_to_currency(@estimate.subtotal, unit: "¥", precision: 0) %>
                </p>
              </div>
              <div class="text-center">
                <p class="text-xs sm:text-sm text-gray-600">予算合計</p>
                <p class="text-lg sm:text-xl font-bold text-gray-900">
                  <%= number_to_currency(@estimate.budget_total, unit: "¥", precision: 0) %>
                </p>
              </div>
              <div class="text-center">
                <p class="text-xs sm:text-sm text-gray-600">粗利</p>
                <p class="text-lg sm:text-xl font-bold <%= @estimate.gross_profit >= 0 ? 'text-green-600' : 'text-red-600' %>">
                  <%= number_to_currency(@estimate.gross_profit, unit: "¥", precision: 0) %>
                </p>
              </div>
              <div class="text-center">
                <p class="text-xs sm:text-sm text-gray-600">粗利率</p>
                <p class="text-lg sm:text-xl font-bold <%= @estimate.gross_profit >= 0 ? 'text-green-600' : 'text-red-600' %>">
                  <%= @estimate.profit_rate %>%
                </p>
              </div>
            </div>
          </div>
        <% elsif @project.estimate.nil? %>
          <div class="bg-white shadow rounded-lg p-6 mt-6 text-center">
            <p class="text-gray-500 mb-4">この案件にはまだ見積書がありません</p>
            <%= link_to "見積書を作成", new_project_estimate_path(@project),
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
          </div>
        <% end %>
      <% else %>
        <div class="bg-white shadow rounded-lg p-6 text-center">
          <p class="text-gray-500 mb-4">この案件にはまだ単価が設定されていません</p>
          <p class="text-sm text-gray-400 mb-4">デフォルト単価（¥18,000/人工）で計算されます</p>
          <%= link_to "単価を設定", new_project_budget_path(@project),
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
        </div>
      <% end %>
    </div>
  </div>
