<div class="min-h-screen bg-gray-100">
  <%= render "shared/navbar" %>

  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">ダッシュボード</h2>

      <!-- サマリーカード -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0 bg-blue-500 rounded-md p-3">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">総案件数</dt>
                  <dd class="text-2xl font-bold text-gray-900"><%= @total_projects %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0 bg-green-500 rounded-md p-3">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">進行中</dt>
                  <dd class="text-2xl font-bold text-gray-900"><%= @active_projects %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0 bg-yellow-500 rounded-md p-3">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">受注総額</dt>
                  <dd class="text-lg font-bold text-gray-900"><%= number_to_currency(@total_order_amount, unit: "¥", precision: 0) %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0 bg-purple-500 rounded-md p-3">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">予算総額</dt>
                  <dd class="text-lg font-bold text-gray-900"><%= number_to_currency(@total_budget_amount, unit: "¥", precision: 0) %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- 案件ステータス -->
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-medium text-gray-900">案件ステータス</h3>
            <% if current_employee.can_access?(:projects) %>
              <%= link_to "一覧", projects_path, class: "text-sm text-blue-600 hover:underline" %>
            <% end %>
          </div>
          <div class="space-y-3">
            <% Project::STATUSES.each do |status| %>
              <% count = @projects_by_status[status] || 0 %>
              <% next if count == 0 %>
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <span class="px-2 py-1 text-xs font-medium rounded-full <%= status_badge_class(status) %>">
                    <%= status_label(status) %>
                  </span>
                </div>
                <span class="text-sm font-medium text-gray-900"><%= count %>件</span>
              </div>
            <% end %>
            <% if @projects_by_status.empty? %>
              <p class="text-sm text-gray-500">案件がありません</p>
            <% end %>
          </div>
        </div>

        <!-- 直近の案件 -->
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-medium text-gray-900">直近の案件</h3>
            <% if current_employee.can_access?(:projects) %>
              <%= link_to "新規作成", new_project_path, class: "text-sm text-blue-600 hover:underline" %>
            <% end %>
          </div>
          <% if @recent_projects.any? %>
            <ul class="divide-y divide-gray-200">
              <% @recent_projects.each do |project| %>
                <li class="py-3">
                  <div class="flex items-center justify-between">
                    <div>
                      <% if current_employee.can_access?(:projects) %>
                        <%= link_to project.name, project_path(project), class: "text-sm font-medium text-blue-600 hover:underline" %>
                      <% else %>
                        <span class="text-sm font-medium text-gray-900"><%= project.name %></span>
                      <% end %>
                      <p class="text-xs text-gray-500"><%= project.client&.name %></p>
                    </div>
                    <span class="px-2 py-1 text-xs font-medium rounded-full <%= status_badge_class(project.status) %>">
                      <%= status_label(project.status) %>
                    </span>
                  </div>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-sm text-gray-500">案件がありません</p>
          <% end %>
        </div>

        <!-- 直近の日報 -->
        <% if current_employee.can_access?(:daily_reports) %>
          <div class="bg-white shadow rounded-lg p-6">
            <div class="flex justify-between items-center mb-4">
              <h3 class="text-lg font-medium text-gray-900">直近の日報</h3>
              <%= link_to "常用日報", external_daily_reports_path, class: "text-sm text-blue-600 hover:underline" %>
            </div>
            <% if @recent_reports.any? %>
              <ul class="divide-y divide-gray-200">
                <% @recent_reports.each do |report| %>
                  <li class="py-3">
                    <div class="flex items-center justify-between">
                      <div>
                        <% if report.is_external? %>
                          <%= link_to external_daily_report_path(report), class: "text-sm font-medium text-blue-600 hover:underline" do %>
                            <%= l(report.report_date) %> - <%= report.external_site_name %>
                            <span class="text-xs text-orange-600">[常用]</span>
                          <% end %>
                        <% else %>
                          <%= link_to project_daily_report_path(report.project, report), class: "text-sm font-medium text-blue-600 hover:underline" do %>
                            <%= l(report.report_date) %> - <%= report.project.name %>
                          <% end %>
                        <% end %>
                        <p class="text-xs text-gray-500">職長: <%= report.foreman.name %></p>
                      </div>
                      <span class="px-2 py-1 text-xs font-medium rounded-full <%= report.finalized? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                        <%= report.revised? ? '修正済' : (report.confirmed? ? '確定' : '下書き') %>
                      </span>
                    </div>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <p class="text-sm text-gray-500">日報がありません</p>
            <% end %>
          </div>
        <% end %>

        <!-- クイックアクション -->
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">クイックアクション</h3>
          <div class="grid grid-cols-2 gap-4">
            <% if current_employee.can_access?(:projects) %>
              <%= link_to new_project_path, class: "flex items-center p-3 bg-blue-50 rounded-lg hover:bg-blue-100" do %>
                <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                <span class="ml-3 text-sm font-medium text-blue-900">新規案件</span>
              <% end %>
            <% end %>

            <% if current_employee.can_access?(:projects) %>
              <%= link_to projects_path, class: "flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100" do %>
                <svg class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
                </svg>
                <span class="ml-3 text-sm font-medium text-gray-900">案件一覧</span>
              <% end %>
            <% end %>

            <% if current_employee.can_access?(:daily_reports) %>
              <%= link_to new_external_daily_report_path, class: "flex items-center p-3 bg-orange-50 rounded-lg hover:bg-orange-100" do %>
                <svg class="h-6 w-6 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <span class="ml-3 text-sm font-medium text-orange-900">常用日報</span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="mt-8 bg-white shadow rounded-lg p-6">
        <p class="text-gray-600">
          <%= current_employee.name %>さん、sunyutechへようこそ。<br>
          ロール: <span class="font-semibold"><%= current_employee.role %></span>
        </p>
      </div>
    </div>
  </main>
</div>
