<div class="flex flex-col items-center justify-center min-h-[60vh]">
  <div class="bg-white shadow-lg rounded-lg p-6 w-full max-w-sm">
    <h1 class="text-2xl font-bold text-center text-gray-900 mb-6">sunyutech Worker</h1>
    <p class="text-sm text-gray-600 text-center mb-6">作業員ログイン</p>

    <%= form_with url: login_path, method: :post, class: "space-y-4" do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">社員番号</label>
        <%= f.text_field :code, class: "w-full px-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg",
            placeholder: "例: WRK001", required: true, autofocus: true %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">パスワード（生年月日4桁）</label>
        <%= f.password_field :password, class: "w-full px-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg",
            placeholder: "例: 0415", required: true %>
        <p class="text-xs text-gray-500 mt-1">生年月日の月日4桁（例: 4月15日 → 0415）</p>
      </div>

      <%= f.submit "ログイン", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-200 cursor-pointer" %>
    <% end %>
  </div>
</div>
