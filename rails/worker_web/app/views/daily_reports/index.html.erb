<div class="space-y-4">
  <div class="bg-white rounded-lg shadow p-4">
    <div class="flex justify-between items-center">
      <h2 class="text-lg font-semibold text-gray-900">日報一覧</h2>
      <%= link_to new_daily_report_path, class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium px-4 py-2 rounded-lg" do %>
        新規作成
      <% end %>
    </div>
  </div>

  <% if @daily_reports.any? %>
    <div class="space-y-2">
      <% @daily_reports.each do |report| %>
        <%= link_to daily_report_path(report), class: "block bg-white rounded-lg shadow p-4 hover:bg-gray-50" do %>
          <div class="flex justify-between items-start">
            <div>
              <div class="text-sm font-medium text-gray-900">
                <%= report.report_date.strftime("%Y/%m/%d (%a)") %>
              </div>
              <div class="text-xs text-gray-500 mt-0.5">
                <%= report.site_name || "未設定" %>
              </div>
              <% if report.weather.present? %>
                <div class="text-xs text-gray-400 mt-0.5"><%= report.weather_label %></div>
              <% end %>
            </div>
            <div class="flex flex-col items-end">
              <span class="inline-block px-2 py-0.5 text-xs rounded-full
                <%= report.draft? ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
                <%= report.draft? ? "下書き" : "確定" %>
              </span>
              <div class="text-xs text-gray-400 mt-1">
                <%= report.attendances.size %>名
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-8 text-center text-sm text-gray-500">
      日報がありません
    </div>
  <% end %>
</div>
